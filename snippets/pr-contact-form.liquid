{%- assign contact_form_id = 'ContactForm-' | append: section.id -%}

{%- form 'contact', id: contact_form_id, class: 'contact-form' -%}
    {%- if form.posted_successfully? -%}
        <div class="form-message" data-form-message="contact">
            <div class="alertBox alertBox--success">
                <p class="alertBox-message">
                    Thank you! Your message has been sent successfully.
                </p>
            </div>
        </div>
    {%- elsif form.errors -%}
        <div class="form-message" data-form-message="contact">
            <div class="alertBox alertBox--error">
                <p class="alertBox-message">
                    <ul>
                        {% for field in form.errors %}
                            <li>
                                {{ form.errors.translated_fields[field] | capitalize }} - {{ form.errors.messages[field] }}
                            </li>
                        {% endfor %}
                    </ul>
                </p>
            </div>
        </div>
    {%- endif -%}
    
    <div class="form-field{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--slide-in{% endif %}">
        <label class="form-label" for="contactFormName-{{ section.id }}">
            Name
        </label>
        <input class="form-input form-input-placeholder"
            type="text"
            id="contactFormName-{{ section.id }}"
            name="contact[name]"
            autocomplete="name"
            autocapitalize="words"
            value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
            aria-required="false"
        >
    </div>
    
    <div class="form-field{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--slide-in{% endif %}">
        <label class="form-label" for="ContactFormPhone-{{ section.id }}">
            Phone
        </label>
        <input class="form-input form-input-placeholder"
            type="tel"
            id="ContactFormPhone-{{ section.id }}"
            name="contact[phone]"
            autocomplete="tel"
            pattern="[0-9]*"
            value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
            aria-required="false"
        >
    </div>
    
    <div class="form-field{% if form.errors contains "email" %} form-field--error{% endif %}{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--slide-in{% endif %}">
        <label class="form-label" for="contactFormEmail-{{ section.id }}">
            Email <span class="red-asterisk">*</span>
        </label>
        <input class="form-input form-input-placeholder{% if form.errors contains "email" %} error{% endif %}"
            type="email"
            name="contact[email]"
            id="contactFormEmail-{{ section.id }}"
            spellcheck="false"
            autocomplete="email"
            autocorrect="off"
            autocapitalize="off"
            value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
            aria-required="true"
            {% if form.errors contains 'email' %}
                aria-invalid="true"
                aria-describedby="ContactForm-email-error"
            {% endif %}
            required
        >
    </div>
    
    <div class="form-field{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--slide-in{% endif %}">
        <label class="form-label" for="contactFormMessage-{{ section.id }}">
            Message <span class="red-asterisk">*</span>
        </label>
        <textarea class="form-input form-input-hiddenPlaceholder" rows="8" name="contact[body]" id="contactFormMessage-{{ section.id }}" 
            aria-required="true"
            required
        >{{- form.body -}}</textarea>
    </div>
    
    <div class="form-actions{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--slide-in{% endif %}">
        <input type="submit" class="button button--primary" value="Send Message" role="button" data-button-message="contact">
    </div>
{%- endform -%}

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('{{ contact_form_id }}');
    if (form) {
        form.addEventListener('submit', function(e) {
            // Show loading state
            const submitBtn = form.querySelector('input[type="submit"]');
            if (submitBtn) {
                submitBtn.value = 'Sending...';
                submitBtn.disabled = true;
            }
        });
    }
});
</script>
