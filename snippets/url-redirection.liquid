{% comment %}
  Automatic redirect for visitors from India (IN) to .in website
{% endcomment %}

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // ðŸ”Ž Try getting visitor country from Shopify global object
    var userCountry = window.Shopify && Shopify.country ? Shopify.country : null;
  
    // If no data yet, retry after 1 second (Shopify loads country async)
    if (!userCountry) {
      setTimeout(arguments.callee, 10);
      return;
    }
  
    // Force redirect to India store if visitor is from India
    if (userCountry === "IN") {
      window.location.href = "https://wellnessextract.in";
    }
  });
</script>