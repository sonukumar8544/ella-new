{% liquid
    assign url = shop.url
    assign page_type = request.page_type
%}
{%- if page_type == 'product' -%}
    {%- liquid
        assign fa_current_variant = product.selected_or_first_available_variant
        assign fa_variant_count = product.variants | size
        assign fa_count = 0
    -%}
  
<!-- sonooooooooooooooooooo -->
  {% assign original_price1 = product.selected_or_first_available_variant.price %}
<!-- {{ original_price1 | money_with_currency | strip_html }} -->
  {% assign discount1 = original_price1 | times: 0.15 %}
          {% assign new_saleprice1 = original_price1 | minus: discount1 %}
  <!-- {{ new_saleprice1 | money_with_currency}} -->
  
<script type="application/ld+json">
{
  "@context": "https://schema.org/",
  "@type": "Product",
  "name": "{{ product.title | strip_html | escape }}",
  "url": "{{ shop.url }}{{ product.url }}",
  {%- if product.variants.first.barcode.size == 12 -%}
    "gtin12": {{ product.variants.first.barcode }},
  {%- endif -%}
  {%- if product.variants.first.barcode.size == 13 -%}
    "gtin13": {{ product.variants.first.barcode }},
  {%- endif -%}
  {%- if product.variants.first.barcode.size == 14 -%}
    "gtin14": {{ product.variants.first.barcode }},
  {%- endif -%}
  "productID": "{{ product.id }}",
  "brand": {
    "@type": "Thing",
    "name": "{{ product.vendor | escape }}"
  },
  "description": "{{ product.description | remove: "<span class=money>" }}",
  "image": "https:{{ product.featured_image.src | img_url: 'master' }}",
  "offers": {
    "@type": "Offer",
    "priceCurrency": "{{ shop.currency }}",
    "price": "{{ original_price1 | money_with_currency | strip_html}}",
    "availability": "{% if product.available %}http://schema.org/InStock{% else %}http://schema.org/OutOfStock{% endif %}",
    "url": "{{ shop.url }}{{ product.url }}",
    "itemCondition": "https://schema.org/NewCondition",
    "seller": {
      "@type": "Organization",
      "name": "{{ shop.name }}"
    }
  }
  {% if product.metafields.reviews.rating.value != blank %},
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "{{ 4.8 }}",
    "ratingCount": "{{ product.metafields.reviews.rating_count.value }}"
  }
  {% endif %}
}
</script>
  
    <script type="application/ld+json">
    {
        "@context": "http://schema.org/",
        "@type": "BreadcrumbList",
        "itemListElement": [{
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "{{ url }}"
        },
        {%- if collection -%}
            {
                "@type": "ListItem",
                "position": 2,
                "name": "{{ collection.title }}",
                "item": "{{ url }}/{{ collection.handle }}"
            },
            {
                "@type": "ListItem",
                "position": 3,
                "name": "{{ product.title }}",
                "item": "{{ canonical_url }}"
            }
        {%- else -%}
            {
                "@type": "ListItem",
                "position": 2,
                "name": "{{ product.title }}",
                "item": "{{ canonical_url }}"
            }
        {%- endif -%}]
    }
    </script>
{%- elsif page_type == 'article' -%}
    <script type="application/ld+json">
        {{ article | structured_data }}
    </script>
    <script type="application/ld+json">
    {
        "@context": "http://schema.org/",
        "@type": "BreadcrumbList",
        "itemListElement": [{
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "{{ url }}"
        },
        {
            "@type": "ListItem",
            "position": 2,
            "name": "{{ article.title }}",
            "item": "{{ canonical_url }}"
        }]
    }
    </script>
{%- elsif page_type == 'collection' and collection.handle -%}
    <script type="application/ld+json">
    {
        "@context": "http://schema.org/",
        "@type": "CollectionPage",
        "name": "{{ collection.title }}",
        "url": "{{ canonical_url }}",
        "description": "{{ collection.description | split: '[lang2]' | first | strip_html }}"
    }
    </script>
    <script type="application/ld+json">
    {
        "@context": "http://schema.org/",
        "@type": "BreadcrumbList",
        "itemListElement": [{
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "{{ url }}"
        },
        {
            "@type": "ListItem",
            "position": 2,
            "name": "{{ collection.title }}",
            "item": "{{ canonical_url }}"
        }]
    }
    </script>
{%- endif -%}