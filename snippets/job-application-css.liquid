
    {% style %}
.template-page h1.main-page-title.page-header {
    text-align: center;
    font-size: 34px;
    letter-spacing: 0.5px;
    text-transform: capitalize;
    font-weight: 700;
  margin-bottom:30px;
}
      
    .field.resume_fields div {
    padding: 18px;
    border: 2px dashed #bbb;
    background-color: #fff;
    /* width: 49%; */
    position: relative;
    margin-bottom: 20px;
    border-radius: 5px;
    }
    .text_resumes span{font-size:16px;}
    input[type="file"] {
    margin-bottom: 5px;
    transition: border-color .25s ease-in-out;
    &::file-selector-button{
    padding: 1em 1.5em;
    border-width: 0;
    border-radius: 2em;
    background-color: hsl(210 70% 30%);
    color: hsl(210 40% 90%);
    transition: all .25s ease-in-out;
    cursor: pointer;
    margin-right: 1em;
    }
    &:hover {
    border-color: #888;
    
    &::file-selector-button{
    
    background-color: hsl(210 70% 40%);
    }
    }
    }
    form#job_application {
    width: 100%;
    margin: auto;
    }
    .job-form{
    font-size: 14px;
    }
    .job-form .fieldset {
    border: 0;
    padding: 0;
    max-width: 70%;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 10px;
    margin: auto;
      justify-content: space-between;
    }
    .fieldset label span{
    font-size: 16.4px;
      color:#374650 !important;
    }
    .cstm_input_text input {
    background: #ffffff;
    background-clip: padding-box;
    font-family: 'Poppins', 'Poppins', sans-serif;
    line-height: 1.42857143;
    padding: 0 9px;
    vertical-align: baseline;
    width: 100%;
    box-sizing: border-box;
    font-size: 15px!important;
    border: 1px solid #086b929e !important;
    border-radius: 5px!important;
    height: 44px!important;
    text-transform: initial;
      margin-top:5px;
      color:#374650 !important;
    }
      .cst_email__id input.input-text{
         text-transform: lowercase;
      }
    .cstm_input_text:hover input {
    border: 1px solid #0000005e !important;
    }
    .cstm_input_text{
    width:48%;
    margin-bottom: 20px !important;
    }
    .job-form .fieldset > .field,
    .job-form .fieldset > .fields > .field {
    
    display: block;
    
    }
    .job-form .fieldset > .field:last-child,
    .job-form .fieldset > .fields > .field:last-child {
    margin-bottom: 0;
    }
    .action-cta {
    margin: 23px auto 30px;
    text-align: center;
    justify-content: center;
    }
    .job-form .required-field::after {
    content: " *";
    color: #f00;
    }
    .job-form select {
    background: #ffffff url('../../frontend/ET/base_lite/en_US/images/select-bg.svg') no-repeat 100% 45%;
    background-clip: padding-box;
    border: 1px solid #7a7a7a;
    border-radius: 5px;
    font-family: 'Poppins', 'Poppins', sans-serif;
    font-size: 15px;
      color:#374650 !important;
    height: 45px;
    line-height: 1.42857143;
    padding: 0 9px;
    vertical-align: baseline;
    width: 100%;
    box-sizing: border-box;
    }
    .job-form input[type="radio"]:checked:after ,
    .job-form input[type="checkbox"]:checked:after {
    display: block;
    content: "\2713";
    background: #fff;
    font-size: 18px;
    text-align: center;
    vertical-align: middle;
    font-weight: 900;
    
    }
    .job-form input[type="checkbox"] {
    margin: 2px 5px 0 0;
    width: 32px;
    height:32px !important;
    position: initial;
    display: block;
    align-items: center;
    justify-content: center;
    clip: unset;
    border: 1px solid #086b929e !important;
    border-radius: 5px !important;
    }
    .checkbox__grid {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    margin-top:5px;
    }
    .sub__checkbox__grid {
    display: flex;
    align-items: center;
    gap: 3px;
    width: 49%;
    }
    .sub__checkbox__grid label {
    font-size: 17px;
    }
    
    .job-form input[type="radio"] {
    margin: 2px 5px 0 0;
    width: 32px;
    height:32px !important;
    position: initial;
    display: block;
    align-items: center;
    justify-content: center;
    clip: unset;
    border: 1px solid #086b929e !important;
    border-radius: 5px !important;
    }
   
    
    .job-form .primary-btn {
    border: 1px solid #000;
    color: #000;
    cursor: pointer;
    display: inline-block;
    padding: 15px 20px;
    box-sizing: border-box;
    vertical-align: middle;
    text-transform: capitalize;
    border-radius: 5px;
    font-size: 21px;
    background-color: #fff;
    max-height: 55px;
    font-weight: 600;
    }
    .job-form .primary-btn:hover {
    background: #fff;
    border: 2px solid #086b92;
    color: #086b92;
    }
    small.error {
    color: red;
    margin-top: 10px;
    text-transform: capitalize;
    }
    @media(max-width:840px){
    h1.main-page-title.page-header, .account-page .page-header {
    padding: 0;
    text-align: center;
    font-size: 2.3rem;
    color: #374650;
    font-family: Nunito;
    font-weight: 800;
    line-height: normal;
    }
    
    form#job_application{
    width:96%;
    margin: auto;
    }
    .resume_fields,
    .cstm_input_text{
    width:98%;
    margin-bottom: 10px !important;
    }
    .field.resume_fields div {
    padding: 18px;
    border: 2px dashed #bbb;
    background-color: #fff;
    transition: border-color .25sease-in-out;
    width: 100%;
    position: relative;
    margin-bottom: 10px;
    }
    }
      @media(max-width: 768px){
        .job-form .fieldset{
          max-width:100%;
        }
      }

      /* phone css */

    
    {% endstyle %}
  
