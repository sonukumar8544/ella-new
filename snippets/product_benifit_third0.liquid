{% assign benefits = product.metafields.custom.product_3_0_benefits.value | parse_json %}

<div class="health-benefits_thirdO" id="benefit__{{ block.id }}">
  {% for group in benefits %}
    {% assign titles = group.benefits_title %}
    {% assign urls = group.benefit_url %}

    {% if titles and urls %}
      {% for i in (0..titles.size | minus: 1) %}
        <div class="benefit-item">
          <span class="icon">
            <img
              src="{{ urls[i] }}"
              alt="{{ titles[i] }}"
              title="{{ titles[i] }}"
              loading="lazy"
            >
          </span>
          <span class="title">{{ titles[i] }}</span>
        </div>
      {% endfor %}
    {% elsif titles %}
      {% for title in titles %}
        <div class="benefit-item">
          <span class="icon">
            <img src="" alt="{{ title }}" loading="lazy">
          </span>
          <span class="title">{{ title }}</span>
        </div>
      {% endfor %}
    {% endif %}
  {% endfor %}
</div>

{% style %}
   .health-benefits_thirdO{
    display: flex;
    flex-wrap: wrap;
    gap: 24px;
    max-width: 600px;
    margin: 20px auto;
    font-family: sans-serif;
  }

  .health-benefits_thirdO .benefit-item {
    display: flex;
    align-items: center;
    gap: 8px;
    width: 30%;
    min-width: 160px;
    font-size: 16px;
    color: #2c2c2c;
  }

  .health-benefits_thirdO .benefit-item .icon {
    font-size: 20px;
  }
{% endstyle %}
