<!-- popup_video_product -->
<style>
  /* popup css */
   #video_{{ section.id }} .video_popup_init .card-content{
  padding: 8px 8px 20px 8px;
  border: 1px solid #c1c1c1;
  }
  #video_{{ section.id }} button#closed_popup_btn svg {
  fill: #fff;
  }
  #video_{{ section.id }} button#closed_popup_btn {
  border-radius: 50%;
  position: absolute;
  right: -12px;
  top: -9px;
  background: #000;
  }

  #video_{{ section.id }} .video_popup_init {
  display:none;
  position: fixed;
  z-index: 999999;
  width: 100%;
  height: 100%;
  top: 0;
  left:0;
  backdrop-filter: blur(15px);
  background: #19191982;
  }
  #video_{{ section.id }} .video_popup_init .video_popup_grid {
  width: 50%;
  }
  #video_{{ section.id }} .video_popup_init .video_popup {
  width: 600px;
  background: #fff;
  margin: auto;
  padding: 20px;
  border-radius: 12px;
  position: fixed;
  left: 50%;
  transform: translate(-50%, -50%);
  top: 50%;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  gap: 15px;
  }
  #video_{{ section.id }} .video_popup_init .product-title-new {
  width: auto;
  text-align:center;
  }
  #video_{{ section.id }} .video_popup_init .video_popup_grid a img {
  border-top-left-radius: 12px;
  border-top-right-radius: 12px;
  }
  #video_{{ section.id }} .video_popup_init .product-title-new .product-title {
  color: #086b92;
  margin-top: 15px;
  line-height: 1.5;
  font-size: 16px;
  margin-bottom: 8px;
  }
  #video_{{ section.id }} .video_popup_init .product-title-new .product-price {
  font-size: 15px;
  margin: 0;
  color: rgb(233, 81, 68);
  font-weight: bold;
  margin-bottom: 10px;
  letter-spacing: 1.2px;
  }
  #video_{{ section.id }} .video_popup_init .card-content .shop-button {
  font-size: 14px;
  border: 2px solid #086b92;
  background-color: #086b92;
  color: white;
  padding: 10px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-weight: 500;
  text-transform: uppercase;
  width: -webkit-fill-available;
  }
  #video_{{ section.id }} .video_popup_init .card-content .shop-button:hover {
  background: transparent;
  border: 2px solid #086b92;
  color: #086b92;
  font-weight: bold;
  }
</style>
<div class="video_popup_init" id="modal-{{ video.id }}">
  <div class="video_popup">
    <button
      type="button"
      id="closed_popup_btn"
      class="halo-sidebar-close button-effect"
      data-close-cart-sidebar=""
      aria-label="Close"
    >
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48">
        <path d="M 38.982422 6.9707031 A 2.0002 2.0002 0 0 0 37.585938 7.5859375 L 24 21.171875 L 10.414062 7.5859375 A 2.0002 2.0002 0 0 0 8.9785156 6.9804688 A 2.0002 2.0002 0 0 0 7.5859375 10.414062 L 21.171875 24 L 7.5859375 37.585938 A 2.0002 2.0002 0 1 0 10.414062 40.414062 L 24 26.828125 L 37.585938 40.414062 A 2.0002 2.0002 0 1 0 40.414062 37.585938 L 26.828125 24 L 40.414062 10.414062 A 2.0002 2.0002 0 0 0 38.982422 6.9707031 z"></path>
      </svg>
    </button>

    <div class="video_popup_grid">
      <div class="video_popup_grid_inner" style="position: relative;">
        <video
          id="customVideo"
          autoplay
          muted
          loop
          playsinline
          style="width: 100%; height: auto;"
        >
          <source src="{{ video.settings.video }}" type="video/mp4">
          Your browser does not support the video tag.
        </video>
        <!-- Mute/Unmute Button -->
        <button
          id="muteToggle"
          style="

            position: absolute;
            bottom: 15px;
            right: 15px;
            background: #086b92b5;
            border: none;
            color: white;
            padding: 8px;
            border-radius: 20px;
            cursor: pointer;
            z-index: 10;
          "
        ></button>
      </div>
    </div>
    <div class="video_popup_grid">
      {% if featured_product %}
        <div class="card-content" data-product-id="{{ featured_product.id }}">
          <a href="/products/{{ featured_product }}" title="{{ featured_product.title }}">
            <img
              class="product-img lazyload"
              data-src="{{ featured_product.featured_image | img_url: '500x' }}"
              src="{{ featured_product.featured_image | img_url: '100x' }}"
              alt="{{ featured_product.title }}"
              width="100%"
              height="100%"
              style="
                width: auto;
                height: auto;
              "
            >
          </a>
          <div class="product-title-new">
            <p class="product-title">{{ featured_product.title }}</p>
            <p class="product-price">{{ featured_product.price | money_with_currency }}</p>
          </div>

          <button class="shop-button">Add To Cart</button>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const video = document.getElementById("customVideo");
    const muteBtn = document.getElementById("muteToggle");

    video.volume = 0.8;
    video.muted = true;

    video.play().catch(err => {
      console.warn("Autoplay blocked:", err);
    });

    // Toggle mute/unmute on button click
    muteBtn.addEventListener("click", function (e) {
      e.stopPropagation(); // Prevent this click from reaching video
      video.muted = !video.muted;
      muteBtn.textContent = video.muted ? "Unmute" : "Mute";
    });

    // Toggle play/pause on video click
    video.addEventListener("click", function () {
      if (video.paused) {
        video.play();
      } else {
        video.pause();
      }
    });
  });
</script>
