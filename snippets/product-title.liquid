{%- liquid 
    assign fontsize_text = block.settings.fontsize_text
    assign fontsize_text_mb = block.settings.fontsize_text_mb
    assign color_title = block.settings.color_title
-%}
{%- if check_show_share == '3' -%}
    <div class="halo-share-3">
        <h1 class="productView-title" style="--color-title: {{ color_title }};--fontsize-text: {{ fontsize_text | append: 'px' }};--fontsize-mb-text: {{ fontsize_text_mb | append: 'px' }};"><span>{{ product.title | escape }}</span></h1>
        {% render 'halo-share', product: product, share_layout: check_show_share %}
    </div>
{%- else -%}
   <div class="new-title-ul">
    {% for fielddd in product.metafields.custom.we_product_tag.value %}
        <li>{{ fielddd }}</li>
      {% endfor %}
   </div>
    <h1 class="productView-title" style="--color-title: {{ color_title }};--fontsize-text: {{ fontsize_text | append: 'px' }};--fontsize-mb-text: {{ fontsize_text_mb | append: 'px' }};"><span>{{ product.title | escape }}</span></h1>
    <p class="product-page-subtitle">{{ product.metafields.Custom.we_product_subtitle_text }}</p>
    <p class="product-page-one-liner">{{ product.metafields.custom.we_product_onne_liner_text }}</p>
{%- endif -%}



<style>
    .new-title-ul {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 12px;
    margin-top: 8px;
  }

  .new-title-ul li {
    list-style: none;
    margin: 3px;
    background-color: #e2edef;
    padding: 6px 12px;
    font-size: 14px;
    font-weight: 500;
    border-radius: 4px;
    color: #374650;
    font-family: "Lato";
}

.product-page-subtitle{
    font-style: oblique;
    font-weight: 500;
    padding: 4px 0px;
    margin: 0px;
}

p.product-page-one-liner {
    margin: 0px;
    line-height: 22px;
    padding-bottom: 10px;
}
</style>