{% style %}
  .eto-lg-page-benefits {
    --eto-lg-page-accent: #006a91;
    --eto-lg-page-accent-light: #e6f4f9;
    --eto-lg-page-accent-soft: rgba(0, 106, 145, 0.08);
    --eto-lg-page-text: #374650;
    --eto-lg-page-text-muted: #5c6b76;
    --eto-lg-page-card-bg: #ffffff;
    --eto-lg-page-card-border: rgba(0, 106, 145, 0.12);
    width: 100%;
    margin: 0;
    padding: 0;
  }

  .eto-lg-page-testimonial-card {
    position: relative;
    background: var(--eto-lg-page-card-bg);
    border: 1px solid var(--eto-lg-page-card-border);
    border-left: 3px solid var(--eto-lg-page-accent);
    border-radius: 16px;
    box-shadow: 0 4px 24px rgba(0, 106, 145, 0.08);
    padding: 28px 32px 28px 28px;
    margin-bottom: 25px;
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 28px;
    align-items: center;
    min-height: 140px;
  }

  .eto-lg-page-testimonial-inner {
    grid-column: 1;
    position: relative;
    padding-left: 8px;
  }

  .eto-lg-page-testimonial-quote-icon {
    position: absolute;
    top: -4px;
    left: 0;
    color: var(--eto-lg-page-accent);
    opacity: 0.35;
    line-height: 0;
  }

  .eto-lg-page-testimonial-quote-icon svg {
    display: block;
  }

  .eto-lg-page-testimonial-text {
    font-size: 18px;
    line-height: 1.65;
    color: var(--eto-lg-page-text);
    font-weight: 500;
    margin: 0 0 16px 0;
    max-width: 92%;
  }

  .eto-lg-page-testimonial-attribution {
    font-size: 14px;
    line-height: 1.4;
    color: var(--eto-lg-page-text-muted);
    font-weight: 400;
    margin: 0;
  }

  .eto-lg-page-testimonial-name {
    color: var(--eto-lg-page-accent);
    font-weight: 600;
  }

  .eto-lg-page-testimonial-avatar {
    grid-column: 2;
    grid-row: 1 / -1;
    align-self: center;
  }

  .eto-lg-page-testimonial-avatar-img {
    width: 100px;
    height: 100px;
    object-fit: cover;
    border-radius: 50%;
    border: 3px solid var(--eto-lg-page-accent-light);
    box-shadow: 0 6px 24px rgba(0, 106, 145, 0.12);
    display: block;
  }

  .eto-lg-page-benefits-list-wrapper {
    padding: 0;
  }

  .eto-lg-page-benefits-heading {
    font-size: clamp(22px, 2.4vw, 28px);
    line-height: 1.35;
    color: var(--eto-lg-page-text);
    font-weight: 600;
    margin: 0 0 28px 0;
    letter-spacing: -0.02em;
    max-width: 42ch;
  }

  .eto-lg-page-benefits-heading-accent {
    color: var(--eto-lg-page-accent);
    font-weight: 700;
    position: relative;
  }

  .eto-lg-page-benefits-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .eto-lg-page-benefits-item {
    display: flex;
    align-items: flex-start;
    gap: 16px;
    font-size: 15px;
    line-height: 1.55;
    color: var(--eto-lg-page-text);
    padding: 18px 20px;
    margin-bottom: 8px;
    background: var(--eto-lg-page-accent-soft);
    border: 1px solid transparent;
    border-radius: 12px;
    border-left: 3px solid var(--eto-lg-page-accent);
    transition: background 0.2s ease, border-color 0.2s ease, box-shadow 0.2s ease;
  }

  .eto-lg-page-benefits-item:last-child {
    margin-bottom: 0;
  }

  .eto-lg-page-benefits-item:hover {
    background: rgba(0, 106, 145, 0.06);
    border-color: rgba(0, 106, 145, 0.15);
    box-shadow: 0 2px 12px rgba(0, 106, 145, 0.06);
  }

  .eto-lg-page-benefits-icon {
    flex-shrink: 0;
    width: 26px;
    height: 26px;
    border-radius: 50%;
    background: var(--eto-lg-page-accent);
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 1px;
  }

  .eto-lg-page-benefits-check {
    flex-shrink: 0;
  }

  .eto-lg-page-benefits-item-text {
    flex: 1;
    padding-top: 1px;
  }

  .eto-lg-page-benefits-item-title {
    color: var(--eto-lg-page-accent);
    font-weight: 700;
    font-size: 0.95em;
    letter-spacing: 0.02em;
  }

  @media (max-width: 749px) {
    .eto-lg-page-testimonial-card {
      grid-template-columns: 1fr;
      padding: 24px 20px 24px 20px;
      margin-bottom: 32px;
      gap: 20px;
    }

    .eto-lg-page-testimonial-inner {
      order: 1;
      padding-left: 6px;
    }

    .eto-lg-page-testimonial-quote-icon {
      top: -2px;
    }

    .eto-lg-page-testimonial-quote-icon svg {
      width: 26px;
      height: auto;
    }

    .eto-lg-page-testimonial-text {
      max-width: 100%;
      font-size: 16px;
      margin-bottom: 14px;
    }

    .eto-lg-page-testimonial-avatar {
      grid-column: 1;
      grid-row: auto;
      order: 2;
      justify-self: start;
    }

    .eto-lg-page-testimonial-avatar-img {
      width: 72px;
      height: 72px;
      border-width: 2px;
    }

    .eto-lg-page-benefits-heading {
      margin-bottom: 22px;
      max-width: 100%;
    }

    .eto-lg-page-benefits-item {
      font-size: 14px;
      gap: 14px;
      padding: 16px 18px;
      margin-bottom: 6px;
    }

    .eto-lg-page-benefits-icon {
      width: 24px;
      height: 24px;
    }
  }
{% endstyle %}
