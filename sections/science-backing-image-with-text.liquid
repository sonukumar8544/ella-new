<script defer>
  document.addEventListener("DOMContentLoaded", function () {
    // Check if screen width is >= 768 pixels
    if (window.innerWidth <= 768) {
      const secondParagraphs = document.querySelectorAll(".second-paragraph-about p:nth-child(2)");
      
      secondParagraphs.forEach(function (paragraph) {
        paragraph.style.display = "none";
      });
    }
  });

  function toggleText(button) {
    // Check if screen width is >= 768 pixels
    if (window.innerWidth <= 768) {
      const parentDiv = button.previousElementSibling;
      const secondParagraph = parentDiv.querySelector("p:nth-child(2)");

      if (secondParagraph.style.display === "none" || secondParagraph.style.display === "") {
        secondParagraph.style.display = "block";
        button.innerHTML = "Read less";
      } else {
        secondParagraph.style.display = "none";
        button.innerHTML = "Read more";
      }
    }
  }
</script>
