<div class="science-page-science-page-science-page-col-collapsible-content-main">
  <div class="container">
    <div class="science-page-col-collapsible-content-main">
      {% for block in section.blocks %}
        {% assign blocks = block.settings %}
        {% if block.type == 'block_left' %}
          <div class="science-page-col-collapsible-grid__item_main">
            <div class="block_top_text_mob">
             {{ blocks.block_mobile_top_text }}
            </div>
            <div class="science-page-inner-block-left">
              <img
                src="{{ blocks.block_heading | img_url: 'master' }}"
                alt="{{ blocks.block_heading.alt }}"
                class="science-page-icustom-banner-main-image">
            </div>
          </div>
        {% endif %}
      {% endfor %}
      {% for block in section.blocks %}
        {% assign blocks = block.settings %}
        {% if block.type == 'block_right' %}
          <div class="science-page-col-collapsible-image-main">
            <div class="science-page-col-inner-block-right">
              <div class="sciecnde-paragraph_one">{{ blocks.block_heading_right }}</div>
              <div class="sciecnde-paragraph {% if blocks.about-readmorec %} second-paragraph-about {% endif %}">{{ blocks.block_heading_right_two }}</div>
            {% if blocks.about-readmorec %} 
              <span id="readmore-btn-about" class="read-more" onclick="toggleText(this)">Read More</span>
            {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Image with text section",
    "settings": [],
    "blocks": [
      {
        "type": "block_left",
        "name": "multi col block",
        "settings": [
          {
            "type": "image_picker",
            "id": "block_heading",
            "label": "Add title"
          }, {
            "type": "liquid",
            "id": "block_mobile_top_text",
            "label": "Mobile top text"
          }
        ]
      }, {
        "type": "block_right",
        "name": "multi col block right",
        "settings": [
          {
            "type": "liquid",
            "id": "block_heading_right",
            "label": "Add title"
          }, {
            "type": "liquid",
            "id": "block_heading_right_two",
            "label": "Add title"
          },{
            "type": "checkbox",
            "id": "about-readmorec",
            "label": "Ceck kr de Bro"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "science imagw-with textc",
        "category": "Custom Sections"
      }
    ]
  }
{% endschema %}
