<section class="barry-tan-lab-details" id="barry-tan-lab-details-{{ section.id }}">
  <div class="barry-tan-lab-details-container">
    {% if section.settings.title != blank %}
      <h2 class="barry-tan-lab-details-title">{{ section.settings.title }}</h2>
    {% endif %}

    <div class="barry-tan-lab-details-list">
      {% for block in section.blocks %}
        <div class="barry-tan-lab-details-item" {{ block.shopify_attributes }}>
          <div class="barry-tan-lab-details-col-left">
            <div class="barry-tan-lab-details-number">
              {% if block.settings.number != blank %}
                {{ block.settings.number }}
              {% else %}
                {% assign num = forloop.index %}
                {% if num < 10 %}0{{ num }}{% else %}{{ num }}{% endif %}
              {% endif %}
            </div>
            
            <div class="barry-tan-lab-details-content-left">
              {% if block.settings.heading != blank %}
                <h3 class="barry-tan-lab-details-heading">{{ block.settings.heading }}</h3>
              {% endif %}
              
              {% if block.settings.subheading != blank %}
                <a href="{{ block.settings.subheading_link | default: '#' }}" class="barry-tan-lab-details-subheading">
                  {{ block.settings.subheading }}
                </a>
              {% endif %}
            </div>
          </div>
          
          <div class="barry-tan-lab-details-col-right">
            {% if block.settings.description != blank %}
              <p class="barry-tan-lab-details-description">{{ block.settings.description }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  #barry-tan-lab-details-{{ section.id }} {
    padding: {{ section.settings.section_padding_top | default: 80 }}px 20px {{ section.settings.section_padding_bottom | default: 80 }}px;
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
  }

  #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-container {
    max-width: {{ section.settings.max_width | default: 1000 }}px;
    margin: 0 auto;
  }

  #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-title {
    font-size: 35px;
    font-weight: 600;
    color: #0A3347;
    text-align: center;
    margin: 0 0 0;
    line-height: 1.2;
  }

  #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-list {
    display: flex;
    flex-direction: column;
    gap: 0;
    padding-top: 40px;
  }

  #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-item {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: flex-start;
    padding-bottom: 40px;
    border-bottom: 1px solid #e0e0e0;
    padding-top: 45px;
  }

  #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-col-left {
    display: flex;
    flex-direction: row;
    gap: 40px;
    align-items: flex-start;
  }

  #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-number {
    font-size: 22px;
    font-weight: 600;
    color: #466474;
    line-height: 1;
    flex-shrink: 0;
  }

  #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-content-left {
    display: flex;
    flex-direction: column;
    gap: 8px;
    flex: 1;
  }

  #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-col-right {
    display: flex;
    align-items: flex-start;
  }

  #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-heading {
    font-size: 22px;
    font-weight: 600;
    color: #0A3347;
    margin: 0;
    line-height: 1.3;
  }

  #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-subheading {
    font-size: 16px;
    font-weight: 400;
    font-style: italic;
    color: {{ section.settings.subheading_color | default: '#086B92' }};
    text-decoration: none;
    line-height: 1.4;
    transition: color 0.3s ease;
    display: inline-block;
  }

  #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-subheading:hover {
    color: #086B92;
    text-decoration: underline;
  }

  #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-description {
    font-size: 16px;
    font-weight: 400;
    color: #0A3347;
    margin: 0;
    line-height: 1.6;
  }

  /* Tablet styles */
  @media (max-width: 1024px) {
    #barry-tan-lab-details-{{ section.id }} {
      padding: 60px 20px;
    
    #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-item {
      gap: 50px;
      padding-bottom: 35px;
    }
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    #barry-tan-lab-details-{{ section.id }} {
      padding: 50px 16px;
    }

    #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-title {
      font-size: 28px;
    }

    #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-list {
      padding-top: 30px;
    }

    #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-item {
      grid-template-columns: 1fr;
      gap: 24px;
      padding-bottom: 30px;
    }

    #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-col-left {
      flex-direction: column;
      gap: 12px;
    }

    #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-number {
      font-size: 22px;
    }

    #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-heading {
      font-size: 22px;
    }

    #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-subheading {
      font-size: 16px;
    }

    #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-description {
      font-size: 15px;
    }
  }

  @media (max-width: 480px) {
    #barry-tan-lab-details-{{ section.id }} {
      padding: 40px 12px;
    }

    #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-title {
      font-size: 24px;
    }

    #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-list {
      padding-top: 25px;
    }

    #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-item {
      grid-template-columns: 1fr;
      gap: 20px;
      padding-bottom: 35px;
    }

    #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-col-left {
      flex-direction: column;
      gap: 10px;
    }

    #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-number {
      font-size: 22px;
    }

    #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-heading {
      font-size: 18px;
    }

    #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-subheading {
      font-size: 15px;
    }

    #barry-tan-lab-details-{{ section.id }} .barry-tan-lab-details-description {
      font-size: 16px;
      line-height: 1.65;
    }
  }
</style>

