<!-- science-back-logo-page -->

<section class="we-sciewce custom-section-science">
  <div class="container">
    <div class="sciece-page-ritle">
      <h1 class="second-title-sciece">{{ section.settings.title }}</h1>
      <p class="desc-science">{{ section.settings.subtitle }}</p>
    </div>
    <div class="blocks-container-science">
      {% for block in section.blocks %}
        <div class="block-item hellos">
          <img loading="lazy" src="{{ block.settings.image | img_url: 'master' }}" width="" height="" alt="{{ block.settings.image.alt }}">
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>

  .we-sciewce .custom-section-science {
    overflow: hidden !important;
  }
    
  .second-title-sciece {
    color: #374650;
    padding-top: 2rem;
    font-size: 32px;
    line-height: 1.2;
    margin-bottom: 0px;
  }

  .sciece-page-ritle {
    display: flex;
    flex-direction: column;
    max-width: 1000px;
    margin: 0 auto;
  }
  .desc-science {
    font-size: 16px;
    line-height: 2;
    color: #36454F;
    font-weight: 500;
  }
  .we-sciewce .container {
    text-align: center;
  }

  .we-sciewce .blocks-container-science {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
  }

  .we-sciewce .block-item {
    width: 20%;
    box-sizing: border-box;
    padding: 30px 0;
  }

  .we-sciewce .block-item img {
    width: 50%;
    height: auto;
    display: block;
    margin: 0 auto;
  }

  .slick-prev:before,
  .slick-next:before {
    border-top: 2px solid #000000 !important;
    border-right: 2px solid #000000 !important;
  }
  @media(max-width: 750px){
  h2.second-title-sciece{
      font-size: 3rem;
      line-height: 50px;
    }
  }
</style>

{% schema %}
  {
    "name": "Scientist logo",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Your Title Here"
      }, {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "Your Subtitle Here"
      }
    ],
    "blocks": [
      {
        "type": "image_block",
        "name": "Image Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "scientist logo",
        "category": "Custom"
      }
    ]
  }
{% endschema %}

<script defer defer>
  $(document).ready(function(){
  function initSlick() {
    var windowWidth = $(window).width();
    if (windowWidth < 768) {
      if (!$('.blocks-container-science').hasClass('slick-initialized')) {
        $('.blocks-container-science').slick({
          infinite: true,
          speed: 300,
          slidesToShow: 4,
          slidesToScroll: 1,
          responsive: [
            {
              breakpoint: 1024,
              settings: {
                slidesToShow: 3,
                slidesToScroll: 1,
                infinite: true,
                dots: true
              }
            },
            {
              breakpoint: 768,
              settings: {
                slidesToShow: 3,
                slidesToScroll: 1
              }
            },
            {
              breakpoint: 600,
              settings: {
                slidesToShow: 2,
                slidesToScroll: 1
              }
            },
            {
              breakpoint: 480,
              settings: {
                slidesToShow: 1,
                slidesToScroll: 1
              }
            }
          ]
        });
      }
    } else {
      if ($('.blocks-container-science').hasClass('slick-initialized')) {
        $('.blocks-container-science').slick('unslick');
      }
    }
  }
  
  // Initialize on document ready
  initSlick();
  
  // Reinitialize on window resize
  $(window).on('resize', function(){
    initSlick();
  });
  });
</script>