{% schema %}
  {
    "name": "newsletter custom",
    "settings": [
       {
        "type": "color",
        "id": "newslettertext",
        "label": "title Color",
        "default": "#000"
      },
      {
        "type": "color",
        "id": "newslettersubtitle",
        "label": "Subtitle Color",
        "default": "#000"
      },
      {
        "type": "color",
        "id": "newsletterbg",
        "label": "Newsletter Bg",
        "default": "#fff"
      },
      {
        "type": "text",
        "id": "newsletter_title",
        "label": "Newsletter Title",
        "default": "Get 10% off your first order"
      },
      {
        "type": "text",
        "id": "newsletter_subtitle",
        "label": "Newsletter subtitle",
        "default": "Receive discounts, updates and more by subscribing to our email newsletter + SMS!"
      }
    ],
    "presets": [
      {
        "name": "newsletter custom"
      }
    ]
  }
{% endschema %}

<div class="newsletter-section-footer">
  <div class="newsletter-email-box-footer">
    <h2 class="footer-newsletter-heading" style="color: {{ section.settings.newslettertext }};">{{ section.settings.newsletter_title }}</h2>
    <p  style="color: {{ section.settings.newslettersubtitle }};">{{ section.settings.newsletter_subtitle }}</p>
    <div
      style="color: white;"
      class="hs-form-frame"
      data-region="na1"
      data-form-id="3e4e59be-a9c3-4aaf-be23-28ed725a41b4"
      data-portal-id="49007533"></div>
    <script src="https://js.hsforms.net/forms/embed/49007533.js" defer></script>
  </div>
</div>

