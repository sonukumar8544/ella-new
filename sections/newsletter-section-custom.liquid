        "default": "#374650"
      },
      {
        "type": "color",
        "id": "newsletterbg",
        "label": "Newsletter Bg",
        "default": "#e6f0f4"
      },
      {
        "type": "color",
        "id": "newsletter_border",
        "label": "Newsletter Border",
        "default": "#fff"
      },
      {
        "type": "text",
        "id": "newsletter_title",
        "label": "Newsletter Title",
        "default": "Get 10% off your first order"
