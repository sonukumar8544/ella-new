<div id="shopify-section-{{ section.id }}" class="safe-effective-section">
  <div class="safe-effective-container">
    <div class="safe-effective-wrapper">
      <!-- Left Column - Heading -->
      <div class="safe-effective-heading-column">
        {% if section.settings.heading != blank %}
          <h2 class="safe-effective-heading">{{ section.settings.heading }}</h2>
        {% endif %}
      </div>

      <!-- Right Column - Bullet Points -->
      <div class="safe-effective-content-column">
        {% for block in section.blocks %}
          {% if block.type == 'bullet_point' %}
            <div class="safe-effective-bullet-item" {{ block.shopify_attributes }}>
              {% if block.settings.bullet_text != blank %}
                <p class="safe-effective-bullet-text">{{ block.settings.bullet_text }}</p>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<style>
  #shopify-section-{{ section.id }}.safe-effective-section {
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
    padding: {{ section.settings.padding_top_desktop | default: 80 }}px 0 {{ section.settings.padding_bottom_desktop | default: 80 }}px;
  }

  #shopify-section-{{ section.id }} .safe-effective-container {
    max-width: 888px;
    margin: 0 auto;
    padding: 0 24px;
  }

  #shopify-section-{{ section.id }} .safe-effective-wrapper {
    display: flex;
    align-items: flex-start;
    gap: 80px;
  }

  #shopify-section-{{ section.id }} .safe-effective-heading-column {
    flex: 0 0 40%;
    max-width: 40%;
    margin: auto;
  }

  #shopify-section-{{ section.id }} .safe-effective-content-column {
    flex: 0 0 60%;
    max-width: 60%;
    display: flex;
    flex-direction: column;
  }  

  #shopify-section-{{ section.id }} .safe-effective-heading {
    font-size: 38px;
    font-weight: 700;
    color: {{ section.settings.heading_color | default: '#374650' }};
    margin: 0;
    line-height: 1.3;
    text-align: left;
  }

  #shopify-section-{{ section.id }} .safe-effective-bullet-item {
    width: 100%;
    border-top: 1px solid {{ section.settings.divider_color | default: '#e1e8ed' }};
  }

  /* #shopify-section-{{ section.id }} .safe-effective-bullet-item:first-child {
    border-top: none;
  } */

  #shopify-section-{{ section.id }} .safe-effective-bullet-text {
    font-size: 18px;
    line-height: 1.6;
    color: {{ section.settings.text_color | default: '#374650' }};
    margin: 0;
    text-align: left;
    padding: 16px 0;
  }

  #shopify-section-{{ section.id }} .safe-effective-bullet-text strong {
    font-weight: 700;
  }

  /* Responsive Styles */

  @media (min-width: 1025px){
    #shopify-section-{{ section.id }} .safe-effective-content-column p{
    font-size: 18px;
  }
  }
  @media (max-width: 1024px) {
    #shopify-section-{{ section.id }} .safe-effective-container {
      padding: 0 20px;
    }

    #shopify-section-{{ section.id }} .safe-effective-wrapper {
      gap: 60px;
    }

    #shopify-section-{{ section.id }} .safe-effective-heading {
      font-size: 38px;
    }

    #shopify-section-{{ section.id }} .safe-effective-bullet-text {
      font-size: 16px;
    }
  }

  @media (max-width: 768px) {
    #shopify-section-{{ section.id }}.safe-effective-section {
      padding: {{ section.settings.padding_top_mobile | default: 60 }}px 0 {{ section.settings.padding_bottom_mobile | default: 60 }}px;
    }

    #shopify-section-{{ section.id }} .safe-effective-container {
      padding: 0 16px;
    }

    #shopify-section-{{ section.id }} .safe-effective-wrapper {
      flex-direction: column;
      gap: 40px;
    }

    #shopify-section-{{ section.id }} .safe-effective-heading-column {
      flex: 0 0 100%;
      max-width: 100%;
    }

    #shopify-section-{{ section.id }} .safe-effective-content-column {
      flex: 0 0 100%;
      max-width: 100%;
    }

    #shopify-section-{{ section.id }} .safe-effective-heading {
      font-size: 32px;
      margin-bottom: 0;
    }

    #shopify-section-{{ section.id }} .safe-effective-bullet-text {
      font-size: 16px;
      padding: 14px 0;
    }
  }

  @media (max-width: 540px) {
    #shopify-section-{{ section.id }}.safe-effective-section {
      padding: {{ section.settings.padding_top_mobile | default: 40 }}px 0 {{ section.settings.padding_bottom_mobile | default: 40 }}px;
    }

    #shopify-section-{{ section.id }} .safe-effective-container {
      padding: 0 12px;
    }

    #shopify-section-{{ section.id }} .safe-effective-wrapper {
      gap: 32px;
    }

    #shopify-section-{{ section.id }} .safe-effective-heading {
      font-size: 28px;
    }

    #shopify-section-{{ section.id }} .safe-effective-bullet-text {
      font-size: 16px;
      padding: 12px 0;
    }
  }

  @media (max-width: 480px) {
    #shopify-section-{{ section.id }} .safe-effective-heading {
      font-size: 24px;
    }

    #shopify-section-{{ section.id }} .safe-effective-bullet-text {
      font-size: 16px;
    }
  }
</style>

