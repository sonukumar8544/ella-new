<style>
  #tocotrienole-slider-{{ section.id }} {
    background-color: #2c2c2c;
    padding: 40px;
    width: 100%;
  }

  #tocotrienole-slider-{{ section.id }} .tocotrienole-slider__container {
    max-width: 1100px;
    margin: 0 auto;
  }

  #tocotrienole-slider-{{ section.id }} .tocotrienole-slider__grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: clamp(20px, 3vw, 20px);
    align-items: start;
  }

  #tocotrienole-slider-{{ section.id }} .tocotrienole-slider__grid .tocotrienole-slider__item {
    max-width: 100%;
    min-width: 0;
  }

  #tocotrienole-slider-{{ section.id }} .tocotrienole-slider__item {
    display: flex;
    flex-direction: row;
    align-items: center;
    text-align: left;
    color: #ffffff;
    gap: 15px;
    width: 100%;
  }

  #tocotrienole-slider-{{ section.id }} .tocotrienole-slider__icon-wrapper {
    position: relative;
    width: clamp(60px, 10vw, 60px);
    height: clamp(60px, 10vw, 60px);
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #tocotrienole-slider-{{ section.id }} .tocotrienole-slider__icon-image {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #tocotrienole-slider-{{ section.id }} .tocotrienole-slider__icon-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  #tocotrienole-slider-{{ section.id }} .tocotrienole-slider__text {
    font-size: clamp(14px, 1.8vw, 14px);
    font-weight: 500;
    line-height: 1.4;
    color: #ffffff;
    flex: 1;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  /* Slider Styles - Show on all screens */
  #tocotrienole-slider-{{ section.id }} .tocotrienole-slider__grid {
    display: none;
  }

  #tocotrienole-slider-{{ section.id }} .tocotrienole-slider__slider-wrapper {
    display: block;
    position: relative;
    overflow: hidden;
    width: 100%;
  }

  #tocotrienole-slider-{{ section.id }} .tocotrienole-slider__slider {
    overflow: hidden;
    width: 100%;
  }

  #tocotrienole-slider-{{ section.id }} .tocotrienole-slider__slider-wrapper .tocotrienole-slider__item {
    padding: 0 10px;
    max-width: 100%;
    min-width: 0;
    box-sizing: border-box;
  }

  #tocotrienole-slider-{{ section.id }} .tocotrienole-slider__slider .slick-list {
    margin: 0 -10px;
  }
/* 
  #tocotrienole-slider-{{ section.id }} .tocotrienole-slider__slider .slick-slide > div {
    padding: 0 10px;
  } */

  #tocotrienole-slider-{{ section.id }} .slick-arrow {
    display: none !important;
  }

  #tocotrienole-slider-{{ section.id }} .slick-arrow:hover {
    background: rgba(255, 255, 255, 0.3);
  }

  #tocotrienole-slider-{{ section.id }} .slick-arrow svg {
    width: 20px;
    height: 20px;
    fill: #ffffff;
  }

  #tocotrienole-slider-{{ section.id }} .slick-prev {
    left: 10px;
  }

  #tocotrienole-slider-{{ section.id }} .slick-next {
    right: 10px;
  }

  /* Small Screen - Show 1 item centered */
  @media (max-width: 768px) {
    #tocotrienole-slider-{{ section.id }} .tocotrienole-slider__slider-wrapper .tocotrienole-slider__item {
      padding: 0 20px;
      min-width: 250px;
      max-width: 300px;
      margin: 0 auto;
    }

    #tocotrienole-slider-{{ section.id }} .tocotrienole-slider__text {
      display: block;
      overflow: visible;
      text-overflow: clip;
    }

    #tocotrienole-slider-{{ section.id }} .tocotrienole-slider__icon-wrapper {
      width: 60px;
      height: 60px;
    }
  }

  /* Tablet Styles */
  @media (min-width: 769px) and (max-width: 1024px) {
    #tocotrienole-slider-{{ section.id }} .tocotrienole-slider__slider .slick-slide {
      padding: 0 10px;
    }

    #tocotrienole-slider-{{ section.id }} .tocotrienole-slider__slider .slick-list {
      margin: 0 -10px;
    }

    #tocotrienole-slider-{{ section.id }} .tocotrienole-slider__item {
      min-width: 0;
      max-width: 100%;
      width: 100%;
    }

    #tocotrienole-slider-{{ section.id }} .tocotrienole-slider__text {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-overflow: ellipsis;
      line-height: 1.5;
      min-height: 3em;
    }
  }

  /* Desktop Styles */
  @media (min-width: 1025px) {
    #tocotrienole-slider-{{ section.id }} .tocotrienole-slider__slider .slick-slide {
      padding: 0 10px;
    }

    #tocotrienole-slider-{{ section.id }} .tocotrienole-slider__slider .slick-list {
      margin: 0 -10px;
    }

    #tocotrienole-slider-{{ section.id }} .tocotrienole-slider__item {
      min-width: 0;
      max-width: 100%;
      width: 100%;
    }

    #tocotrienole-slider-{{ section.id }} .tocotrienole-slider__text {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-overflow: ellipsis;
      line-height: 1.5;
      min-height: 3em;
    }
  }
</style>

<section id="tocotrienole-slider-{{ section.id }}">
  <div class="tocotrienole-slider__container">
    <!-- Slider View - All Screens -->
    <div class="tocotrienole-slider__slider-wrapper">
      <div class="tocotrienole-slider__slider" data-tocotrienole-slider>
        {% for block in section.blocks %}
          <div class="tocotrienole-slider__item" {{ block.shopify_attributes }}>
            <div class="tocotrienole-slider__icon-wrapper">
              <div class="tocotrienole-slider__icon-image">
                {% if block.settings.icon_image != blank %}
                  {{ block.settings.icon_image | image_url: width: 200 | image_tag: alt: block.settings.title, loading: 'lazy' }}
                {% endif %}
              </div>
            </div>
            <div class="tocotrienole-slider__text">
              {{ block.settings.title }}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<script>
  (function() {
    function initSlider() {
      var slider = document.querySelector('#tocotrienole-slider-{{ section.id }} [data-tocotrienole-slider]');
      if (!slider || !window.jQuery || !window.jQuery.fn.slick) return;

      var windowWidth = window.innerWidth;
      
      // Destroy existing slider if initialized
      if (jQuery(slider).hasClass('slick-initialized')) {
        jQuery(slider).slick('unslick');
      }

      // Initialize slider with responsive settings
      jQuery(slider).slick({
        dots: false,
        infinite: true,
        arrows: false,
        speed: 300,
        autoplay: false,
        draggable: true,
        swipe: true,
        touchMove: true,
        touchThreshold: 5,
        swipeToSlide: true,
        variableWidth: false,
        slidesToShow: 4,
        slidesToScroll: 1,
        centerMode: false,
        centerPadding: '0px',
        responsive: [
          {
            breakpoint: 1025,
            settings: {
              slidesToShow: 4,
              slidesToScroll: 1,
              centerMode: false,
              centerPadding: '0px',
              infinite: true,
              arrows: false
            }
          },
          {
            breakpoint: 769,
            settings: {
              slidesToShow: 3,
              slidesToScroll: 1,
              centerMode: false,
              centerPadding: '0px',
              infinite: true,
              arrows: false
            }
          },
          {
            breakpoint: 481,
            settings: {
              slidesToShow: 1,
              slidesToScroll: 1,
              centerMode: true,
              centerPadding: '20px',
              infinite: true,
              arrows: false
            }
          },
          {
            breakpoint: 0,
            settings: {
              slidesToShow: 1,
              slidesToScroll: 1,
              centerMode: true,
              centerPadding: '20px',
              infinite: true,
              arrows: false
            }
          }
        ]
      });
    }

    // Initialize on load
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initSlider);
    } else {
      initSlider();
    }

    // Reinitialize on resize
    var resizeTimer;
    window.addEventListener('resize', function() {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(initSlider, 250);
    });
  })();
</script>

