<style>
  #shopify-section-{{ section.id }} .team-reviews {
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
    padding: {{ section.settings.section_padding_top }}px {{ section.settings.section_padding_horizontal }}px {{ section.settings.section_padding_bottom }}px;
  }

  #shopify-section-{{ section.id }} .team-reviews__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  #shopify-section-{{ section.id }} .team-reviews__header {
    text-align: center;
    margin-bottom: {{ section.settings.header_bottom_spacing }}px;
  }

  #shopify-section-{{ section.id }} .team-reviews__title {
    font-size: {{ section.settings.title_font_size }}px;
    font-weight: {{ section.settings.title_font_weight }};
    line-height: 1.2;
    color: {{ section.settings.title_color | default: '#000000' }};
    margin: 0;
  }

  #shopify-section-{{ section.id }} .team-reviews__grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: {{ section.settings.grid_gap }}px;
    margin-top: {{ section.settings.grid_top_spacing }}px;
  }

  #shopify-section-{{ section.id }} .team-reviews__item {
    background-color: {{ section.settings.card_background_color | default: '#E5E7EB' }};
    border-radius: {{ section.settings.card_border_radius }}px;
    padding: {{ section.settings.card_padding }}px;
    display: flex;
    flex-direction: column;
    height: 100%;
    box-shadow: {{ section.settings.card_shadow }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  #shopify-section-{{ section.id }} .team-reviews__item:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  #shopify-section-{{ section.id }} .team-reviews__quote {
    font-size: {{ section.settings.quote_font_size }}px;
    line-height: 1.6;
    color: {{ section.settings.quote_color | default: '#374151' }};
    margin: 0 0 {{ section.settings.quote_bottom_spacing }}px;
    flex-grow: 1;
    display: flex;
    align-items: flex-start;
  }

  #shopify-section-{{ section.id }} .team-reviews__quote-text {
    position: relative;
    padding-left: 20px;
  }

  #shopify-section-{{ section.id }} .team-reviews__quote-text::before {
    content: '"';
    position: absolute;
    left: 0;
    top: -5px;
    font-size: {{ section.settings.quote_font_size | times: 1.5 }}px;
    color: {{ section.settings.quote_color | default: '#374151' }};
    opacity: 0.3;
    font-weight: bold;
  }

  #shopify-section-{{ section.id }} .team-reviews__author {
    display: flex;
    align-items: center;
    gap: {{ section.settings.author_gap }}px;
    margin-top: auto;
    padding-top: {{ section.settings.author_top_spacing }}px;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }

  #shopify-section-{{ section.id }} .team-reviews__avatar {
    width: {{ section.settings.avatar_size }}px;
    height: {{ section.settings.avatar_size }}px;
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0;
    border: 2px solid {{ section.settings.avatar_border_color | default: '#ffffff' }};
  }

  #shopify-section-{{ section.id }} .team-reviews__author-info {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  #shopify-section-{{ section.id }} .team-reviews__author-name {
    font-size: {{ section.settings.author_name_font_size }}px;
    font-weight: {{ section.settings.author_name_font_weight }};
    color: {{ section.settings.author_name_color | default: '#111827' }};
    margin: 0;
    line-height: 1.2;
  }

  #shopify-section-{{ section.id }} .team-reviews__author-title {
    font-size: {{ section.settings.author_title_font_size }}px;
    color: {{ section.settings.author_title_color | default: '#6B7280' }};
    margin: 0;
    line-height: 1.2;
  }

  /* Responsive Styles */
  @media screen and (max-width: 1024px) {
    #shopify-section-{{ section.id }} .team-reviews__grid {
      grid-template-columns: repeat({{ section.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 768px) {
    #shopify-section-{{ section.id }} .team-reviews {
      padding: {{ section.settings.section_padding_top_mobile }}px {{ section.settings.section_padding_horizontal_mobile }}px {{ section.settings.section_padding_bottom_mobile }}px;
    }

    #shopify-section-{{ section.id }} .team-reviews__title {
      font-size: {{ section.settings.title_font_size_mobile | default: section.settings.title_font_size }}px;
    }

    #shopify-section-{{ section.id }} .team-reviews__quote {
      font-size: {{ section.settings.quote_font_size_mobile | default: section.settings.quote_font_size }}px;
    }

    #shopify-section-{{ section.id }} .team-reviews__grid {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
      gap: {{ section.settings.grid_gap_mobile | default: section.settings.grid_gap }}px;
    }

    #shopify-section-{{ section.id }} .team-reviews__item {
      padding: {{ section.settings.card_padding_mobile | default: section.settings.card_padding }}px;
    }

    #shopify-section-{{ section.id }} .team-reviews__avatar {
      width: {{ section.settings.avatar_size_mobile | default: section.settings.avatar_size }}px;
      height: {{ section.settings.avatar_size_mobile | default: section.settings.avatar_size }}px;
    }

    #shopify-section-{{ section.id }} .team-reviews__author-name {
      font-size: {{ section.settings.author_name_font_size_mobile | default: section.settings.author_name_font_size }}px;
    }

    #shopify-section-{{ section.id }} .team-reviews__author-title {
      font-size: {{ section.settings.author_title_font_size_mobile | default: section.settings.author_title_font_size }}px;
    }
  }

  @media screen and (max-width: 480px) {
    #shopify-section-{{ section.id }} .team-reviews__grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<section class="team-reviews">
  <div class="team-reviews__container">
    {% if section.settings.title != blank %}
      <div class="team-reviews__header">
        <h2 class="team-reviews__title">{{ section.settings.title }}</h2>
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="team-reviews__grid">
        {% for block in section.blocks %}
          <div class="team-reviews__item" {{ block.shopify_attributes }}>
            {% if block.settings.quote != blank %}
              <div class="team-reviews__quote">
                <p class="team-reviews__quote-text">{{ block.settings.quote }}</p>
              </div>
            {% endif %}

            <div class="team-reviews__author">
              {% if block.settings.avatar != blank %}
                <img 
                  src="{{ block.settings.avatar | image_url: width: 200 }}"
                  srcset="{{ block.settings.avatar | image_url: width: 100 }} 100w,
                          {{ block.settings.avatar | image_url: width: 200 }} 200w"
                  sizes="(max-width: 768px) 60px, 80px"
                  alt="{{ block.settings.avatar.alt | default: block.settings.name }}"
                  class="team-reviews__avatar"
                  width="{{ block.settings.avatar.width | default: 80 }}"
                  height="{{ block.settings.avatar.height | default: 80 }}"
                  loading="lazy"
                >
              {% endif %}

              <div class="team-reviews__author-info">
                {% if block.settings.name != blank %}
                  <h3 class="team-reviews__author-name">{{ block.settings.name }}</h3>
                {% endif %}
                {% if block.settings.job_title != blank %}
                  <p class="team-reviews__author-title">{{ block.settings.job_title }}</p>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

