{% liquid
  assign hide_section = section.settings.hide_section | default: false
%}

{% unless hide_section %}
  <style>
    #content-image-{{ section.id }} {
      position: relative;
    }

    #content-image-{{ section.id }} .content-image-section__inner {
      /* max-width: {{ section.settings.max_width | default: 1200 }}px; */
      margin: 0 auto;
      /* padding: {{ section.settings.padding_vertical | default: 60 }}px {{ section.settings.padding_horizontal | default: 20 }}px; */
      display: flex;
      justify-content: center;
    }

    #content-image-{{ section.id }} picture,
    #content-image-{{ section.id }} img {
      width: 100%;
      height: auto;
      display: block;
      border-radius: {{ section.settings.border_radius | default: 0 }}px;
    }

    @media (min-width: 750px) {
      #content-image-{{ section.id }}.content-image-section--hide-desktop {
        display: none !important;
      }
    }

    @media (max-width: 749px) {
      #content-image-{{ section.id }}.content-image-section--hide-mobile {
        display: none !important;
      }
    }
  </style>

  {% assign section_classes = 'content-image-section' %}
  {% if section.settings.hide_on_desktop %}
    {% assign section_classes = section_classes | append: ' content-image-section--hide-desktop' %}
  {% endif %}
  {% if section.settings.hide_on_mobile %}
    {% assign section_classes = section_classes | append: ' content-image-section--hide-mobile' %}
  {% endif %}

  <section
    id="content-image-{{ section.id }}"
    class="{{ section_classes }}"
    aria-hidden="{% if section.settings.hide_on_desktop and section.settings.hide_on_mobile %}true{% else %}false{% endif %}"
  >
    <div class="content-image-section__inner">
      {% if section.settings.image_desktop != blank or section.settings.image_mobile != blank %}
        <picture>
          {% if section.settings.image_mobile != blank %}
            <source
              srcset="{{ section.settings.image_mobile | image_url: width: 900 }}"
              media="(max-width: 749px)"
            >
          {% endif %}
          {% if section.settings.image_desktop != blank %}
            <source
              srcset="{{ section.settings.image_desktop | image_url: width: 1920 }}"
              media="(min-width: 750px)"
            >
          {% endif %}
          {% assign fallback_image = section.settings.image_desktop | default: section.settings.image_mobile %}
          {% if fallback_image != blank %}
            <img
              src="{{ fallback_image | image_url: width: 1280 }}"
              alt="{{ section.settings.image_alt | escape }}"
              loading="lazy"
              width="{{ fallback_image.width }}"
              height="{{ fallback_image.height }}"
            >
          {% endif %}
        </picture>
      {% endif %}
    </div>
  </section>
{% endunless %}

{% schema %}
{
  "name": "Content Image Section",
  "settings": [
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Desktop image",
      "info": "Shown on screens 750px and wider."
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile image",
      "info": "Shown on screens smaller than 750px."
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image alt text",
      "default": "Section image"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Content max width",
      "min": 400,
      "max": 1800,
      "step": 20,
      "unit": "px",
      "default": 1200
    },
    {
      "type": "range",
      "id": "padding_vertical",
      "label": "Vertical padding",
      "min": 0,
      "max": 160,
      "step": 8,
      "unit": "px",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "label": "Horizontal padding",
      "min": 0,
      "max": 80,
      "step": 4,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Image corner radius",
      "min": 0,
      "max": 60,
      "step": 2,
      "unit": "px",
      "default": 0
    },
    {
      "type": "header",
      "content": "Visibility"
    },
    {
      "type": "checkbox",
      "id": "hide_section",
      "label": "Hide entire section",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "hide_on_desktop",
      "label": "Hide on desktop",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "hide_on_mobile",
      "label": "Hide on mobile",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Content Image Section"
    }
  ]
}
{% endschema %}