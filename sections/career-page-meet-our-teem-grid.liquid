<style>
  #shopify-section-{{ section.id }} .meet-our-team {
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
    padding: {{ section.settings.section_padding_top }}px {{ section.settings.section_padding_horizontal }}px {{ section.settings.section_padding_bottom }}px;
  }

  #shopify-section-{{ section.id }} .meet-our-team__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  #shopify-section-{{ section.id }} .meet-our-team__header {
    text-align: center;
    margin-bottom: {{ section.settings.header_bottom_spacing }}px;
  }

  #shopify-section-{{ section.id }} .meet-our-team__title {
    font-size: {{ section.settings.title_font_size }}px;
    font-weight: {{ section.settings.title_font_weight }};
    line-height: 1.2;
    color: {{ section.settings.title_color | default: '#000000' }};
    margin: 0 0 {{ section.settings.title_bottom_spacing }}px;
  }

  #shopify-section-{{ section.id }} .meet-our-team__subtitle {
    font-size: {{ section.settings.subtitle_font_size }}px;
    line-height: 1.6;
    color: {{ section.settings.subtitle_color | default: '#666666' }};
    margin: 0;
    max-width: {{ section.settings.subtitle_max_width }}px;
    margin-left: auto;
    margin-right: auto;
  }

  #shopify-section-{{ section.id }} .meet-our-team__grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: {{ section.settings.grid_gap }}px;
    margin-top: {{ section.settings.grid_top_spacing }}px;
  }

  #shopify-section-{{ section.id }} .meet-our-team__item {
    width: 100%;
    position: relative;
    overflow: hidden;
    border-radius: {{ section.settings.image_border_radius }}px;
  }

  #shopify-section-{{ section.id }} .meet-our-team__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    border-radius: {{ section.settings.image_border_radius }}px;
    aspect-ratio: {{ section.settings.image_aspect_ratio }};
  }

  /* Responsive Styles */
  @media screen and (max-width: 1024px) {
    #shopify-section-{{ section.id }} .meet-our-team__grid {
      grid-template-columns: repeat({{ section.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 768px) {
    #shopify-section-{{ section.id }} .meet-our-team {
      padding: {{ section.settings.section_padding_top_mobile }}px {{ section.settings.section_padding_horizontal_mobile }}px {{ section.settings.section_padding_bottom_mobile }}px;
    }

    #shopify-section-{{ section.id }} .meet-our-team__title {
      font-size: {{ section.settings.title_font_size_mobile | default: section.settings.title_font_size }}px;
    }

    #shopify-section-{{ section.id }} .meet-our-team__subtitle {
      font-size: {{ section.settings.subtitle_font_size_mobile | default: section.settings.subtitle_font_size }}px;
    }

    #shopify-section-{{ section.id }} .meet-our-team__grid {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
      gap: {{ section.settings.grid_gap_mobile | default: section.settings.grid_gap }}px;
    }
  }

  @media screen and (max-width: 480px) {
    #shopify-section-{{ section.id }} .meet-our-team__grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<section class="meet-our-team">
  <div class="meet-our-team__container">
    {% if section.settings.title != blank or section.settings.subtitle != blank %}
      <div class="meet-our-team__header">
        {% if section.settings.title != blank %}
          <h2 class="meet-our-team__title">{{ section.settings.title }}</h2>
        {% endif %}
        {% if section.settings.subtitle != blank %}
          <p class="meet-our-team__subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="meet-our-team__grid">
        {% for block in section.blocks %}
          <div class="meet-our-team__item" {{ block.shopify_attributes }}>
            {% if block.settings.image != blank %}
              <img 
                src="{{ block.settings.image | image_url: width: 800 }}"
                srcset="{{ block.settings.image | image_url: width: 400 }} 400w,
                        {{ block.settings.image | image_url: width: 600 }} 600w,
                        {{ block.settings.image | image_url: width: 800 }} 800w,
                        {{ block.settings.image | image_url: width: 1200 }} 1200w"
                sizes="(max-width: 480px) 100vw, (max-width: 768px) 50vw, (max-width: 1024px) 33vw, 25vw"
                alt="{{ block.settings.image.alt | default: 'Team member' }}"
                class="meet-our-team__image"
                width="{{ block.settings.image.width | default: 800 }}"
                height="{{ block.settings.image.height | default: 600 }}"
                loading="lazy"
              >
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

