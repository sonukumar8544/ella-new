<div class="two-column-section" style="
  --section-padding: {{ section.settings.section_padding }}px;
  --section-bg-color: {{ section.settings.section_bg_color }};
  --left-column-bg: {{ section.settings.left_column_bg }};
  --left-column-width: {{ section.settings.left_column_width }}%;
  --right-column-width: {{ section.settings.right_column_width }}%;
  --left-column-padding: {{ section.settings.left_column_padding }}px;
  --right-column-padding: {{ section.settings.right_column_padding }}px;
  --heading-font-size: {{ section.settings.heading_font_size }}px;
  --heading-color: {{ section.settings.heading_color }};
  --heading-line-height: {{ section.settings.heading_line_height }};
  --heading-margin-bottom: {{ section.settings.heading_margin_bottom }}px;
  --body-font-size: {{ section.settings.body_font_size }}px;
  --body-color: {{ section.settings.body_color }};
  --body-line-height: {{ section.settings.body_line_height }};
  --image-width: {{ section.settings.image_width }}px;
  --image-height: {{ section.settings.image_height }}px;
  --image-gap: {{ section.settings.image_gap }}px;
  --image-padding: {{ section.settings.image_padding }}px;
  --image-border-radius: {{ section.settings.image_border_radius }}px;
  --image-border-width: {{ section.settings.image_border_width }}px;
  --image-border-color: {{ section.settings.image_border_color }};
  --image-opacity: {{ section.settings.image_opacity | divided_by: 100.0 }};
">
  <div class="two-column-container">
    <div class="column-left">
      {% if section.settings.heading != blank %}
        <h2 class="section-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      
      {% if section.settings.body_text != blank %}
        <p class="section-body">{{ section.settings.body_text }}</p>
      {% endif %}
    </div>
    
    <div class="column-right">
      {% if section.settings.right_image != blank %}
        <div class="image-wrapper">
          <img src="{{ section.settings.right_image | image_url: width: 1200 }}" alt="{{ section.settings.right_image.alt | escape }}" class="product-image">
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
.two-column-section {
  width: 100%;
  padding: var(--section-padding);
  background-color: var(--section-bg-color);
  box-sizing: border-box;
}

.two-column-container {
  display: flex;
  align-items: stretch;
  gap: 0;
  max-width: 1400px;
  margin: 0 auto;
}

.column-left {
  width: var(--left-column-width);
  background-color: var(--left-column-bg);
  padding: var(--left-column-padding);
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-sizing: border-box;
}

.column-right {
  width: var(--right-column-width);
  padding: var(--right-column-padding);
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.image-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--image-gap);
}

.product-image {
  width: var(--image-width);
  height: var(--image-height);
  padding: var(--image-padding);
  border-radius: var(--image-border-radius);
  border: var(--image-border-width) solid var(--image-border-color);
  opacity: var(--image-opacity);
  object-fit: cover;
  display: block;
}

.section-heading {
  font-family: 'Nunito', sans-serif;
  font-size: var(--heading-font-size);
  font-weight: 700;
  color: var(--heading-color);
  line-height: var(--heading-line-height);
  margin: 0 0 var(--heading-margin-bottom) 0;
}

.section-body {
  font-family: 'Lato', sans-serif;
  font-size: var(--body-font-size);
  font-weight: 400;
  color: var(--body-color);
  line-height: var(--body-line-height);
  margin: 0;
}

@media (max-width: 1024px) {
  .two-column-container {
    flex-direction: column;
  }
  
  .column-left,
  .column-right {
    width: 100%;
  }
  
  .section-heading {
    font-size: calc(var(--heading-font-size) * 0.85);
  }
  
  .section-body {
    font-size: calc(var(--body-font-size) * 0.9);
  }
}

@media (max-width: 768px) {
  .two-column-section {
    padding: calc(var(--section-padding) * 0.6);
  }
  
  .column-left {
    padding: calc(var(--left-column-padding) * 0.7);
  }
  
  .column-right {
    padding: calc(var(--right-column-padding) * 0.7);
  }
  
  .section-heading {
    font-size: calc(var(--heading-font-size) * 0.7);
  }
  
  .section-body {
    font-size: calc(var(--body-font-size) * 0.85);
  }
  
  .product-image {
    width: 100%;
    max-width: var(--image-width);
    height: auto;
    max-height: var(--image-height);
  }
}
</style>

