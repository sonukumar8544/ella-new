<div class="purity-dosage-two-column-section" style="
  --section-bg-color: {{ section.settings.section_bg_color }};
  --left-column-bg: {{ section.settings.left_column_bg }};
  --heading-color: {{ section.settings.heading_color }};
  --body-color: {{ section.settings.body_color }};
  --image-border-color: {{ section.settings.image_border_color }};
">
  <div class="container">
    <div class="purity-dosage-two-column-container">
      <div class="purity-dosage-column-left">
        {% if section.settings.heading != blank %}
          <h2 class="purity-dosage-section-heading">{{ section.settings.heading }}</h2>
        {% endif %}
        
        {% if section.settings.body_text != blank %}
          <p class="purity-dosage-section-body">{{ section.settings.body_text }}</p>
        {% endif %}
      </div>
      
      <div class="purity-dosage-column-right">
        {% if section.settings.right_image != blank %}
          <div class="purity-dosage-image-wrapper">
            <img src="{{ section.settings.right_image | image_url: width: 1200 }}" alt="{{ section.settings.right_image.alt | escape }}" class="purity-dosage-product-image">
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
.purity-dosage-two-column-section {
  width: 100%;
  padding: 40px;
  background-color: var(--section-bg-color);
  box-sizing: border-box;
}

.purity-dosage-two-column-container {
  display: flex;
  align-items: stretch;
  gap: 0;
  max-width: 1300px;
  margin: 0 auto;
}

.purity-dosage-column-left {
  width: 50%;
  background-color: var(--left-column-bg);
  padding: 60px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-sizing: border-box;
  height: auto;
}

.purity-dosage-column-right {
  width: 48%;
  padding: 40px;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  height: auto;
}

.purity-dosage-image-wrapper {
  position: relative;
  width: 100%;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12px;
}

.purity-dosage-product-image {
  width: 100%;
  height: 100%;
  padding: 12px;
  border-radius: 36px;
  border: 1px solid var(--image-border-color);
  opacity: 1;
  object-fit: cover;
  display: block;
}

.purity-dosage-section-heading {
  font-size: 42px;
  font-weight: 700;
  color: var(--heading-color);
  line-height: 1.3;
  margin: 0 0 20px 0;
}

.purity-dosage-section-body {
  font-size: 16px;
  font-weight: 400;
  color: var(--body-color);
  line-height: 1.6;
  margin: 0;
}

@media (max-width: 1024px) {
  .purity-dosage-two-column-section {
    padding: 30px;
  }
  
  .purity-dosage-two-column-container {
    flex-direction: column;
  }
  
  .purity-dosage-column-left,
  .purity-dosage-column-right {
    width: 100%;
  }
  
  .purity-dosage-column-left {
    padding: 40px;
  }
  
  .purity-dosage-column-right {
    padding: 30px;
  }
  
  .purity-dosage-section-heading {
    font-size: 36px;
  }
  
  .purity-dosage-section-body {
    font-size: 16px;
  }
  
  .purity-dosage-product-image {
    width: 100%;
    height: 100%;
  }
}

@media (max-width: 768px) {
  .purity-dosage-two-column-section {
    padding: 20px;
  }
  
  .purity-dosage-column-left {
    padding: 30px 20px;
  }
  
  .purity-dosage-column-right {
    padding: 20px;
  }
  
  .purity-dosage-section-heading {
    font-size: 30px;
    margin-bottom: 15px;
  }
  
  .purity-dosage-section-body {
    font-size: 16px;
  }
  
  .purity-dosage-product-image {
    width: 100%;
    height: 100%;
    padding: 8px;
  }
}

@media (max-width: 480px) {
  .purity-dosage-two-column-section {
    padding: 15px;
  }
  
  .purity-dosage-column-left {
    padding: 20px 15px;
  }
  
  .purity-dosage-column-right {
    padding: 15px;
  }
  
  .purity-dosage-section-heading {
    font-size: 24px;
    margin-bottom: 12px;
  }
  
  .purity-dosage-section-body {
    font-size: 16px;
  }
}
</style>

{% schema %}
{
  "name": "Purity Dosage Two Column",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Only Source That's 100% Pure"
    },
    {
      "type": "textarea",
      "id": "body_text",
      "label": "Body Text",
      "default": "Annatto is the only natural source that provides 100% tocotrienols with zero tocopherols. Palm and rice bran sources always come mixed with tocopherols, which block absorption and weaken results."
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Column Image"
    },
    {
      "type": "header",
      "content": "Color Settings"
    },
    {
      "type": "color",
      "id": "section_bg_color",
      "label": "Section Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "left_column_bg",
      "label": "Left Column Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#2C3E50"
    },
    {
      "type": "color",
      "id": "body_color",
      "label": "Body Text Color",
      "default": "#374650"
    },
    {
      "type": "color",
      "id": "image_border_color",
      "label": "Image Border Color",
      "default": "#FFFFFF"
    }
  ],
  "presets": [
    {
      "name": "Purity Dosage Two Column"
    }
  ]
}
{% endschema %}

