<style>
  .color-deviation-testimonial {
    background: linear-gradient(135deg, #086B92 0%, #0A3347 100%);
    padding: 80px 20px;
    width: 100%;
    position: relative;
  }

  .color-deviation-testimonial__inner {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .color-deviation-testimonial__left {
    color: #ffffff;
  }

  .color-deviation-testimonial__title {
    font-size: 36px;
    font-weight: 700;
    line-height: 1.3;
    margin: 0 0 20px;
    color: #ffffff;
  }

  .color-deviation-testimonial__subtitle {
    font-size: 18px;
    line-height: 1.6;
    margin: 0;
    color: #ffffff;
    font-weight: 400;
  }

  .color-deviation-testimonial__right {
    color: #ffffff;
  }

  .color-deviation-testimonial__description {
    font-size: 16px;
    line-height: 1.8;
    margin: 0;
    color: #ffffff;
    font-weight: 300;
  }

  /* Tablet styles */
  @media (max-width: 1024px) {
    .color-deviation-testimonial__inner {
      gap: 40px;
    }

    .color-deviation-testimonial__title {
      font-size: 32px;
    }

    .color-deviation-testimonial__subtitle {
      font-size: 16px;
    }

    .color-deviation-testimonial__description {
      font-size: 15px;
    }
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    .color-deviation-testimonial {
      padding: 60px 20px;
    }

    .color-deviation-testimonial__inner {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .color-deviation-testimonial__title {
      font-size: 28px;
      margin-bottom: 15px;
    }

    .color-deviation-testimonial__subtitle {
      font-size: 15px;
    }

    .color-deviation-testimonial__description {
      font-size: 14px;
      line-height: 1.7;
    }
  }

  @media (max-width: 480px) {
    .color-deviation-testimonial {
      padding: 40px 15px;
    }

    .color-deviation-testimonial__title {
      font-size: 24px;
    }

    .color-deviation-testimonial__subtitle {
      font-size: 14px;
    }

    .color-deviation-testimonial__description {
      font-size: 13px;
    }
  }
</style>

<div class="color-deviation-testimonial">
  <div class="color-deviation-testimonial__inner">
    <div class="color-deviation-testimonial__left">
      {% if section.settings.title != blank %}
        <h2 class="color-deviation-testimonial__title">{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.subtitle != blank %}
        <p class="color-deviation-testimonial__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>
    <div class="color-deviation-testimonial__right">
      {% if section.settings.description != blank %}
        <p class="color-deviation-testimonial__description">{{ section.settings.description }}</p>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Deviation Testimonial",
  "tag": "section",
  "class": "spaced-section",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "A Note to Our Wellness Family"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "We know you care deeply about what goes into your body â€” and so do we."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "If you've noticed some softgels looking a little lighter or darker, you're not alone. It's simply nature showing through. What never changes is the care, testing, and trust that go into every batch. Every softgel is verified for purity, potency, and strength."
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 10,
      "unit": "px",
      "label": "Top Padding",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 10,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Color Deviation Testimonial"
    }
  ]
}
{% endschema %}

<style>
  {% if section.settings.padding_top %}
    #shopify-section-{{ section.id }} .color-deviation-testimonial {
      padding-top: {{ section.settings.padding_top }}px;
    }
  {% endif %}
  {% if section.settings.padding_bottom %}
    #shopify-section-{{ section.id }} .color-deviation-testimonial {
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  {% endif %}
</style>
