<style>
  .tocotrienol-comparison-section {
    padding: 72px 0;
  }

  .tocotrienol-comparison-container {
    max-width: 1180px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .tocotrienol-comparison-title {
    font-size: 40px;
    line-height: 1.25;
    font-weight: 700;
    color: #1f2a36;
    text-align: center;
    margin: 0 0 36px;
  }

  .tocotrienol-comparison-subtitle {
    font-size: 18px;
    line-height: 1.6;
    color: #4a5a68;
    text-align: center;
    max-width: 680px;
    margin: 0 auto 40px;
  }

  .tocotrienol-table-wrapper {
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.9), #ffffff);
    border-radius: 18px;
    box-shadow: 0 26px 60px rgba(30, 50, 107, 0.08);
    overflow: hidden;
    border: 1px solid #e1ebf5;
  }

  .tocotrienol-table {
    width: 100%;
    border-collapse: collapse;
    min-width: 720px;
  }

  .tocotrienol-table thead th {
    font-size: 16px;
    font-weight: 600;
    padding: 22px 28px;
    text-align: left;
    color: #304255;
    background-color: #f0f5fa;
    border-bottom: 1px solid #dbe6f1;
  }

  .tocotrienol-feature-head {
    background-color: #e8f1fa;
    color: #39556e;
  }

  .tocotrienol-table thead th:nth-child(2),
  .tocotrienol-table thead th:nth-child(3) {
    background-color: #f6fbff;
  }

  .tocotrienol-our-head {
    background-color: #dff1ff;
    color: #115c8b;
  }

  .tocotrienol-table tbody th {
    font-size: 16px;
    font-weight: 600;
    color: #304255;
    padding: 24px 28px;
    background-color: #f4f8fc;
    border-right: 1px solid #e1ebf5;
    border-bottom: 1px solid #e6edf6;
    white-space: nowrap;
  }

  .tocotrienol-table tbody td {
    font-size: 16px;
    color: #3e4f60;
    padding: 24px 28px;
    border-bottom: 1px solid #e6edf6;
    border-right: 1px solid #e6edf6;
    background-color: #ffffff;
  }

  .tocotrienol-table tbody tr:last-child td,
  .tocotrienol-table tbody tr:last-child th {
    border-bottom: none;
  }

  .tocotrienol-table tbody td:last-child,
  .tocotrienol-table thead th:last-child {
    border-right: none;
  }

  .tocotrienol-our-cell {
    background-color: #f1f8ff;
    font-weight: 600;
    color: #164c75;
  }

  .tocotrienol-cell {
    display: flex;
    align-items: center;
    gap: 14px;
  }

  .tocotrienol-indicator {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background-color: #e4ebf3;
    color: #607089;
  }

  .tocotrienol-indicator svg {
    width: 18px;
    height: 18px;
    display: block;
  }

  .tocotrienol-indicator.is-positive {
    background-color: #0f7bdc;
    color: #ffffff;
    box-shadow: 0 8px 18px rgba(15, 123, 220, 0.28);
  }

  .tocotrienol-indicator.is-negative {
    background-color: #f1f4f8;
    color: #a3b1c4;
  }

  .tocotrienol-cta-container {
    margin-top: 40px;
    text-align: center;
  }

  .tocotrienol-cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 16px 46px;
    border-radius: 999px;
    background-color: #0c74d4;
    color: #ffffff;
    font-weight: 600;
    font-size: 17px;
    text-decoration: none;
    transition: transform 0.25s ease, box-shadow 0.25s ease;
  }

  .tocotrienol-cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 18px 30px rgba(12, 116, 212, 0.25);
  }

  .tocotrienol-cta-button:focus-visible {
    outline: 3px solid rgba(12, 116, 212, 0.45);
    outline-offset: 2px;
  }

  .tocotrienol-table-wrapper::-webkit-scrollbar {
    height: 8px;
  }

  .tocotrienol-table-wrapper::-webkit-scrollbar-thumb {
    background: rgba(123, 148, 176, 0.35);
    border-radius: 999px;
  }

  .tocotrienol-table-wrapper::-webkit-scrollbar-track {
    background: transparent;
  }

  @media (max-width: 1024px) {
    .tocotrienol-comparison-title {
      font-size: 34px;
    }

    .tocotrienol-table tbody th,
    .tocotrienol-table tbody td,
    .tocotrienol-table thead th {
      padding: 20px 22px;
      font-size: 15px;
    }
  }

  @media (max-width: 768px) {
    .tocotrienol-comparison-section {
      padding: 56px 0;
    }

    .tocotrienol-comparison-title {
      font-size: 30px;
      margin-bottom: 24px;
    }

    .tocotrienol-comparison-subtitle {
      font-size: 16px;
      margin-bottom: 28px;
    }

    .tocotrienol-table-wrapper {
      overflow-x: auto;
    }

    .tocotrienol-table {
      min-width: 640px;
    }
  }

  @media (max-width: 540px) {
    .tocotrienol-comparison-section {
      padding: 44px 0;
    }

    .tocotrienol-comparison-title {
      font-size: 26px;
    }

    .tocotrienol-table tbody th,
    .tocotrienol-table tbody td,
    .tocotrienol-table thead th {
      padding: 18px 16px;
      font-size: 14px;
    }

    .tocotrienol-cta-button {
      width: 100%;
      max-width: 320px;
      font-size: 16px;
    }
  }
</style>

