<div class="tocotrienol-comparison-section">
  <div class="tocotrienol-comparison-container">
    <h2 class="tocotrienol-comparison-title">{{ section.settings.title | default: "Why Our Tocotrienol Outperforms Other Vitamin E" }}</h2>
    {% if section.settings.subtitle != blank %}
      <p class="tocotrienol-comparison-subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}

    <div class="tocotrienol-table-wrapper">
      <table class="tocotrienol-table" role="table">
        <thead>
          <tr>
            <th scope="col" class="tocotrienol-feature-head tocotrienol-highlight-primary">Feature</th>
            <th scope="col">{{ section.settings.column1_title | default: "Cheap Tocopherols" }}</th>
            <th scope="col" class="tocotrienol-highlight-secondary">{{ section.settings.column2_title | default: "Generic Blends" }}</th>
            <th scope="col" class="tocotrienol-our-head tocotrienol-highlight-tertiary">{{ section.settings.column3_title | default: "Our Tocotrienol" }}</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">Source</th>
            <td>
              <div class="tocotrienol-cell">
                <span>{{ section.settings.column1_source | default: "Soy / synthetic" }}</span>
              </div>
            </td>
            <td>
              <div class="tocotrienol-cell">
                <span>{{ section.settings.column2_source | default: "Cheap mass labels" }}</span>
              </div>
            </td>
            <td class="tocotrienol-our-cell">
              <div class="tocotrienol-cell">
                <span class="tocotrienol-icon">
                  <img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/Frame_1618873618.svg?v=1762779131" alt="{{ section.settings.column3_icon_alt | default: 'Premium tocotrienol icon' | escape }}" loading="lazy" width="22" height="22">
                </span>
                <span>{{ section.settings.column3_source | default: "100% Annatto" }}</span>
              </div>
            </td>
          </tr>
          <tr>
            <th scope="row" class="tocotrienol-highlight-primary">Purity</th>
            <td>
              <div class="tocotrienol-cell">
                <span>{{ section.settings.column1_purity | default: "Low, filler-heavy" }}</span>
              </div>
            </td>
            <td class="tocotrienol-highlight-secondary">
              <div class="tocotrienol-cell">
                <span>{{ section.settings.column2_purity | default: "Contaminated with tocopherols" }}</span>
              </div>
            </td>
            <td class="tocotrienol-our-cell tocotrienol-highlight-tertiary">
              <div class="tocotrienol-cell">
                <span class="tocotrienol-icon">
                  <img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/preservative-free_14617590_1.svg?v=1762858416" alt="{{ section.settings.column3_icon_alt | default: 'Premium tocotrienol icon' | escape }}" loading="lazy" width="22" height="22">
                </span>
                <span>{{ section.settings.column3_purity | default: "Tocopherol-free" }}</span>
              </div>
            </td>
          </tr>
          <tr>
            <th scope="row">Testing</th>
            <td>
              <div class="tocotrienol-cell">
                <span>{{ section.settings.column1_testing | default: "Rarely verified" }}</span>
              </div>
            </td>
            <td>
              <div class="tocotrienol-cell">
                <span>{{ section.settings.column2_testing | default: "Inconsistent" }}</span>
              </div>
            </td>
            <td class="tocotrienol-our-cell">
              <div class="tocotrienol-cell">
                <span class="tocotrienol-icon">
                  <img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/g495.svg?v=1762858416" alt="{{ section.settings.column3_icon_alt | default: 'Premium tocotrienol icon' | escape }}" loading="lazy" width="22" height="22">
                </span>
                <span>{{ section.settings.column3_testing | default: "Third-party tested" }}</span>
              </div>
            </td>
          </tr>
          <tr>
            <th scope="row" class="tocotrienol-highlight-primary">Trust</th>
            <td>
              <div class="tocotrienol-cell">
                <span>{{ section.settings.column1_trust | default: "Cheap mass labels" }}</span>
              </div>
            </td>
            <td class="tocotrienol-highlight-secondary">
              <div class="tocotrienol-cell">
                <span>{{ section.settings.column2_trust | default: "Marketing hype" }}</span>
              </div>
            </td>
            <td class="tocotrienol-our-cell tocotrienol-highlight-tertiary">
              <div class="tocotrienol-cell">
                <span class="tocotrienol-icon">
                  <img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/Group_1000004414.svg?v=1762858416" alt="{{ section.settings.column3_icon_alt | default: 'Premium tocotrienol icon' | escape }}" loading="lazy" width="22" height="22">
                </span>
                <span>{{ section.settings.column3_trust | default: "Amazon's Choice, GMP-certified" }}</span>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    {% if section.settings.cta_text != blank and section.settings.cta_url != blank %}
      <div class="tocotrienol-cta-container">
        <a href="{{ section.settings.cta_url }}" class="tocotrienol-cta-button">{{ section.settings.cta_text }}</a>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .tocotrienol-comparison-section {
    padding: 72px 0;
  }

  .tocotrienol-comparison-container {
    max-width: 1180px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .tocotrienol-comparison-title {
    font-size: 38px;
    line-height: 1.25;
    font-weight: 400;
    color: #1f2a36;
    text-align: center;
    margin: 0 0 36px;
  }

  .tocotrienol-comparison-subtitle {
    font-size: 18px;
    line-height: 1.6;
    color: #4a5a68;
    text-align: center;
    max-width: 680px;
    margin: 0 auto 40px;
  }

  .tocotrienol-table-wrapper {
    /* background: linear-gradient(180deg, rgba(255, 255, 255, 0.9), #ffffff); */
    /* border-radius: 18px; */
    box-shadow: 0 26px 60px rgba(30, 50, 107, 0.08);
    overflow: hidden;
    border: 1px solid #e1ebf5;
  }

  .tocotrienol-table {
    width: 100%;
    border-collapse: collapse;
    min-width: 720px;
  }

  .tocotrienol-table thead th {
    font-size: 16px;
    font-weight: 600;
    padding: 22px 28px;
    text-align: left;
    color: #2e4052;
    background-color: #f3f8fc;
    border-bottom: 1px solid #d6e3f0;
  }

  .tocotrienol-feature-head {
    background-color: #e7f0f9;
    color: #365069;
  }

  .tocotrienol-table thead th:nth-child(2),
  .tocotrienol-table thead th:nth-child(3) {
    background-color: #f8fbff;
  }

  .tocotrienol-our-head {
    background-color: #d8ecff;
    color: #0f5c8d;
  }

  .tocotrienol-table tbody th {
    font-size: 16px;
    font-weight: 600;
    color: #2f4155;
    padding: 24px 28px;
    /* background-color: #f1f6fb; */
    border-bottom: 1px solid #e6edf6;
    white-space: nowrap;
  }

  .tocotrienol-table tbody td {
    font-size: 17px;
    color: #374650;
    padding: 24px 28px;
    border-bottom: 1px solid #e6edf6;
    /* border-right: 1px solid #e6edf6; */
    background-color: #fbfdff;
  }

  .tocotrienol-table tbody tr:last-child td,
  .tocotrienol-table tbody tr:last-child th {
    border-bottom: none;
  }

  .tocotrienol-table tbody td:last-child,
  .tocotrienol-table thead th:last-child {
    border-right: none;
  }

  .tocotrienol-our-cell {
    background-color: #e9f4ff;
    font-weight: 600;
    color: #0f4f7a;
  }

  .tocotrienol-table thead th.tocotrienol-highlight-primary,
  .tocotrienol-table tbody th.tocotrienol-highlight-primary {
    background-color: #F3F7F8;
  }

  .tocotrienol-table thead th.tocotrienol-highlight-secondary,
  .tocotrienol-table tbody td.tocotrienol-highlight-secondary {
    background-color: #E1F4FD;
  }

  .tocotrienol-table thead th.tocotrienol-highlight-tertiary,
  .tocotrienol-table tbody td.tocotrienol-highlight-tertiary,
  .tocotrienol-our-cell.tocotrienol-highlight-tertiary {
    background-color: #d8ecff;
  }

  .tocotrienol-cell {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .tocotrienol-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    /* border-radius: 50%; */
    flex-shrink: 0;
  }

  .tocotrienol-icon img {
    width: 30px;
    height: 30px;
    object-fit: contain;
    display: block;
  }

  .tocotrienol-icon-fallback {
    font-size: 20px;
    font-weight: 600;
    color: #ffffff;
    line-height: 1;
  }

  .tocotrienol-cta-container {
    margin-top: 40px;
    text-align: center;
  }

  .tocotrienol-cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 16px 46px;
    /* border-radius: 999px; */
    background-color: #0c74d4;
    color: #ffffff;
    font-weight: 600;
    font-size: 17px;
    text-decoration: none;
    transition: transform 0.25s ease, box-shadow 0.25s ease;
  }

  .tocotrienol-cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 18px 30px rgba(12, 116, 212, 0.25);
    color: #ffffff;
  }

  .tocotrienol-cta-button:focus-visible {
    outline: 3px solid rgba(12, 116, 212, 0.45);
    outline-offset: 2px;
  }

  .tocotrienol-table-wrapper::-webkit-scrollbar {
    height: 8px;
  }

  /* .tocotrienol-table-wrapper::-webkit-scrollbar-thumb {
    background: rgba(123, 148, 176, 0.35);
    border-radius: 999px;
  } */

  .tocotrienol-table-wrapper::-webkit-scrollbar-track {
    background: transparent;
  }

  @media (max-width: 1024px) {
    .tocotrienol-comparison-title {
      font-size: 34px;
    }

    .tocotrienol-table tbody th,
    .tocotrienol-table tbody td,
    .tocotrienol-table thead th {
      padding: 20px 22px;
      font-size: 15px;
    }
  }

  @media (max-width: 768px) {
    .tocotrienol-comparison-section {
      padding: 56px 0;
    }

    .tocotrienol-comparison-title {
      font-size: 30px;
      margin-bottom: 24px;
    }

    .tocotrienol-comparison-subtitle {
      font-size: 16px;
      margin-bottom: 28px;
    }

    .tocotrienol-table-wrapper {
      overflow-x: auto;
    }

    .tocotrienol-table {
      min-width: 640px;
    }
  }

  @media (max-width: 540px) {
    .tocotrienol-comparison-section {
      padding: 44px 0;
    }

    .tocotrienol-comparison-title {
      font-size: 26px;
    }

    .tocotrienol-table tbody th,
    .tocotrienol-table tbody td,
    .tocotrienol-table thead th {
      padding: 18px 16px;
      font-size: 14px;
    }

    .tocotrienol-cta-button {
      width: 100%;
      max-width: 320px;
      font-size: 16px;
    }
  }
</style>

