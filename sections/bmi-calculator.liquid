{% schema %}
  {
    "name": "BMI Calculator",
    "settings": [],
    "presets": [
      {
        "name": "BMI Calculator"
      }
    ]
  }
{% endschema %}

<style>
    @media (min-width: 768px){
        .bmi-calc-body{
           min-height: 100vh;
        }
    }
  .bmi-calc-body {
    font-family: 'Arial', sans-serif;
    background-color: #f5f5f5;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #333;
    flex-direction: column;
  }

  .bmi-calc-calculator-container {
    background-color: white;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 30px;
    width: 100%;
    max-width: 500px;
    position: relative;
  }

  .bmi-calc-calculator-container h1 {
    color: #2c3e50;
    text-align: center;
    margin-bottom: 30px;
    line-height: 1.1;
    font-size: 24px;
  }

  .bmi-calc-input-group {
    margin-bottom: 20px;
  }

  .bmi-calc-input-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: bold;
  }

  .bmi-calc-input-group select,
  .bmi-calc-input-group input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 16px;
  }

  .bmi-calc-input-group input {
    box-sizing: border-box;
  }

  .bmi-calc-button {
    background-color: #086b92;
    color: white;
    border: none;
    padding: 12px 20px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    width: 100%;
    transition: background-color 0.3s;
    margin-top: 10px;
  }

  .bmi-calc-button:hover {
    background-color: #086b92;
  }

  .bmi-calc-result-container {
    margin-top: 30px;
    padding: 20px;
    background-color: #f8f9fa;
    border-radius: 5px;
    width: 100%;
    box-sizing: border-box;
  }

  .bmi-calc-result-container h2 {
    color: #2c3e50;
    margin-top: 0;
    text-align: center;
  }

  .bmi-calc-result-value {
    font-size: 32px;
    font-weight: bold;
    color: #e74c3c;
    margin: 15px 0;
    text-align: center;
  }

  .bmi-calc-result-category {
    font-size: 24px;
    font-weight: bold;
    color: #086b92;
    margin: 15px 0;
    text-align: center;
  }

  .bmi-calc-suggestion {
    background-color: #e8f4fc;
    padding: 15px;
    border-radius: 5px;
    margin-top: 20px;
    border-left: 4px solid #086b92;
    max-width: 1000px;
    margin-left: auto;
    margin-right: auto;
  }

  .bmi-calc-suggestion h3 {
    margin-top: 0;
    color: #2c3e50;
  }

  .bmi-calc-comparison {
    display: flex;
    justify-content: space-around;
    margin-top: 15px;
    text-align: center;
  }

  .bmi-calc-comparison-item {
    flex: 1;
    padding: 10px;
  }

  .bmi-calc-comparison-value {
    font-weight: bold;
    color: #2c3e50;
  }

  .bmi-calc-error {
    color: #d32f2f;
    margin-top: 10px;
    text-align: center;
  }

  .bmi-calc-healthy-range {
    margin-top: 15px;
    text-align: center;
    color: #666;
  }

  @media (max-width: 760px){
    .bmi-calc-calculator-container{
      padding: 10px;
    }

    .bmi-calc-calculator-container h1{
      font-size: 24px;
    }
    
    .bmi-calc-result-value {
      font-size: 28px;
    }
    
    .bmi-calc-result-category {
      font-size: 20px;
    }
  }

  /* Popup styles */
  .bmi-calc-popup-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .bmi-calc-popup-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  .bmi-calc-popup {
    background-color: white;
    border-radius: 10px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    width: 90%;
    max-width: 500px;
    max-height: 90vh;
    overflow-y: auto;
    position: relative;
    padding: 30px;
    transform: translateY(20px);
    transition: transform 0.3s ease;
  }

  .bmi-calc-popup-overlay.active .bmi-calc-popup {
    transform: translateY(0);
  }

  .bmi-calc-popup-close {
    position: absolute;
    top: 15px;
    right: 15px;
    width: 30px;
    height: 30px;
    background: none;
    border: none;
    font-size: 30px;
    cursor: pointer;
    color: red;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    transition: all 0.2s;
    z-index: 10;
  }

  .bmi-calc-popup-close:hover {
    color: #333;
    background-color: #f5f5f5;
  }

  .bmi-calc-popup-content {
    margin-top: 20px;
  }

  /* Klaviyo form styles */
  .bmi-calc-klaviyo-form {
    /* margin: 20px 0; */
    padding-bottom: 20px;
  }

  /* Klaviyo submit button styles */
  .klaviyo-submit-button {
    background: rgb(22, 109, 148) !important;
    border-radius: 6px !important;
    border-style: solid !important;
    border-color: rgb(194, 194, 194) !important;
    border-width: 2px !important;
    color: rgb(255, 255, 255) !important;
    font-family: Nunito-Sans-Klaviyo-Hosted, Arial, "Helvetica Neue", Helvetica, sans-serif !important;
    font-size: 14px !important;
    font-weight: 700 !important;
    letter-spacing: 0px !important;
    line-height: 1 !important;
    font-style: normal !important;
    white-space: normal !important;
    padding: 0px 10px !important;
    text-align: center !important;
    word-break: break-word !important;
    align-self: flex-end !important;
    cursor: pointer !important;
    pointer-events: auto !important;
    height: 40px !important;
    width: 100% !important;
    margin-top: 10px !important;
  }

  .bmi-calc-popup-title {
    color: #2c3e50;
    text-align: center;
    margin-bottom: 20px;
  }
</style>

<section class="bmi-calc-body">
  <div class="bmi-calc-calculator-container">
    <h1>BMI Calculator</h1>

    <div class="bmi-calc-input-group">
      <label for="bmi-calc-age">Age (years):</label>
      <input
        type="number"
        id="bmi-calc-age"
        min="2"
        max="120"
        placeholder="Enter your age (2-120)"
        value="30">
    </div>

    <div class="bmi-calc-input-group">
      <label for="bmi-calc-gender">Gender:</label>
      <select id="bmi-calc-gender">
        <option value="" selected>Select gender</option>
        <option value="male" selected >Male</option>
        <option value="female">Female</option>
      </select>
    </div>

    <div class="bmi-calc-input-group">
      <label for="bmi-calc-height">Height (cm):</label>
      <input
        type="number"
        id="bmi-calc-height"
        min="50"
        max="300"
        placeholder="Enter height (50-300cm)"
        value="175">
    </div>

    <div class="bmi-calc-input-group">
      <label for="bmi-calc-weight">Weight (kg):</label>
      <input
        type="number"
        id="bmi-calc-weight"
        min="5"
        max="500"
        placeholder="Enter weight (5-500kg)"
        value="70">
    </div>

    <button id="bmi-calc-calculate-btn" class="bmi-calc-button">Calculate BMI</button>
  </div>

  <div
    id="bmi-calc-result"
    class="bmi-calc-result-container"
    style="display: none;">
    <h2>Your Results</h2>
    <div class="bmi-calc-result-value" id="bmi-calc-result-value">0.0</div>
    <div class="bmi-calc-result-category" id="bmi-calc-result-category">Category</div>

    <div class="bmi-calc-suggestion" id="bmi-calc-suggestion">
      <h3>Health Information</h3>
      <p id="bmi-calc-suggestion-text"></p>
      <div class="bmi-calc-healthy-range" id="bmi-calc-healthy-range"></div>
    </div>

    <div class="bmi-calc-suggestion">
      <h3>BMI Categories</h3>
      <p><strong>Underweight:</strong> BMI less than 18.5</p>
      <p><strong>Normal weight:</strong> BMI 18.5-24.9</p>
      <p><strong>Overweight:</strong> BMI 25-29.9</p>
      <p><strong>Obese:</strong> BMI 30 or greater</p>
      <p><strong>Note:</strong> BMI is a screening tool but not a diagnostic of body fatness or health.</p>
    </div>
  </div>
</section>

<!-- Popup HTML -->
<div class="bmi-calc-popup-overlay" id="bmi-calc-popup">
  <div class="bmi-calc-popup">
    <button class="bmi-calc-popup-close" id="bmi-calc-popup-close">&times;</button>
    <h2 class="bmi-calc-popup-title">Get Your Full Health Analysis</h2>
    <div class="bmi-calc-popup-content">
      <div class="bmi-calc-klaviyo-form">
        <div class="klaviyo-form-RrDsq5"></div>
      </div>
    </div>
  </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const calculateBtn = document.getElementById('bmi-calc-calculate-btn');
        const resultElement = document.getElementById('bmi-calc-result');
        const resultValue = document.getElementById('bmi-calc-result-value');
        const resultCategory = document.getElementById('bmi-calc-result-category');
        const suggestionText = document.getElementById('bmi-calc-suggestion-text');
        const healthyRange = document.getElementById('bmi-calc-healthy-range');
        
        // Popup elements
        const popup = document.getElementById('bmi-calc-popup');
        const popupClose = document.getElementById('bmi-calc-popup-close');
        
        // Store the calculated BMI
        let calculatedBMI = 0;
        let calculatedCategory = '';
        let calculatedDescription = '';
        let calculatedRange = '';

        // Close popup when clicking the close button
        popupClose.addEventListener('click', function() {
            popup.classList.remove('active');
            // Show the regular result container after closing popup
            displayResult(calculatedBMI, calculatedCategory, calculatedDescription, calculatedRange);
        });

        // Close popup when clicking outside of it
        popup.addEventListener('click', function(e) {
            if (e.target === popup) {
                popup.classList.remove('active');
                // Show the regular result container after closing popup
                displayResult(calculatedBMI, calculatedCategory, calculatedDescription, calculatedRange);
            }
        });

        // Function to handle Klaviyo button clicks
        function handleKlaviyoButtonClick(e) {
            // Check if the clicked element is the Klaviyo submit button
            const klaviyoButton = e.target.closest('.go3265039304');
            if (klaviyoButton && popup.classList.contains('active')) {
                // Close the popup
                popup.classList.remove('active');
                // Show the regular result container
                displayResult(calculatedBMI, calculatedCategory, calculatedDescription, calculatedRange);
            }
        }

        // Set up event listener for Klaviyo button
        document.addEventListener('click', handleKlaviyoButtonClick);
        
        // Calculate button event listener
        calculateBtn.addEventListener('click', calculateBMI);
        
        function calculateBMI() {
            // Get input values
            const age = parseInt(document.getElementById('bmi-calc-age').value);
            const gender = document.getElementById('bmi-calc-gender').value;
            const height = parseFloat(document.getElementById('bmi-calc-height').value);
            const weight = parseFloat(document.getElementById('bmi-calc-weight').value);
            
            // Clear previous results
            resultElement.style.display = 'none';
            
            // Validation
            if (!age || age < 2 || age > 120) {
              showError("Please enter a valid age between 2-120 years");
              return;
            }
            
            if (!gender) {
              showError("Please select your gender");
              return;
            }
            
            if (!height || height < 50 || height > 300) {
              showError("Please enter a valid height between 50-300cm");
              return;
            }
            
            if (!weight || weight < 5 || weight > 500) {
              showError("Please enter a valid weight between 5-500kg");
              return;
            }

            // Calculate BMI
            const heightInMeter = height / 100;
            const bmi = (weight / (heightInMeter * heightInMeter)).toFixed(1);
            
            // Determine category based on age and BMI
            let category = "";
            let description = "";
            
            if (age < 18) {
              // Child/teen BMI categories are different - this is simplified
              if (bmi < 5) {
                category = "Underweight";
                description = "Consult with a healthcare provider. This may indicate nutritional deficiencies or other health concerns.";
              }
              else if (bmi >= 5 && bmi < 85) {
                category = "Healthy weight";
                description = "Your weight is within a healthy range for your age and height.";
              }
              else if (bmi >= 85 && bmi < 95) {
                category = "Overweight";
                description = "Consider consulting with a healthcare provider about healthy lifestyle choices.";
              }
              else {
                category = "Obese";
                description = "Consult with a healthcare provider. This may increase risk for health problems.";
              }
            } else {
              // Adult BMI categories
              if (bmi < 18.5) {
                category = "Underweight";
                description = "You may need to gain weight. Consult with a healthcare provider or dietitian.";
              } else if (bmi >= 18.5 && bmi < 25) {
                category = "Normal weight";
                description = "Your weight is within a healthy range. Maintain your current lifestyle.";
              } else if (bmi >= 25 && bmi < 30) {
                category = "Overweight";
                description = "Consider making lifestyle changes to reach a healthier weight.";
              } else {
                category = "Obese";
                description = "Consult with a healthcare provider. Obesity increases risk for many health conditions.";
              }
            }

            // Calculate healthy weight range for adults
            let rangeText = '';
            if (age >= 18) {
              const minHealthyWeight = (18.5 * (heightInMeter * heightInMeter)).toFixed(1);
              const maxHealthyWeight = (24.9 * (heightInMeter * heightInMeter)).toFixed(1);
              rangeText = `Healthy weight range for your height: <strong>${minHealthyWeight}kg - ${maxHealthyWeight}kg</strong>`;
            }

            // Store the calculated values
            calculatedBMI = bmi;
            calculatedCategory = category;
            calculatedDescription = description;
            calculatedRange = rangeText;

            // Show the popup with Klaviyo form
            popup.classList.add('active');
            
            // Hide the regular result container initially
            resultElement.style.display = 'none';
        }
        
        function displayResult(bmi, category, description, rangeText) {
            resultValue.textContent = bmi;
            resultCategory.textContent = category;
            suggestionText.innerHTML = description;
            healthyRange.innerHTML = rangeText || '';
            resultElement.style.display = 'block';
            
            // Scroll to results
            resultElement.scrollIntoView({ behavior: 'smooth' });
        }
        
        function showError(message) {
            const errorElement = document.createElement('div');
            errorElement.className = 'bmi-calc-error';
            errorElement.textContent = message;
            
            // Remove any existing error
            const existingError = document.querySelector('.bmi-calc-error');
            if (existingError) {
                existingError.remove();
            }
            
            // Insert after the calculator container
            document.querySelector('.bmi-calc-body').insertBefore(errorElement, document.querySelector('.bmi-calc-result-container'));
        }
    });
</script>