      font-size: 18px;
      margin-bottom: 6px;
    }

    #dr-timeline-{{ section.id }} .dr-timeline-subheading {
      font-size: 17px;
      margin-bottom: 8px;
    }

    #dr-timeline-{{ section.id }} .dr-timeline-description {
      font-size: 14px;
    }
  }
</style>

<script>
  (function() {
    const timelineSection = document.getElementById('dr-timeline-{{ section.id }}');
    if (!timelineSection) return;

    const timelineWrapper = timelineSection.querySelector('.dr-timeline-wrapper');
    const timelineLine = timelineSection.querySelector('.dr-timeline-line');
    const timelineItems = timelineSection.querySelectorAll('.dr-timeline-item');
    
    function updateTimelineLine() {
      if (timelineLine && timelineWrapper) {
        // Always ensure line is visible
        timelineLine.style.display = 'block';
        timelineLine.style.opacity = '1';
        timelineLine.style.visibility = 'visible';
        timelineLine.style.left = '50%';
        timelineLine.style.transform = 'translateX(-50%)';
        timelineLine.style.width = '2px';
        timelineLine.style.zIndex = '1';
        timelineLine.style.background = 'linear-gradient(to bottom, rgba(8, 107, 146, 0.5) 0%, rgba(8, 107, 146, 1) 10%, rgba(8, 107, 146, 1) 90%, rgba(8, 107, 146, 0.2) 100%)';
        
        if (timelineItems.length > 0) {
          const firstItem = timelineItems[0];
          const lastItem = timelineItems[timelineItems.length - 1];
          const firstMarker = firstItem.querySelector('.dr-timeline-marker');
          const lastMarker = lastItem.querySelector('.dr-timeline-marker');
          
          if (firstMarker && lastMarker) {
            const firstTop = firstMarker.offsetTop + firstMarker.offsetHeight / 2;
            const lastTop = lastMarker.offsetTop;
            const lineTop = firstTop - timelineWrapper.offsetTop;
            const lineHeight = lastTop - firstTop;
            
            if (lineHeight > 0) {
              timelineLine.style.top = lineTop + 'px';
              timelineLine.style.height = lineHeight + 'px';
            } else {
              // Fallback: use wrapper height
              const wrapperHeight = timelineWrapper.offsetHeight;
              timelineLine.style.top = '0';
              timelineLine.style.height = wrapperHeight + 'px';
            }
          } else {
            // Fallback: use wrapper height
            const wrapperHeight = timelineWrapper.offsetHeight;
            timelineLine.style.top = '0';
            timelineLine.style.height = wrapperHeight + 'px';
          }
        } else {
          // Fallback: use wrapper height
          const wrapperHeight = timelineWrapper.offsetHeight;
          timelineLine.style.top = '0';
          timelineLine.style.height = wrapperHeight + 'px';
        }
      }
    }

    if (timelineLine) {
      setTimeout(updateTimelineLine, 100);
      window.addEventListener('resize', function() {
        setTimeout(updateTimelineLine, 100);
      });
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', function() {
          setTimeout(updateTimelineLine, 100);
        });
      }
    }

    const observerOptions = {
      root: null,
      rootMargin: '0px',
      threshold: 0.1
    };

    const observer = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (entry.isIntersecting) {
          setTimeout(updateTimelineLine, 200);
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    observer.observe(timelineSection);

    if (timelineSection.getBoundingClientRect().top < window.innerHeight) {
      setTimeout(updateTimelineLine, 300);
    }
  })();
</script>

