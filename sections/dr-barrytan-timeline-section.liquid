<section class="dr-timeline-section" id="dr-timeline-{{ section.id }}">
  <div class="dr-timeline-container">
    {% if section.settings.title != blank %}
      <h2 class="dr-timeline-title">{{ section.settings.title }}</h2>
    {% endif %}
    
    {% if section.settings.subtitle != blank %}
      <p class="dr-timeline-subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}

    <div class="dr-timeline-wrapper">
      <div class="dr-timeline-line"></div>
      
      {% for block in section.blocks %}
        <div class="dr-timeline-item dr-timeline-item--{{ block.settings.position | default: 'right' }}" {{ block.shopify_attributes }}>
          <div class="dr-timeline-marker">
            <span class="dr-timeline-year">{{ block.settings.year }}</span>
          </div>
          
          <div class="dr-timeline-content">
            {% if block.settings.heading != blank %}
              <h3 class="dr-timeline-heading">{{ block.settings.heading }}</h3>
            {% endif %}
            
            {% if block.settings.subheading != blank %}
              <h4 class="dr-timeline-subheading">{{ block.settings.subheading }}</h4>
            {% endif %}
            
            {% if block.settings.description != blank %}
              <p class="dr-timeline-description">{{ block.settings.description }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  #dr-timeline-{{ section.id }} {
    padding: {{ section.settings.section_padding_top | default: 80 }}px 20px {{ section.settings.section_padding_bottom | default: 80 }}px;
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
  }

  #dr-timeline-{{ section.id }} .dr-timeline-container {
    max-width: {{ section.settings.max_width | default: 1000 }}px;
    margin: 0 auto;
  }

  #dr-timeline-{{ section.id }} .dr-timeline-title {
    font-size: clamp(32px, 5vw, 42px);
    font-weight: 700;
    color: #1a1a1a;
    text-align: center;
    margin: 0 auto 24px;
    line-height: 1.2;
    letter-spacing: -0.02em;
    max-width: 900px;
  }

  #dr-timeline-{{ section.id }} .dr-timeline-subtitle {
    font-size: clamp(16px, 2vw, 18px);
    color: #374650;
    text-align: center;
    margin: 0 auto 64px;
    max-width: 800px;
    line-height: 1.6;
    font-weight: 400;
  }

  #dr-timeline-{{ section.id }} .dr-timeline-wrapper {
    position: relative;
    padding: 20px 0 40px;
  }

  #dr-timeline-{{ section.id }} .dr-timeline-line {
    position: absolute;
    left: 50%;
    top: 0;
    width: 2px;
    min-height: 200px;
    background-color: #086B92;
    background: linear-gradient(
      to bottom,
      rgba(8, 107, 146, 0.5) 0%,
      rgba(8, 107, 146, 1) 10%,
      rgba(8, 107, 146, 1) 90%,
      rgba(8, 107, 146, 0.2) 100%
    );
    transform: translateX(-50%);
    z-index: 1;
    pointer-events: none;
    display: block !important;
    opacity: 1 !important;
    visibility: visible !important;
  }

  #dr-timeline-{{ section.id }} .dr-timeline-item {
    position: relative;
    display: flex;
    align-items: flex-start;
    margin-bottom: 64px;
    z-index: 2;
  }

  #dr-timeline-{{ section.id }} .dr-timeline-item:last-child {
    margin-bottom: 0;
  }

  #dr-timeline-{{ section.id }} .dr-timeline-item--left {
    flex-direction: row;
  }

  #dr-timeline-{{ section.id }} .dr-timeline-item--right {
    flex-direction: row-reverse;
  }

  #dr-timeline-{{ section.id }} .dr-timeline-marker {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    border-radius: 20px;
    background: #086B92;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 3;
    flex-shrink: 0;
    min-width: fit-content;
    box-shadow: 0 2px 8px rgba(8, 107, 146, 0.2);
  }

  #dr-timeline-{{ section.id }} .dr-timeline-year {
    font-size: 15px;
    font-weight: 700;
    color: #ffffff;
    text-align: center;
    line-height: 1.2;
    white-space: nowrap;
  }

  #dr-timeline-{{ section.id }} .dr-timeline-content {
    width: calc(50% - 80px);
    padding: 0;
  }

  #dr-timeline-{{ section.id }} .dr-timeline-item--left .dr-timeline-content {
    margin-right: auto;
    text-align: left;
    padding-right: 40px;
  }

  #dr-timeline-{{ section.id }} .dr-timeline-item--right .dr-timeline-content {
    margin-left: auto;
    text-align: left;
    padding-left: 40px;
  }

  #dr-timeline-{{ section.id }} .dr-timeline-heading {
    font-size: clamp(20px, 3vw, 24px);
    font-weight: 700;
    color: #1a1a1a;
    margin: 0 0 8px;
    line-height: 1.3;
  }

  #dr-timeline-{{ section.id }} .dr-timeline-subheading {
    font-size: clamp(18px, 2.5vw, 22px);
    font-weight: 600;
    color: #086B92;
    margin: 0 0 12px;
    line-height: 1.3;
  }

  #dr-timeline-{{ section.id }} .dr-timeline-description {
    font-size: clamp(15px, 1.8vw, 17px);
    color: #1a1a1a;
    line-height: 1.7;
    margin: 0;
    font-weight: 400;
  }

  /* Tablet styles */
  @media (max-width: 1024px) {
    #dr-timeline-{{ section.id }} {
      padding: 60px 20px;
    }

