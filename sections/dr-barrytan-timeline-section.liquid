<div class="dr-tan-timeline-wrapper">
  {% if section.settings.main_title != blank or section.settings.main_subtitle != blank %}
    <div class="dr-tan-timeline-header">
      {% if section.settings.main_title != blank %}
        <h2 class="dr-tan-timeline-main-title">{{ section.settings.main_title }}</h2>
      {% endif %}
      {% if section.settings.main_subtitle != blank %}
        <p class="dr-tan-timeline-main-subtitle">{{ section.settings.main_subtitle }}</p>
      {% endif %}
    </div>
  {% endif %}

  {% for block in section.blocks %}
    <div class="dr-tan-timeline-item dr-tan-timeline-{{ block.settings.alignment }}" {{ block.shopify_attributes }}>
      <div class="dr-tan-timeline-line"></div>
      {% if block.settings.year != blank %}
        <div class="dr-tan-timeline-year-badge">{{ block.settings.year }}</div>
      {% endif %}
      <div class="dr-tan-timeline-content">
        {% if block.settings.title != blank %}
          <h3 class="dr-tan-timeline-title">{{ block.settings.title }}</h3>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <h4 class="dr-tan-timeline-subtitle">{{ block.settings.subtitle }}</h4>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="dr-tan-timeline-description">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    </div>
  {% endfor %}

</div>

<style>
  .dr-tan-timeline-wrapper {
    position: relative;
    width: 100%;
    max-width: 1100px;
    margin: 0 auto;
    padding: 40px 0;
  }

  .dr-tan-timeline-header {
    text-align: center;
    margin-bottom: 60px;
    padding: 0 20px;
    max-width: 900px;
    margin-left: auto;
    margin-right: auto;
  }

  .dr-tan-timeline-main-title {
    font-size: 32px;
    font-weight: 400;
    color: #374650;
    font-style: normal;
    margin: 0 0 12px;
    line-height: 1.3;
  }

  .dr-tan-timeline-main-subtitle {
    font-size: 18px;
    color: #374650;
    font-style: normal;
    font-weight: 400;
    margin: 0;
    line-height: 1.5;
  }

  .dr-tan-timeline-item {
    position: relative;
    margin-bottom: 20px;
    display: flex;
    align-items: flex-start;
    padding-bottom: 20px;
  }

  .dr-tan-timeline-item:last-child {
    margin-bottom: 0;
  }

  .dr-tan-timeline-line {
    position: absolute;
    left: 50%;
    top: 45px;
    bottom: 0;
    width: 2px;
    background: #dce6ed;
    transform: translateX(-50%);
    display: block !important;
  }

  .dr-tan-timeline-year-badge {
    position: absolute;
    left: 50%;
    top: 0;
    transform: translateX(-50%);
    background: #0f80aa;
    color: #fff;
    padding: 8px 20px;
    border-radius: 25px;
    font-size: 14px;
    font-weight: 600;
    z-index: 10;
    white-space: nowrap;
  }

  .dr-tan-timeline-content {
    width: calc(50% - 30px);
    padding-top: 40px;
  }

  .dr-tan-timeline-item.dr-tan-timeline-right .dr-tan-timeline-content {
    margin-left: auto;
    padding-left: 30px;
  }

  .dr-tan-timeline-item.dr-tan-timeline-left .dr-tan-timeline-content {
    margin-right: auto;
    padding-right: 30px;
  }

  .dr-tan-timeline-title {
    margin: 0 0 4px;
    font-size: 24px;
    font-weight: 600;
    color: #374650;
  }

  .dr-tan-timeline-subtitle {
    margin: 0 0 12px;
    color: #086B92;
    font-size: 18px;
    font-style: normal;
    font-weight: 600;
  }

  .dr-tan-timeline-description {
    font-size: 15px;
    line-height: 1.6;
    color: #374650;
    margin: 0;
  }

  .dr-tan-timeline-description p {
    font-size: 16px;
    line-height: 1.6;
    color: #374650;
    margin: 0;
  }

  /* Desktop */
  @media (min-width: 1025px) {
    /* .dr-tan-timeline-wrapper {
      padding: 40px 200px;
    } */

    .dr-tan-timeline-main-title {
      font-size: 36px;
    }

    .dr-tan-timeline-main-subtitle {
      font-size: 20px;
    }

    .dr-tan-timeline-content {
      width: calc(50% - 40px);
      max-width: 500px;
    }

    .dr-tan-timeline-item.dr-tan-timeline-right .dr-tan-timeline-content {
      padding-left: 40px;
    }

    .dr-tan-timeline-item.dr-tan-timeline-left .dr-tan-timeline-content {
      padding-right: 40px;
    }
  }

  /* Tablet */
  @media (max-width: 1024px) {
    /* .dr-tan-timeline-wrapper {
      padding: 30px 100px;
    } */

    .dr-tan-timeline-content {
      width: calc(50% - 25px);
      max-width: 400px;
    }

    .dr-tan-timeline-item.dr-tan-timeline-right .dr-tan-timeline-content {
      padding-left: 25px;
    }

    .dr-tan-timeline-item.dr-tan-timeline-left .dr-tan-timeline-content {
      padding-right: 25px;
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .dr-tan-timeline-wrapper {
      padding: 0;
    }

    .dr-tan-timeline-header {
      margin-bottom: 40px;
      padding: 0 15px;
    }

    .dr-tan-timeline-main-title {
      font-size: 24px;
    }

    .dr-tan-timeline-main-subtitle {
      font-size: 16px;
    }

    .dr-tan-timeline-item {
      margin-bottom: 20px;
      padding-left: 50px;
      display: block;
    }

    .dr-tan-timeline-line {
      left: 25px;
      transform: none;
      top: 40px;
      display: block !important;
    }

    .dr-tan-timeline-year-badge {
      left: 5px;
      transform: none;
      font-size: 13px;
      padding: 6px 16px;
    }

    .dr-tan-timeline-content {
      max-width: 100%;
      width: 100%;
      margin-left: 0 !important;
      margin-right: 0 !important;
      padding-left: 0 !important;
      padding-right: 0 !important;
      padding-top: 35px !important;
    }

    .dr-tan-timeline-title {
      font-size: 18px;
    }

    .dr-tan-timeline-subtitle {
      font-size: 14px;
    }

    .dr-tan-timeline-description {
      font-size: 14px;
      color: #374650;
    }

    .dr-tan-timeline-description p {
      font-size: 14px;
      color: #374650;
    }
  }

  /* Small Mobile */
  @media (max-width: 480px) {
    .dr-tan-timeline-header {
      margin-bottom: 30px;
      padding: 0 10px;
    }

    .dr-tan-timeline-main-title {
      font-size: 28px;
    }

    .dr-tan-timeline-main-subtitle {
      font-size: 16px;
    }

    .dr-tan-timeline-item {
      padding-left: 45px;
      margin-bottom: 10px;
    }

    .dr-tan-timeline-line {
      left: 25px;
      display: block !important;
    }

    .dr-tan-timeline-year-badge {
      left: 5px;
      transform: none;
      font-size: 12px;
      padding: 5px 14px;
    }

    .dr-tan-timeline-content {
      padding-top: 45px !important;
    }

    .dr-tan-timeline-title {
      font-size: 22px;
    }

    .dr-tan-timeline-subtitle {
      font-size: 18px;
    }

    .dr-tan-timeline-description {
      font-size: 16px;
      line-height: 1.5;
      color: #374650;
    }

    .dr-tan-timeline-description p {
      font-size: 16px;
      line-height: 1.5;
      color: #374650;
    }
  }
</style>

