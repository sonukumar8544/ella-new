<style>
    @media (min-width: 768px){
        .calorie-calc-body{
           min-height: 100vh;
        }
    }
  .calorie-calc-body {
    font-family: 'Arial', sans-serif;
    background-color: #f5f5f5;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #333;
    flex-direction: column;
  }


  .calorie-calc-calculator-container {
    background-color: white;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 30px;
    width: 100%;
    max-width: 500px;
    position: relative;
  }


  .calorie-calc-calculator-container h1 {
    color: #2c3e50;
    text-align: center;
    margin-bottom: 30px;
    line-height: 1.1;
    font-size: 24px;
  }


  .calorie-calc-input-group {
    margin-bottom: 20px;
  }


  .calorie-calc-input-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: bold;
  }


  .calorie-calc-input-group select,
  .calorie-calc-input-group input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 16px;
  }


  .calorie-calc-button {
    background-color: #086b92;
    color: white;
    border: none;
    padding: 12px 20px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    width: 100%;
    transition: background-color 0.3s;
    margin-top: 10px;
  }


  .calorie-calc-button:hover {
    background-color: #075a7b;
  }


  .calorie-calc-result-container {
    margin-top: 30px;
    padding: 20px;
    background-color: #f8f9fa;
    border-radius: 5px;
    width: 100%;
    box-sizing: border-box;
    display: none;
  }


  .calorie-calc-result-container h2 {
    color: #2c3e50;
    margin-top: 0;
    text-align: center;
  }


  .calorie-calc-result-value {
    font-size: 32px;
    font-weight: bold;
    color: #e74c3c;
    margin: 15px 0;
    text-align: center;
  }


  .calorie-calc-result-category {
    font-size: 24px;
    font-weight: bold;
    color: #086b92;
    margin: 15px 0;
    text-align: center;
  }


  .calorie-calc-suggestion {
    background-color: #e8f4fc;
    padding: 15px;
    border-radius: 5px;
    margin-top: 20px;
    border-left: 4px solid #086b92;
    max-width: 1000px;
    margin-left: auto;
    margin-right: auto;
  }


  .calorie-calc-comparison {
    display: flex;
    justify-content: space-around;
    margin-top: 15px;
    text-align: center;
    max-width: 600px;
    margin: auto;
  }


  .calorie-calc-comparison-item {
    flex: 1;
    padding: 10px;
  }


  .calorie-calc-comparison-value {
    font-weight: bold;
    color: #2c3e50;
  }


  @media (max-width: 760px){
    .calorie-calc-calculator-container{
      padding: 15px;
    }


    .calorie-calc-calculator-container h1{
      font-size: 22px;
    }
   
    .calorie-calc-result-value {
      font-size: 28px;
    }
   
    .calorie-calc-result-category {
      font-size: 20px;
    }
  }


  /* Popup styles */
.calorie-calc-popup-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    display: none; /* Changed from 'none' to 'flex' when active */
    justify-content: center;
    align-items: center;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
}


.calorie-calc-popup-overlay.active {
    display: flex; /* Ensure it's visible */
    opacity: 1;
    visibility: visible;
}


  .calorie-calc-popup {
    background-color: white;
    border-radius: 10px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    width: 90%;
    max-width: 500px;
    max-height: 90vh;
    overflow-y: auto;
    position: relative;
    padding: 30px;
    transform: translateY(20px);
    transition: transform 0.3s ease;
  }


  .calorie-calc-popup-overlay.active .calorie-calc-popup {
    transform: translateY(0);
  }


  .calorie-calc-popup-close {
    position: absolute;
    top: 15px;
    right: 15px;
    width: 30px;
    height: 30px;
    background: none;
    border: none;
    font-size: 30px;
    cursor: pointer;
    color: red;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    transition: all 0.2s;
    z-index: 10;
  }


  .calorie-calc-popup-close:hover {
    color: #333;
    background-color: #f5f5f5;
  }


  .calorie-calc-popup-content {
    margin-top: 20px;
  }


  /* Klaviyo form styles */
  .calorie-calc-klaviyo-form {
    margin: 20px 0;
    padding-bottom: 20px;
  }


  /* Klaviyo submit button styles */
  .klaviyo-submit-button {
    background: rgb(22, 109, 148) !important;
    border-radius: 6px !important;
    border-style: solid !important;
    border-color: rgb(194, 194, 194) !important;
    border-width: 2px !important;
    color: rgb(255, 255, 255) !important;
    font-family: Nunito-Sans-Klaviyo-Hosted, Arial, "Helvetica Neue", Helvetica, sans-serif !important;
    font-size: 14px !important;
    font-weight: 700 !important;
    letter-spacing: 0px !important;
    line-height: 1 !important;
    font-style: normal !important;
    white-space: normal !important;
    padding: 0px 10px !important;
    text-align: center !important;
    word-break: break-word !important;
    align-self: flex-end !important;
    cursor: pointer !important;
    pointer-events: auto !important;
    height: 40px !important;
    width: 100% !important;
    margin-top: 10px !important;
  }


  .calorie-calc-popup-title {
    color: #2c3e50;
    text-align: center;
    margin-bottom: 20px;
  }
</style>


<section class="calorie-calc-body">
  <div class="calorie-calc-calculator-container">
    <h1>Calorie Calculator</h1>


    <div class="calorie-calc-input-group">
      <label for="calorie-calc-gender">Gender</label>
      <select id="calorie-calc-gender">
        <option value="male">Male</option>
        <option value="female">Female</option>
      </select>
    </div>


    <div class="calorie-calc-input-group">
      <label for="calorie-calc-age">Age (years)</label>
      <input
        type="number"
        id="calorie-calc-age"
        placeholder="Enter your age"
        min="15"
        max="80"
        value="30">
    </div>


    <div class="calorie-calc-input-group">
      <label for="calorie-calc-height">Height (cm)</label>
      <input
        type="number"
        id="calorie-calc-height"
        placeholder="Enter your height in cm"
        min="100"
        max="250"
        value="170">
    </div>


    <div class="calorie-calc-input-group">
      <label for="calorie-calc-weight">Weight (kg)</label>
      <input
        type="number"
        id="calorie-calc-weight"
        placeholder="Enter your weight in kg"
        min="30"
        max="200"
        value="70">
    </div>


    <div class="calorie-calc-input-group">
      <label for="calorie-calc-activity">Activity Level</label>
      <select id="calorie-calc-activity">
        <option value="1.2">Sedentary (little or no exercise)</option>
        <option value="1.375">Lightly active (light exercise 1-3 days/week)</option>
        <option value="1.55" selected>Moderately active (moderate exercise 3-5 days/week)</option>
        <option value="1.725">Very active (hard exercise 6-7 days/week)</option>
        <option value="1.9">Extra active (very hard exercise & physical job)</option>
      </select>
    </div>


    <div class="calorie-calc-input-group">
      <label for="calorie-calc-goal">Goal</label>
      <select id="calorie-calc-goal">
        <option value="maintain">Maintain weight</option>
        <option value="lose">Lose weight</option>
        <option value="gain">Gain weight</option>
      </select>
    </div>


    <button id="calorie-calc-calculate-btn" class="calorie-calc-button">Calculate Daily Calories</button>
  </div>


  <div class="calorie-calc-result-container" id="calorie-calc-result">
    <h2>Your Results</h2>
    <div class="calorie-calc-result-value" id="calorie-calc-result-value">0 kcal</div>
    <div class="calorie-calc-result-category" id="calorie-calc-result-category">Maintenance Calories</div>


    <div class="calorie-calc-comparison">
      <div class="calorie-calc-comparison-item">
        <div>Weight Loss</div>
        <div class="calorie-calc-comparison-value" id="calorie-calc-loss-value">-500 kcal</div>
      </div>
      <div class="calorie-calc-comparison-item">
        <div>Maintenance</div>
        <div class="calorie-calc-comparison-value" id="calorie-calc-maintain-value">2000 kcal</div>
      </div>
      <div class="calorie-calc-comparison-item">
        <div>Weight Gain</div>
        <div class="calorie-calc-comparison-value" id="calorie-calc-gain-value">+500 kcal</div>
      </div>
    </div>


    <div class="calorie-calc-suggestion">
      <h3>About Your Calorie Needs</h3>
      <p>Your daily calorie needs are calculated using the Mifflin-St Jeor equation, which is considered the most accurate for most people. The result is adjusted based on your activity level.</p>
      <p id="calorie-calc-goal-note"></p>
      <p>For weight loss, aim for 300-500 calories below maintenance. For weight gain, aim for 300-500 calories above maintenance.</p>
    </div>
  </div>
</section>


<!-- Popup HTML -->
<div class="calorie-calc-popup-overlay" id="calorie-calc-popup">
  <div class="calorie-calc-popup">
    <button class="calorie-calc-popup-close" id="calorie-calc-popup-close">&times;</button>
    <h2 class="calorie-calc-popup-title">Get Your Full Nutrition Plan</h2>
    <div class="calorie-calc-popup-content">
      <!-- Klaviyo form -->
      <div class="calorie-calc-klaviyo-form">
        <div class="klaviyo-form-RrDsq5"></div>
      </div>
    </div>
  </div>
</div>


<script>
    document.addEventListener('DOMContentLoaded', function() {
        const calculateBtn = document.getElementById('calorie-calc-calculate-btn');
        const resultContainer = document.getElementById('calorie-calc-result');
        const resultValue = document.getElementById('calorie-calc-result-value');
        const resultCategory = document.getElementById('calorie-calc-result-category');
        const lossValue = document.getElementById('calorie-calc-loss-value');
        const maintainValue = document.getElementById('calorie-calc-maintain-value');
        const gainValue = document.getElementById('calorie-calc-gain-value');
        const goalNote = document.getElementById('calorie-calc-goal-note');
       
        // Popup elements
        const popup = document.getElementById('calorie-calc-popup');
        const popupClose = document.getElementById('calorie-calc-popup-close');
       
        // Store calculated values
        let calculatedCalories = 0;
        let calculatedGoal = '';
       
        calculateBtn.addEventListener('click', function() {
            // First calculate the calories
            const calculationSuccessful = calculateCalories();
           
            // Only show popup if calculation was successful
            if (calculationSuccessful) {
                popup.classList.add('active');
                // Hide the regular result container initially
                resultContainer.style.display = 'none';
            }
        });
       
        // Close popup when clicking the close button
        popupClose.addEventListener('click', function() {
            popup.classList.remove('active');
            displayResult(calculatedCalories, calculatedGoal);
        });
       
        // Close popup when clicking outside of it
        popup.addEventListener('click', function(e) {
            if (e.target === popup) {
                popup.classList.remove('active');
                displayResult(calculatedCalories, calculatedGoal);
            }
        });
       
        // Function to handle Klaviyo button clicks
        function handleKlaviyoButtonClick(e) {
            const klaviyoButton = e.target.closest('.go3265039304');
            if (klaviyoButton && popup.classList.contains('active')) {
                popup.classList.remove('active');
                displayResult(calculatedCalories, calculatedGoal);
            }
        }
       
        // Set up event listener for Klaviyo button
        document.addEventListener('click', handleKlaviyoButtonClick);
       
        // Listen for Klaviyo form submission as a fallback
        document.addEventListener('klaviyoForms', function(e) {
            if (e.detail.type === 'submit' && e.detail.formId === 'T6BNnH') {
                popup.classList.remove('active');
                displayResult(calculatedCalories, calculatedGoal);
            }
        });
       
        function calculateCalories() {
            const gender = document.getElementById('calorie-calc-gender').value;
            const age = parseInt(document.getElementById('calorie-calc-age').value);
            const height = parseFloat(document.getElementById('calorie-calc-height').value);
            const weight = parseFloat(document.getElementById('calorie-calc-weight').value);
            const activity = parseFloat(document.getElementById('calorie-calc-activity').value);
            const goal = document.getElementById('calorie-calc-goal').value;
           
            // Clear previous errors
            const existingError = document.querySelector('.calorie-calc-error');
            if (existingError) {
                existingError.remove();
            }
           
            // Validate inputs
            if (isNaN(age) || age < 15 || age > 80) {
                showError('Please enter a valid age between 15-80');
                return false;
            }
           
            if (isNaN(height) || height < 100 || height > 250) {
                showError('Please enter a valid height between 100-250 cm');
                return false;
            }
           
            if (isNaN(weight) || weight < 30 || weight > 200) {
                showError('Please enter a valid weight between 30-200 kg');
                return false;
            }
           
            // Calculate BMR using Mifflin-St Jeor Equation
            let bmr;
            if (gender === 'male') {
                bmr = (10 * weight) + (6.25 * height) - (5 * age) + 5;
            } else {
                bmr = (10 * weight) + (6.25 * height) - (5 * age) - 161;
            }
           
            // Calculate TDEE (Total Daily Energy Expenditure)
            const tdee = Math.round(bmr * activity);
           
            // Adjust for goal
            let adjustedCalories = tdee;
            if (goal === 'lose') {
                adjustedCalories = tdee - 500;
            } else if (goal === 'gain') {
                adjustedCalories = tdee + 500;
            }
           
            // Store calculated values
            calculatedCalories = adjustedCalories;
            calculatedGoal = goal;
           
            return true; // Calculation was successful
        }
       
        function displayResult(calories, goal) {
            // Display main result
            resultValue.textContent = `${calories} kcal`;
           
            // Set comparison values
            const maintenance = Math.round(calories / (goal === 'lose' ? 0.85 : (goal === 'gain' ? 1.2 : 1)));
            lossValue.textContent = `${maintenance - 500} kcal`;
            maintainValue.textContent = `${maintenance} kcal`;
            gainValue.textContent = `${maintenance + 500} kcal`;
           
            // Set goal-specific note
            if (goal === 'lose') {
                resultCategory.textContent = "Weight Loss Calories";
                goalNote.textContent = "For healthy weight loss (0.5kg per week), aim for this calorie target combined with regular exercise.";
            } else if (goal === 'gain') {
                resultCategory.textContent = "Weight Gain Calories";
                goalNote.textContent = "For steady muscle gain (0.25-0.5kg per week), aim for this calorie target combined with strength training.";
            } else {
                resultCategory.textContent = "Maintenance Calories";
                goalNote.textContent = "This calorie target will help you maintain your current weight with your current activity level.";
            }
           
            // Show the result container
            resultContainer.style.display = 'block';
            resultContainer.scrollIntoView({ behavior: 'smooth' });
        }
       
        function showError(message) {
            const errorElement = document.createElement('div');
            errorElement.className = 'calorie-calc-error';
            errorElement.style.color = 'red';
            errorElement.style.margin = '10px 0';
            errorElement.style.textAlign = 'center';
            errorElement.textContent = message;
           
            document.querySelector('.calorie-calc-body').insertBefore(
                errorElement,
                document.querySelector('.calorie-calc-result-container')
            );
        }
    });
</script>

