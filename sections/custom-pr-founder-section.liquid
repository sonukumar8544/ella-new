<div class="pr-founder-container">
  <div class="pr-founder-content container">
    <div class="pr-founder-text-section">
      <h1>{{ section.settings.founder_title | newline_to_br }}</h1>

      {% if section.settings.description != blank %}
        <p>{{ section.settings.description }}</p>
      {% endif %}

      {% if section.settings.founder_name != blank %}
        <div class="pr-founder-info">
          <h3 class="pr-founder-name">{{ section.settings.founder_name }}</h3>
          {% if section.settings.founder_tagline != blank %}
            <p class="pr-founder-tagline">{{ section.settings.founder_tagline }}</p>
          {% endif %}
        </div>
      {% endif %}

      <div class="pr-founder-actions">
        {% if section.settings.linkedin_url != blank %}
          <a href="{{ section.settings.linkedin_url }}" target="_blank" class="pr-founder-linkedin">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            LinkedIn
          </a>
        {% endif %}
        
        {% if section.settings.pdf_file != blank %}
          <a href="{{ section.settings.pdf_file }}" target="_blank" class="pr-founder-pdf">
            Download Full Founder Story PDF
          </a>
        {% endif %}
      </div>
    </div>
    <div class="pr-founder-image-section">
      <img src="{{ section.settings.founder_image | img_url: 'master' }}" alt="{{ section.settings.founder_image.alt }}" />
    </div>
  </div>
</div>

<style>
  .pr-founder-container {
    background-color: #F8F8F8;;
    width: 100%;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  @media (max-width: 768px) {
    .pr-founder-container {
        padding: 60px 0;
    }
  }

  .pr-founder-content {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
    max-width: 1200px;
    gap: 40px;
    flex-wrap: wrap;
    padding: 0 20px;
  }

  .pr-founder-text-section {
    flex: 1 1 50%;
    color: #333;
    margin: auto;
  }

  .pr-founder-text-section h1 {
    font-size: 32px;
    font-weight: bold;
    margin-bottom: 20px;
    color: #333;
    line-height: 1.2;
  }

  .pr-founder-text-section p {
    font-size: 16px;
    line-height: 1.6em;
    margin-bottom: 20px;
    color: #374650;
    margin: 6px 6px 6px 0px;
  }

  .pr-founder-info {
    margin: 30px 0;
  }

  .pr-founder-name {
    font-size: 24px;
    font-weight: bold;
    color: #086b92;
    margin: 0;
    display: inline-block;
    position: relative;
  }

  .pr-founder-name::after {
    content: '';
    position: absolute;
    right: -30px;
    top: 50%;
    transform: translateY(-50%);
    width: 20px;
    height: 2px;
    background-color: #086b92;
  }

  .pr-founder-tagline {
    font-size: 16px;
    color: #086b92 !important;
    margin: 10px 0 0 0;
    font-style: italic;
  }

  .pr-founder-actions {
    display: flex;
    gap: 20px;
    margin-top: 30px;
    flex-wrap: wrap;
  }

  .pr-founder-linkedin {
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
    gap: 8px;
    color: #333;
    text-decoration: none;
    font-weight: 800;
    transition: color 0.3s ease;
  }

  .pr-founder-linkedin:hover {
    color: #0077b5;
  }

  .pr-founder-linkedin svg {
    border-radius: 4px;
  }

  .pr-founder-pdf {
    display: inline-block;
    padding: 10px 20px;
    border: 1px solid #374650;
    background-color: white;
    color: #374650;
    text-decoration: none;
    border-radius: 30px;
    font-weight: 400;
    transition: all 0.3s ease;
}

  .pr-founder-pdf:hover {
    background-color: #086b92;
    color: white;
    border: 1px solid #086b92;
  }

  .pr-founder-image-section {
    flex: 1 1 40%;
    display: flex;
    align-items: end;
    justify-content: center;
  }

  .pr-founder-image-section img {
    max-width: 100%;
    border-radius: 12px;
  }

  /* Responsive styles */
  @media (max-width: 768px) {
    .pr-founder-content {
      flex-direction: column;
      align-items: center;
      text-align: left;
    }

    .pr-founder-image-section img{
      max-width: 70%;
      margin: auto;
    }

    .pr-founder-content{
      gap: 0px;
    }

    .pr-founder-text-section,
    .pr-founder-image-section {
      flex: 1 1 100%;
    }

    .pr-founder-text-section h1 {
      font-size: 2em;
    }

    .pr-founder-text-section p {
      font-size: 16px;
    }

    .pr-founder-actions {
      flex-direction: column;
      gap: 15px;
    }
  }

  @media (max-width: 480px) {
    .pr-founder-text-section h1 {
      font-size: 1.6em;
    }

    .pr-founder-text-section p {
      font-size: 16px;
    }

    .pr-founder-name::after {
      display: none;
    }
  }
</style>

{% schema %}
    {
      "name": "founder section pr page",
      "settings": [
        {
          "type": "text",
          "id": "founder_title",
          "label": "Title",
          "default": "Meet the Founder"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "When his mother was diagnosed with cancer, Virender Dass set out to find natural solutions to support her treatment. His search led him to Dr. Barrie Tan and the breakthrough science of DeltaGold® Tocotrienols, which made a life-changing difference in her journey.\n\nThat experience transformed Virender's life – from a Hollywood visual effects artist to the Founder & Director of Wellness Extract. Today, his mission is clear: make science-backed, natural supplements accessible worldwide, helping people live healthier, happier lives."
        },
        {
          "type": "image_picker",
          "id": "founder_image",
          "label": "Founder Image"
        },
        {
          "type": "text",
          "id": "founder_name",
          "label": "Founder Name",
          "default": "Virender Dass"
        },
        {
          "type": "text",
          "id": "founder_tagline",
          "label": "Founder Tagline",
          "default": "From Personal Mission to Global Wellness"
        },
        {
          "type": "url",
          "id": "linkedin_url",
          "label": "LinkedIn URL"
        },
        {
          "type": "url",
          "id": "pdf_file",
          "label": "PDF File URL"
        }
      ],
      "presets": [
        {
          "name": "founder section pr page",
          "category": "Custom"
        }
      ]
    }
    {% endschema %}
    