  }
{% endschema %}

<style>
  .vitamin-section-home-container {
    background: linear-gradient(to right, #ffffff, #f5f5f5);
  }
  .vitamin-section-home {
    display: flex;
    flex-wrap: wrap;
    padding: 65px 5%;
    align-items: center;
    gap: 30px;
    max-width: 1300px;
    margin: auto;
  }

  .product-left-section-container {
    display: flex;
    flex: 1 1 60%;
    gap: 20px;
    flex-wrap: wrap;
    align-items: center;
  }

  .vitamin-left {
    position: relative;
    width: 47%;
    flex-shrink: 0;
  }

  .vitamin-left img {
    width: 100%;
    border-radius: 10px;
  }

  .trusted-label {
    position: absolute;
    bottom: 41px;
    left: 45px;
    color: white;
    font-size: 25px;
    line-height: 1.4;
    border-left: 4px solid white;
    font-weight: 300;
    padding-left: 15px;
    display: none;
  }

  .trusted-label strong {
    font-size: 24px;
    font-weight: bold;
  }

  .vitamin-center-section {
    display: flex;
    flex-direction: column;
    gap: 15px;
    justify-content: space-between;
    width: 47%;
  }

  .vitamin-center-section .card {
    background: linear-gradient(135deg, #a7d7e5 0%, #086b92 100%);
    color: white;
    padding: 18px;
    border-radius: 10px;
    font-size: 18px;
    font-weight: 400;
    line-height: 1.4;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .vitamin-center-section .card p {
    color: white;
    font-size: 24px;
    line-height: 1.3;
    font-weight: 300;
  }

  .vitamin-center-section img {
    /* width: 250px; */
    border-radius: 10px;
  }

  .vitamin-right-section {
    flex: 1 1 35%;
    max-width: 450px;
  }

  .vitamin-right-section h2 {
    font-size: 30px;
    font-weight: 400;
    margin-bottom: 15px;
    text-align: center;
  }

  .vitamin-right-section h2 span {
    font-style: italic;
    font-weight: bold;
    display: block;
    margin-top: 5px;
  }

  .vitamin-right-section em {
    font-weight: bold;
  }

  .vitamin-right-section p {
    font-size: 16px;
    color: #333;
    margin: 10px 0;
    text-align: center;
  }

  .vitamin-right-section strong {
    font-weight: bold;
  }

  .shop-btn-home {
    margin: 30px 0;
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .shop-btn-home button {
    padding: 12px 25px;
    border: 1px solid #086b92;
    border-radius: 12px;
    color: white;
    background-color: #086b92;
    font-size: 15px;
  }

  .shop-btn-home button:hover {
    background-color: white !important;
    color: #086b92 !important;
    border: 1px solid #086b92 !important;
  }


  .note-box {
    background: #F6F4EDCC;
    padding: 15px;
    border-radius: 8px;
    font-size: 16px;
    line-height: 1.6;
    text-align: center;
  }

  .note-box span{
    color: #086b92;
    font-weight: bold;
  }

  .note-box strong {
    display: block;
    color: #086b92;
    margin-bottom: 5px;
    font-size: 20px;
  }

  .vitamin-center-section .card img {
    max-width: 75px;
    height: 75px;
  }

  .shop-now-button {
    max-width: 190px;
  }

  @media screen and (max-width: 1150px) {
    .vitamin-section-home {
      flex-direction: column;
    }
  }
  @media screen and (max-width: 768px) {
    .product-left-section-container{
        flex-direction: column;
    }

    .vitamin-left{
        width: 100%;
    }

    .vitamin-center-section{
        width: 100%;
    }

    .vitamin-right-section h2{
        font-size: 22px;
    }

    .vitamin-right-section {
      max-width: 100%;
    }
    .vitamin-center-section img,
    .vitamin-center-section .card {
      max-width: 100%;
    }
  }
</style>


