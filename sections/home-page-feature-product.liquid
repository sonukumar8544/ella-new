{% schema %}
  {
    "name": "product home page",
    "settings": [],
    "presets": [
      {
        "name": "product home page"
      }
    ]
  }
{% endschema %}
<style>
  .vitamin-section-home-container {
    /* background: linear-gradient(to right, #ffffff, #f5f5f5); */
    background-color: #f1fafe;
  }
  .vitamin-section-home {
    display: flex;
    flex-wrap: wrap;
    padding: 65px 5%;
    align-items: center;
    gap: 30px;
    max-width: 1300px;
    margin: auto;
  }

  .product-left-section-container {
    display: flex;
    flex: 1 1 50%;
    gap: 20px;
    flex-wrap: wrap;
    align-items: center;
  }

  .vitamin-left {
    position: relative;
    width: 100%;
    flex-shrink: 0;
  }

  .vitamin-left img {
    width: 95%;
    border-radius: 10px;
  }

  .trusted-label {
    position: absolute;
    bottom: 41px;
    left: 45px;
    color: white;
    font-size: 25px;
    line-height: 1.4;
    border-left: 4px solid white;
    font-weight: 300;
    padding-left: 15px;
    display: none;
  }

  .trusted-label strong {
    font-size: 24px;
    font-weight: bold;
  }

  .vitamin-center-section {
    display: flex;
    flex-direction: column;
    gap: 15px;
    justify-content: center;
    width: 100%;
  }

  .vitamin-center-section .card {
    background: linear-gradient(135deg, #a7d7e5 0%, #086b92 100%);
    color: white;
    padding: 18px;
    border-radius: 10px;
    font-size: 18px;
    font-weight: 400;
    line-height: 1.4;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .vitamin-center-section .card p {
    color: white;
    font-size: 24px;
    line-height: 1.3;
    font-weight: 300;
  }

  .vitamin-right-section {
    flex: 1 1 35%;
    max-width: 450px;
  }

  .vitamin-right-section h2 {
    font-size: 30px;
    font-weight: 400;
    margin-bottom: 15px;
    text-align: left;
    line-height: 1.2;
  }

  .vitamin-right-section h2 span {
    font-style: italic;
    font-weight: bold;
    display: block;
    margin-top: 5px;
  }

  .vitamin-right-section h2 {
    font-weight: bold;
  }

  .vitamin-right-section p {
    font-size: 16px;
    color: #333;
    margin: 10px 0;
    text-align: left;
  }

  .vitamin-right-section strong {
    font-weight: bold;
  }

  .shop-btn-home {
    margin: 30px 0;
    display: flex;
    justify-content: center;
  }

  .shop-btn-home button {
    padding: 12px 25px;
    border: 1px solid #086b92;
    border-radius: 25px;
    color: white;
    background-color: #086b92;
    font-size: 15px;
  }

  .shop-btn-home button:hover {
    background-color: white !important;
    color: #086b92 !important;
    border: 1px solid #086b92 !important;
  }

  .note-box {
    background: #f1fafe;
    padding: 15px;
    border-radius: 8px;
    font-size: 16px;
    line-height: 1.6;
    text-align: left;
  }

  .note-box span {
    color: #086b92;
  }

  .note-box strong {
    display: block;
    color: #086b92;
    margin-bottom: 5px;
    font-size: 20px;
  }

  .shop-now-button {
    max-width: 190px;
  }

  @media screen and (max-width: 1150px) {
    .vitamin-section-home {
      flex-direction: column;
    }
  }

  @media (min-width: 769px) {
    .home-product-image-mobile {
      display: none !important;
    }

    .shop-btn-home{
      max-width: 40%;
    }
  }

  @media screen and (max-width: 768px) {
    .product-left-section-container {
      flex-direction: column;
    }

    .home-product-imagedesktop {
      display: none !important;
    }

    .vitamin-section-home{
      padding-bottom: 30px !important;
    }

    .note-box{
      padding-top: 0px !important;
      padding-left: 0px !important;
    }

     .shop-btn-home {
       max-width: 55%;
    }
    .vitamin-left {
      width: 100%;
    }
    .vitamin-center-section {
      width: 100%;
    }
    .vitamin-right-section h2 {
      font-size: 22px;
    }
    .vitamin-right-section {
      max-width: 100%;
    }
    .vitamin-center-section .card {
      max-width: 100%;
    }
  }

  .note-box p{
    margin-top: 12px;
  }

  .home-product-imagedesktop
  .home-product-image-mobile
</style>

<section class="vitamin-section-home-container">
  <div class="vitamin-section-home">
    <div class="product-left-section-container">
      <div class="vitamin-left">
        <img class="home-product-imagedesktop" src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/hydrogen_block__Large_a9924ee5-6a33-43d2-95ef-15347d173d18.png?v=1755061869" alt="Vitamin Bottle" />
        <img class="home-product-image-mobile" src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/hydrogen_block_mobile.png?v=1755061867" alt="Vitamin Bottle" />
        {% comment %} <div class="trusted-label">
          Trusted by150k+<br><strong>Customers</strong>
        </div> {% endcomment %}
      </div>

      {% comment %} <div class="vitamin-center-section">
        <div class="card">
          <p>The <strong>most bioactive</strong><br>form of <strong>Vitamin E</strong> in the world.</p>
        </div>
      </div> {% endcomment %}
    </div>

    <div class="vitamin-right-section">
      <h2>#1 Molecular Hydrogen Tablet — Backed by 26+ Trials</h2>
      <p>Experience rapid energy, recovery & detox in just 60 seconds. Clinically shown to work at the cellular level</p>
      <div class="shop-btn-home">
        <button class="quiz_bundle_prodct product-form__submit button button--primary shop-now-button" data-variant-ids="48982148055336" data-qtys="1">
          {{ 'SHOP NOW →' }}
        </button>
      </div>
      <div class="note-box">
       <span> “I went from needing 3 coffees a day to feeling naturally energized. My sleep’s better too.”</span> <br> <p>Kara S., Marketing Director</p>
      </div>
    </div>
  </div>
</section>
