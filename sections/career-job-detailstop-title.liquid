<div class="career-job-header">
  <div class="career-job-header__container">
    <div class="career-job-header__content">
      <a href="https://wellnessextract.com/pages/career-job-listing-page" class="career-job-header__back">
        <span class="career-job-header__back-icon" aria-hidden="true"><img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/i_10.svg?v=1765879815" alt="" loading="lazy" width="14" height="14"></span>
        <span class="career-job-header__back-text">{{ section.settings.back_text }}</span>
      </a>
      <h1 class="career-job-header__title">{{ section.settings.title }}</h1>
      <div class="career-job-header__meta">
        {%- if section.settings.department != blank -%}
          <div class="career-job-header__meta-item">
            <img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/Frame_2.svg?v=1765435642" alt="" class="career-job-header__icon" loading="lazy" width="14" height="14">
            <span class="career-job-header__meta-text">{{ section.settings.department }}</span>
          </div>
        {%- endif -%}
        {%- if section.settings.location != blank -%}
          <div class="career-job-header__meta-item">
            <img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/Frame_3.svg?v=1765435644" alt="" class="career-job-header__icon" loading="lazy" width="14" height="14">
            <span class="career-job-header__meta-text">{{ section.settings.location }}</span>
          </div>
        {%- endif -%}
        {%- if section.settings.employment_type != blank -%}
          <div class="career-job-header__meta-item">
            <img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/Frame_4.svg?v=1765964156" alt="" class="career-job-header__icon" loading="lazy" width="14" height="14">
            <span class="career-job-header__meta-text">{{ section.settings.employment_type }}</span>
          </div>
        {%- endif -%}
      </div>
    </div>
    <div class="career-job-header__cta">
      <a class="career-job-header__apply" href="https://wellnessextract.com/pages/marketing-lead" aria-label="Apply now">{{ section.settings.apply_label }}</a>
      <button type="button" class="career-job-header__save" data-share-btn aria-label="Save job">{{ section.settings.save_label }}</button>
    </div>
  </div>
</div>

<style>
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top_desktop | default: 48 }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop | default: 48 }}px;
  }

  #shopify-section-{{ section.id }} .career-job-header {
    width: 100%;
    padding: 0 16px;
    color: #6b7280;
    box-sizing: border-box;
  }

  #shopify-section-{{ section.id }} .career-job-header__container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 32px;
    flex-wrap: wrap;
  }

  #shopify-section-{{ section.id }} .career-job-header__content {
    display: flex;
    flex-direction: column;
    gap: 22px;
    flex: 1;
    min-width: 0;
  }

  #shopify-section-{{ section.id }} .career-job-header__back {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    text-decoration: none;
    color: #6b7280;
    font-weight: 600;
    font-size: 14px;
    transition: color 0.2s ease, transform 0.2s ease;
    width: fit-content;
  }

  #shopify-section-{{ section.id }} .career-job-header__back:hover {
    color: #086b92;
    transform: translateX(-2px);
  }

  #shopify-section-{{ section.id }} .career-job-header__back-icon {
    display: inline-flex;
    align-items: center;
    line-height: 1;
  }

  #shopify-section-{{ section.id }} .career-job-header__back-icon img {
    width: 14px;
    height: 14px;
    object-fit: contain;
    display: block;
  }

  #shopify-section-{{ section.id }} .career-job-header__title {
    margin: 0;
    font-size: clamp(24px, 4vw, 38px);
    color: #111827;
    font-weight: 700;
    line-height: 1.2;
  }

  #shopify-section-{{ section.id }} .career-job-header__cta {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: stretch;
    gap: 12px;
    flex-shrink: 0;
    min-width: 150px;
  }

  #shopify-section-{{ section.id }} .career-job-header__apply {
    background: #086b92;
    color: #fff;
    border: none;
    padding: 10px 18px;
    border-radius: 6px;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    font-size: 14px;
    white-space: nowrap;
    width: 100%;
  }

  #shopify-section-{{ section.id }} .career-job-header__apply:hover {
    transform: translateY(-1px);
    box-shadow: 0 6px 14px rgba(8, 107, 146, 0.25);
  }

  #shopify-section-{{ section.id }} .career-job-header__save {
    background: transparent;
    color: #086b92;
    border: 1px solid #086b92;
    padding: 9px 16px;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    transition: color 0.2s ease, background 0.2s ease, transform 0.2s ease, box-shadow 0.2s ease;
    font-size: 14px;
    white-space: nowrap;
    width: 100%;
  }

  #shopify-section-{{ section.id }} .career-job-header__save:hover {
    background: rgba(8, 107, 146, 0.08);
    transform: translateY(-1px);
    box-shadow: 0 6px 14px rgba(8, 107, 146, 0.15);
  }

  #shopify-section-{{ section.id }} .career-job-header__meta {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    align-items: center;
  }

  #shopify-section-{{ section.id }} .career-job-header__meta-item {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 6px 12px;
    background: #f8fafc;
    border-radius: 6px;
    border: 1px solid #e5e7eb;
    color: #6b7280;
    font-size: 14px;
    line-height: 1.3;
  }

  #shopify-section-{{ section.id }} .career-job-header__icon {
    width: 14px;
    height: 14px;
    object-fit: contain;
    flex-shrink: 0;
  }

  #shopify-section-{{ section.id }} .career-job-header__meta-text {
    white-space: nowrap;
  }

  @media (max-width: 768px) {
    #shopify-section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_tablet | default: 32 }}px;
      padding-bottom: {{ section.settings.padding_bottom_tablet | default: 32 }}px;
    }

    #shopify-section-{{ section.id }} .career-job-header {
      padding: 0 14px;
    }

    #shopify-section-{{ section.id }} .career-job-header__container {
      flex-direction: column;
      align-items: flex-start;
      gap: 20px;
    }

    #shopify-section-{{ section.id }} .career-job-header__content {
      width: 100%;
      gap: 12px;
    }

    #shopify-section-{{ section.id }} .career-job-header__cta {
      width: 100%;
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }

    #shopify-section-{{ section.id }} .career-job-header__apply,
    #shopify-section-{{ section.id }} .career-job-header__save {
      flex: 1 1 48%;
    }

    #shopify-section-{{ section.id }} .career-job-header__meta {
      gap: 8px;
    }

    #shopify-section-{{ section.id }} .career-job-header__meta-text {
      white-space: normal;
    }
  }

  @media (max-width: 640px) {
    #shopify-section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_mobile | default: 24 }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile | default: 24 }}px;
    }

    #shopify-section-{{ section.id }} .career-job-header {
      padding: 0 12px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var shareBtn = document.querySelector('#shopify-section-{{ section.id }} [data-share-btn]');
    if (!shareBtn) return;

    var shareTitle = "{{ section.settings.title | escape }}";
    var shareUrl = window.location.href;
    var shareText = shareTitle + ' - ' + shareUrl;

    shareBtn.addEventListener('click', function() {
      if (navigator.share) {
        navigator.share({ title: shareTitle, text: shareTitle, url: shareUrl }).catch(function() {});
        return;
      }

      if (navigator.clipboard && navigator.clipboard.writeText) {
        navigator.clipboard.writeText(shareUrl).catch(function() {});
      }

      var mailto = 'mailto:?subject=' + encodeURIComponent(shareTitle) + '&body=' + encodeURIComponent(shareText);
      window.location.href = mailto;
    });
  });
</script>

