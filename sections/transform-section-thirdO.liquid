{% assign transform_section1 = product.metafields.custom.product_3_0_banner_details.value %}
{% if transform_section1 != blank %}
  {% for transform_value in transform_section1 %}
<section class="transformation-section" section{{ section.id }}>
  <div class="container">
    <h2 class="section-title">{{ transform_value.title }}</h2>
    <p class="section-subtitle">
    {{ transform_value.description }}  
    </p>
    
    <div class="results-grid">
      <div class="result-box">
        <h3 class="percentage">95%</h3>
        <p class="result-text">Experience the merging of Earth’s most potent elements in one.</p>
      </div>
      <div class="result-box">
        <h3 class="percentage">92%</h3>
        <p class="result-text">Experience the merging of Earth’s most potent elements in one.</p>
      </div>
      <div class="result-box">
        <h3 class="percentage">98%</h3>
        <p class="result-text">Experience the merging of Earth’s most potent elements in one.</p>
      </div>
    </div>
  </div>
</section>
<style>
  .transformation-section {
  padding: 60px 20px;
  background-color: #fff;
  text-align: center;
}

.section-title {
  font-size: 32px;
  color: #00678c;
  margin-bottom: 15px;
  font-weight: 700;
}

.section-subtitle {
  font-size: 15px;
  color: #333;
  margin-bottom: 40px;
  line-height: 1.6;
}

.results-grid {
  display: flex;
  justify-content: space-between;
  gap: 20px;
  flex-wrap: wrap;
}

.result-box {
  flex: 1;
  min-width: 200px;
  margin: 10px 0;
}

.percentage {
  font-size: 32px;
  font-weight: 700;
  color: #333;
  margin-bottom: 10px;
}

.result-text {
  font-size: 13px;
  color: #444;
  max-width: 250px;
  margin: 0 auto;
  line-height: 1.4;
}

/* Responsive for tablets and mobile */
@media (max-width: 768px) {
  .results-grid {
    flex-direction: column;
    align-items: center;
  }

  .result-box {
    width: 100%;
    max-width: 300px;
  }
}

</style>
  {% endfor %}
  {% endif %}

