{% schema %}
  {
    "name": "video with text",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "What's Inside"
      },
      {
        "type": "url",
        "id": "video_url",
        "label": "Product Video URL"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Product Title1",
        "default": "Annatto-Derived Tocotrienols"
      },
      {
        "type": "text",
        "id": "title2",
        "label": "Product Title2",
        "default": "Annatto-Derived Tocotrienols"
      }, {
        "type": "textarea",
        "id": "description",
        "label": "Product Description1",
        "default": "Annatto seeds (Bixa Orellana) are tiny, vibrant red color seeds. They are a unique natural source of 100% tocotrienols, free from tocopherol interference."
      }, {
        "type": "textarea",
        "id": "description2",
        "label": "Product Description2",
        "default": "Annatto seeds (Bixa Orellana) are tiny, vibrant red color seeds. They are a unique natural source of 100% tocotrienols, free from tocopherol interference."
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "SHOP NOW"
      }
    ],
    "presets": [
      {
        "name": "video with text"
      }
    ]
  }
{% endschema %}

<div class="video-text-section">
  {% if section.settings.heading %}
    <h2 class="video-heading">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="video-two-column">
    <div class="video-container">
      {% if section.settings.video_url %}
        <video
          controls
          autoplay
          loop
          muted
          class="video-player"
          poster="https://via.placeholder.com/500">
          <source src="{{ section.settings.video_url }}" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      {% else %}
        <video
          controls
          class="video-player"
          poster="https://via.placeholder.com/500">
          <source src="https://www.w3schools.com/html/mov_bbb.mp4" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      {% endif %}
    </div>

    <div class="video-text">
      {% if section.settings.title %}
        <h3>{{ section.settings.title }}</h3>
      {% endif %}

      {% if section.settings.description %}
        <p>{{ section.settings.description }}</p>
      {% endif %}

      {% if section.settings.title2 %}
        <h3>{{ section.settings.title2 }}</h3>
      {% endif %}

      {% if section.settings.description2 %}
        <p>{{ section.settings.description2 }}</p>
      {% endif %}

      {% if section.settings.button_link and section.settings.button_text %}
        <a href="{{ section.settings.button_link }}" class="video-shop-button">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .video-text-section {
    max-width: 1300px;
    padding: 40px 20px;
    margin: auto;
    text-align: center;
  }

  .video-heading {
    color: #374650;
    font-size: 32px;
    margin-bottom: 25px;
    line-height: 1;
  }

  .video-two-column {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 20px;
    margin-top: 40px;
  }

  .video-container,
  .video-text {
    flex: 1 1 47%;
    box-sizing: border-box;
  }

  .video-container {
    background-color: #eaeaea;
    border-radius: 20px;
    height: 500px;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }

  .video-player {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 20px;
  }

  .video-text {
    max-width: 100%;
    text-align: left;
    display: flex;
    flex-direction: column;
  }

  .video-text h3 {
    font-size: 30px;
    color: #374650;
    margin-bottom: 10px;
    line-height: 1.2;
  }

  .video-text p {
    color: #36454F;
    font-size: 16px;
    line-height: 1.6;
    margin-bottom: 20px;
  }

  .video-shop-button {
    display: inline-block;
    padding: 10px 20px;
    border: 1px solid #086b92;
    color: #086b92;
    text-decoration: none;
    font-size: 16px;
    font-weight: 700;
    border-radius: 5px;
    transition: all 0.3s ease-in-out;
    width: 200px;
    text-align: center;
  }

  .video-shop-button:hover {
    background-color: #086b92;
    color: white;
  }

  @media (max-width: 768px) {
    .video-two-column {
      flex-direction: column;
      align-items: center;
    }

    .video-container,
    .video-text {
      flex: 1 1 100%;
      max-width: 100%;
      text-align: center;
    }

    .video-text h3 {
      font-size: 28px;
    }

    .video-text {
      text-align: center;
    }
  }
</style>