<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{{ page.title }}</title>
    <link rel="canonical" href="{{ page.url | prepend: shop.url }}">
    <meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1">
    
    <!-- Required AMP Scripts -->
    <script async src="https://cdn.ampproject.org/v0.js"></script>
    <script async custom-element="amp-story" src="https://cdn.ampproject.org/v0/amp-story-1.0.js"></script>

    <!-- AMP Boilerplate -->
    <style amp-boilerplate>
      body {
        -webkit-animation: -amp-start 8s steps(1,end) 0s 1 normal both;
        -moz-animation: -amp-start 8s steps(1,end) 0s 1 normal both;
        -ms-animation: -amp-start 8s steps(1,end) 0s 1 normal both;
        animation: -amp-start 8s steps(1,end) 0s 1 normal both;
      }
      @-webkit-keyframes -amp-start {
        from { visibility: hidden } to { visibility: visible }
      }
      @keyframes -amp-start {
        from { visibility: hidden } to { visibility: visible }
      }
    </style>
    <noscript>
      <style amp-boilerplate>
        body {
          -webkit-animation: none;
          -moz-animation: none;
          -ms-animation: none;
          animation: none;
        }
      </style>
    </noscript>

    <!-- Custom styles -->
    <style amp-custom>
      .cstm_color_box {
        padding: 20px;
        border-radius: 12px;
      }
      .btn_story {
        margin-top: 15px;
      }
      .brand-btn {
        display: inline-block;
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 4px;
        font-size: 14px;
      }
    </style>
  </head>

  <body>

    <amp-story
  standalone
  title="Your AMP Story"
  publisher="Wellness Extract"
  publisher-logo-src="https://cdn.shopify.com/s/files/1/0000/0000/files/logo.png"
  poster-portrait-src="https://cdn.shopify.com/s/files/1/0000/0000/files/poster.jpg"
>
  {% for block in section.blocks %}
    <amp-story-page id="page{{ forloop.index }}" auto-advance-after="{{ block.settings.webstory_slide }}s">
      <amp-story-grid-layer template="fill">
        {% if block.settings.image != blank %}
          <amp-img
            src="{{ block.settings.image | img_url: 'master' }}"
            layout="responsive"
            width="720"
            height="1280"
          ></amp-img>
        {% else %}
          <amp-img
            src="{{ 'hero-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}"
            layout="responsive"
            width="720"
            height="1280"
          ></amp-img>
        {% endif %}
      </amp-story-grid-layer>

      <amp-story-grid-layer template="vertical" style="top: {{ block.settings.content-position }}%; text-align: {{ block.settings.content-align }};">
        <div class="cstm_color_box"
          style="{% if block.settings.bgcover and block.settings.bgapplyenable %}background: {{ block.settings.bgapply }};{% endif %}">
          
          {% if block.settings.heading != blank %}
            <h3 style="{% if block.settings.heading_bg != blank %}background-color: {{ block.settings.heading_bg }}; padding: 3px 10px; border-radius: 3px; display: inline-block;{% endif %} color: {{ block.settings.heading_color }};">
              {{ block.settings.heading }}
            </h3>
          {% endif %}

          {% if block.settings.description != blank %}
            <p style="color: {{ block.settings.description_color }}; margin-bottom: 20px;">
              {{ block.settings.description }}
            </p>
          {% endif %}

          {% if block.settings.button_text != blank %}
            <div class="btn_story">
              {% if block.settings.btn_link != blank and block.settings.btn_link != '#' %}
                <a class="brand-btn" href="{{ block.settings.btn_link }}"
                   style="background: {{ block.settings.btn_bg }}; color: {{ block.settings.btn_color }}; border: 1px solid {{ block.settings.btn_bg }};">
                  {{ block.settings.button_text }}
                </a>
              {% else %}
                <span class="brand-btn"
                   style="background: {{ block.settings.btn_bg }}; color: {{ block.settings.btn_color }}; border: 1px solid {{ block.settings.btn_bg }};">
                  {{ block.settings.button_text }}
                </span>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </amp-story-grid-layer>
    </amp-story-page>
  {% endfor %}

  <amp-story-bookend src="bookend.json" layout="nodisplay"></amp-story-bookend>
</amp-story>


  </body>
</html>

