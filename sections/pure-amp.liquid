<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "NewsArticle",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{ canonical_url | default: request.origin | append: request.path }}"
  },
  "headline": "{{ section.settings.story_title | escape }}",
  "image": [
    "{{ section.blocks[0].settings.image | img_url: 'master' | prepend: request.origin }}"
  ],
  "datePublished": "{{ section.settings.date_published | date: "%Y-%m-%dT%H:%M:%SZ" }}",
  "dateModified": "{{ section.settings.date_modified | date: "%Y-%m-%dT%H:%M:%SZ" }}",
  "author": {
    "@type": "Person",
