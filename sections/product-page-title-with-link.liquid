{% schema %}
  {
    "name": "product page list item",
    "tag": "section",
    "class": "scientifically-backed-section",
    "settings": [
      {
        "type": "text",
        "id": "section_heading",
        "label": "Heading",
        "default": "Scientifically Backed"
      }, {
        "type": "text",
        "id": "section_subtitle",
        "label": "Subtitle",
        "default": "Annatto-derived tocotrienols (AnTT) are scientifically backed with potential health benefits."
      }
    ],
    "blocks": [
      {
        "type": "faq_block",
        "name": "FAQ Block",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Description",
            "default": "Example benefit or description goes here."
          }, {
            "type": "url",
            "id": "link",
            "label": "Read More Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "product page list item"
      }
    ]
  }
{% endschema %}

<section class="faq-slider-wrapper">
  <div class="section-inner">
    <h2>{{ section.settings.section_heading }}</h2>
    <p class="subtitle">{{ section.settings.section_subtitle }}</p>

    <div class="faq-slider">
      {% for block in section.blocks %}
        <div class="faq-slide">
          <p>{{ block.settings.text }}</p>
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}">Read More</a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .faq-slider-wrapper {
    background-color: #fdf9f4;
    padding: 4rem 1rem;
    text-align: center;
  }

  .section-inner {
    max-width: 1200px;
    margin: 0 auto;
  }

  .faq-slider-wrapper h2 {
    font-size: 32px;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #374650;
    font-family: 'Nunito', sans-serif;
    line-height: 1.3;
  }

  .faq-slider-wrapper .subtitle {
    font-size: 18px;
    margin-bottom: 3rem;
    color: #374650;
    font-family: 'Nunito', sans-serif;
    line-height: 1.3;
    margin-top: 0px;
  }

  .faq-slide {
    padding: 0 1rem;
  }

  .faq-slide p {
    font-size: 16px;
    margin-bottom: 0.5rem;
    line-height: 1.6;
    color: #36454F;
    font-family: 'Lato', sans-serif;
  }

  .faq-slide a {
    color: #0074b8;
    text-decoration: none;
    font-weight: 500;
  }

  .faq-slide a:hover {
    text-decoration: underline;
  }

  .slick-prev, .slick-next {
  color: black !important;
  z-index: 10;
}
</style>

<script>
      document.addEventListener("DOMContentLoaded", function () {
        $('.faq-slider').slick({
          slidesToShow: 3,
          slidesToScroll: 1,
          dots: false,
          arrows: true,
          responsive: [
            {
              breakpoint: 1024,
              settings: {
                slidesToShow: 2
              }
            },
            {
              breakpoint: 768,
              settings: {
                slidesToShow: 1
              }
            }
          ]
        });
      });
</script>