<style>
  #shopify-section-{{ section.id }} .career-banner {
    background-color: {{ section.settings.background_color | default: '#e2edf2' }};
    padding: {{ section.settings.section_padding_top }}px {{ section.settings.section_padding_horizontal }}px {{ section.settings.section_padding_bottom }}px;
    overflow: hidden;
  }

  #shopify-section-{{ section.id }} .career-banner__container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    gap: {{ section.settings.content_gap }}px;
    flex-wrap: wrap;
  }

  #shopify-section-{{ section.id }} .career-banner__content {
    flex: 1;
    min-width: 300px;
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.content_spacing }}px;
  }

  #shopify-section-{{ section.id }} .career-banner__title {
    font-size: {{ section.settings.title_font_size }}px;
    font-weight: {{ section.settings.title_font_weight }};
    line-height: 1.2;
    color: {{ section.settings.title_color | default: '#333333' }};
    margin: 0;
  }

  #shopify-section-{{ section.id }} .career-banner__title-highlight {
    color: {{ section.settings.title_highlight_color | default: '#006F8C' }};
  }

  #shopify-section-{{ section.id }} .career-banner__description {
    font-size: {{ section.settings.description_font_size }}px;
    line-height: 1.6;
    color: {{ section.settings.description_color | default: '#666666' }};
    margin: 0;
  }

  #shopify-section-{{ section.id }} .career-banner__buttons {
    display: flex;
    gap: {{ section.settings.button_gap }}px;
    flex-wrap: wrap;
  }

  #shopify-section-{{ section.id }} .career-banner__button {
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    border-radius: {{ section.settings.button_border_radius }}px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    cursor: pointer;
  }

  #shopify-section-{{ section.id }} .career-banner__button--primary {
    background-color: {{ section.settings.button_primary_bg_color | default: '#006F8C' }};
    color: {{ section.settings.button_primary_text_color | default: '#ffffff' }};
  }

  #shopify-section-{{ section.id }} .career-banner__button--primary:hover {
    background-color: {{ section.settings.button_primary_hover_bg_color | default: '#005a73' }};
    transform: translateY(-2px);
  }

  #shopify-section-{{ section.id }} .career-banner__button--secondary {
    background-color: transparent;
    color: {{ section.settings.button_secondary_text_color | default: '#006F8C' }};
    border-color: {{ section.settings.button_secondary_border_color | default: '#C2DCEB' }};
  }

  #shopify-section-{{ section.id }} .career-banner__button--secondary:hover {
    background-color: {{ section.settings.button_secondary_hover_bg_color | default: 'rgba(194, 220, 235, 0.1)' }};
    border-color: {{ section.settings.button_secondary_hover_border_color | default: '#006F8C' }};
    transform: translateY(-2px);
  }

  #shopify-section-{{ section.id }} .career-banner__image-wrapper {
    flex: 1;
    min-width: 300px;
    position: relative;
  }

  #shopify-section-{{ section.id }} .career-banner__image {
    width: 100%;
    height: auto;
    border-radius: {{ section.settings.image_border_radius }}px;
    object-fit: cover;
    display: block;
  }

  /* Responsive Styles */
  @media screen and (max-width: 768px) {
    #shopify-section-{{ section.id }} .career-banner__container {
      flex-direction: column;
    }

    #shopify-section-{{ section.id }} .career-banner__content {
      order: 1;
      text-align: center;
    }

    #shopify-section-{{ section.id }} .career-banner__image-wrapper {
      order: 2;
    }

    #shopify-section-{{ section.id }} .career-banner__title {
      font-size: {{ section.settings.title_font_size_mobile | default: section.settings.title_font_size }}px;
    }

    #shopify-section-{{ section.id }} .career-banner__description {
      font-size: {{ section.settings.description_font_size_mobile | default: section.settings.description_font_size }}px;
    }

    #shopify-section-{{ section.id }} .career-banner__buttons {
      justify-content: center;
      width: 100%;
    }

    #shopify-section-{{ section.id }} .career-banner__button {
      flex: 1;
      min-width: 150px;
      justify-content: center;
    }
  }

  @media screen and (max-width: 480px) {
    #shopify-section-{{ section.id }} .career-banner {
      padding: {{ section.settings.section_padding_top_mobile }}px {{ section.settings.section_padding_horizontal_mobile }}px {{ section.settings.section_padding_bottom_mobile }}px;
    }

    #shopify-section-{{ section.id }} .career-banner__buttons {
      flex-direction: column;
    }

    #shopify-section-{{ section.id }} .career-banner__button {
      width: 100%;
    }
  }
</style>

<section class="career-banner">
  <div class="career-banner__container">
    <div class="career-banner__content">
      {% if section.settings.title != blank %}
        <h1 class="career-banner__title">
          {% if section.settings.title_highlight_text != blank and section.settings.title contains section.settings.title_highlight_text %}
            {% assign title_parts = section.settings.title | split: section.settings.title_highlight_text %}
            {{ title_parts[0] }}<span class="career-banner__title-highlight">{{ section.settings.title_highlight_text }}</span>{{ title_parts[1] }}
          {% else %}
            {{ section.settings.title }}
          {% endif %}
        </h1>
      {% endif %}

      {% if section.settings.description != blank %}
        <p class="career-banner__description">{{ section.settings.description }}</p>
      {% endif %}

      <div class="career-banner__buttons">
        {% if section.settings.button_1_text != blank and section.settings.button_1_url != blank %}
          <a href="{{ section.settings.button_1_url }}" class="career-banner__button career-banner__button--primary">
            {{ section.settings.button_1_text }}
            {% if section.settings.button_1_show_arrow %}
              <span>â†’</span>
            {% endif %}
          </a>
        {% endif %}

        {% if section.settings.button_2_text != blank and section.settings.button_2_url != blank %}
          <a href="{{ section.settings.button_2_url }}" class="career-banner__button career-banner__button--secondary">
            {{ section.settings.button_2_text }}
          </a>
        {% endif %}
      </div>
    </div>

    {% if section.settings.image != blank %}
      <div class="career-banner__image-wrapper">
        <img 
          src="{{ section.settings.image | image_url: width: 800 }}"
          srcset="{{ section.settings.image | image_url: width: 400 }} 400w,
                  {{ section.settings.image | image_url: width: 600 }} 600w,
                  {{ section.settings.image | image_url: width: 800 }} 800w,
                  {{ section.settings.image | image_url: width: 1200 }} 1200w"
          sizes="(max-width: 768px) 100vw, 50vw"
          alt="{{ section.settings.image.alt | default: section.settings.title }}"
          class="career-banner__image"
          width="{{ section.settings.image.width | default: 800 }}"
          height="{{ section.settings.image.height | default: 600 }}"
          loading="lazy"
        >
      </div>
    {% endif %}
  </div>
</section>

