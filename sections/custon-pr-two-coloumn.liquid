  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.18);
  padding: 50px 40px;
  border-radius: 12px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.pr-landing-main-title {
  font-size: 35px;
  font-weight: 700;
  color: #333;
  margin: 0 0 10px 0;
  line-height: 1.1;
}

.pr-landing-benefit-3{
    font-weight: bold;
}

.pr-landing-subtitle {
  font-size: 24px;
  font-weight: 600;
  color: #374650;
  margin: 0 0 30px 0;
}

.pr-landing-benefits-list {
  list-style: none;
  padding: 0;
  margin: 0 0 40px 0;
  flex-grow: 1;
}

.pr-landing-benefits-list li {
  font-size: 16px;
  line-height: 1.6;
  color: #374650;
  margin-bottom: 20px;
  position: relative;
  padding-left: 20px;
}

.pr-landing-benefits-list li:before {
  content: "•";
  color: #374650;
  font-weight: bold;
  position: absolute;
  left: 0;
  top: 0;
}

.pr-landing-cta-button {
  background: #086b92;
  color: white;
  border: 1px solid #086b92;
  padding: 15px 30px;
  border-radius: 30px;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 10px;
  transition: all 0.3s ease;
  align-self: flex-start;
  text-decoration: none;
}

.pr-landing-cta-button:hover {
  background: white;
  color: #086b92;
  border: 1px solid #086b92;
}

.pr-landing-arrow {
  font-size: 1.2rem;
  font-weight: bold;
}

.pr-landing-product-display {
  flex: 1;
  max-width: 55%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.pr-landing-bottles-container {
  position: relative;
  width: 300px;
  height: 200px;
}

.pr-landing-bottle {
  position: absolute;
  width: 80px;
  height: 120px;
  background: white;
  border-radius: 8px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  border: 2px solid #f0f0f0;
}

.pr-landing-bottle:before {
  content: '';
  position: absolute;
  top: -8px;
  left: 50%;
  transform: translateX(-50%);
  width: 20px;
  height: 8px;
  background: white;
  border-radius: 4px;
  border: 2px solid #f0f0f0;
}

.pr-landing-bottle-1 {
  left: 20px;
  top: 20px;
  z-index: 1;
}

.pr-landing-bottle-2 {
  left: 110px;
  top: 10px;
  z-index: 3;
  transform: scale(1.1);
}

.pr-landing-bottle-3 {
  left: 200px;
  top: 20px;
  z-index: 1;
}

/* Layout Control */
.pr-landing-desktop-layout {
  display: block;
}

.pr-landing-mobile-layout {
  display: none;
}

/* Dynamic Layout Direction */
#pr-landing-section-{{ section.id }} .pr-landing-layout-left-right .pr-landing-content-wrapper {
  flex-direction: row;
}

#pr-landing-section-{{ section.id }} .pr-landing-layout-right-left .pr-landing-content-wrapper {
  flex-direction: row-reverse;
}

#pr-landing-section-{{ section.id }} .pr-landing-layout-right-left .pr-landing-info-panel {
  max-width: 45%;
}

#pr-landing-section-{{ section.id }} .pr-landing-layout-right-left .pr-landing-product-display {
  max-width: 55%;
}

/* Layout Toggle Button */
#pr-landing-section-{{ section.id }} .pr-landing-layout-toggle {
  position: absolute;
  top: 20px;
  right: 20px;
  z-index: 10;
}

#pr-landing-section-{{ section.id }} .pr-landing-toggle-btn {
  background: #086b92;
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 25px;
  cursor: pointer;
  font-size: 14px;
  font-weight: 600;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(8, 107, 146, 0.3);
}

#pr-landing-section-{{ section.id }} .pr-landing-toggle-btn:hover {
  background: #0a7ba8;
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(8, 107, 146, 0.4);
}

