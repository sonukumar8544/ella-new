  background-image: url('{{ section.settings.background_image | img_url: '1920x1080' }}');
  background-size: {{ section.settings.background_size | default: 'cover' }};
  background-position: {{ section.settings.background_position | default: 'center' }};
  {% if section.settings.background_repeat %}
  background-repeat: repeat;
  {% else %}
  background-repeat: no-repeat;
  {% endif %}
  {% endif %}
