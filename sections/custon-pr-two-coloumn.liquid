  text-align: left;
}

.pr-landing-mobile-button {
  display: inline-flex;
  align-items: center;
  gap: 12px;
  background: linear-gradient(135deg, #086b92, #0a7ba8);
  color: white;
  padding: 18px 35px;
  border-radius: 50px;
  text-decoration: none;
  font-weight: 600;
  font-size: 16px;
  box-shadow: 0 8px 25px rgba(8, 107, 146, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.pr-landing-mobile-button:before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.pr-landing-mobile-button:hover:before {
  left: 100%;
}

.pr-landing-mobile-button:hover {
  transform: translateY(-3px);
  box-shadow: 0 12px 35px rgba(8, 107, 146, 0.4);
  background: linear-gradient(135deg, #0a7ba8, #086b92);
}

.pr-landing-mobile-button-icon {
  width: 20px;
  height: 20px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  transition: all 0.3s ease;
}

.pr-landing-mobile-button:hover .pr-landing-mobile-button-icon {
  background: rgba(255, 255, 255, 0.3);
  transform: translateX(3px);
}

/* Responsive Design */
