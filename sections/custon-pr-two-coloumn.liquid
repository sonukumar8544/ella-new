    width: 250px;
    height: 150px;
  }
  
  .pr-landing-bottle {
    width: 60px;
    height: 90px;
  }
  
  .pr-landing-bottle-1 {
    left: 15px;
    top: 15px;
  }
  
  .pr-landing-bottle-2 {
    left: 85px;
    top: 5px;
  }
  
  .pr-landing-bottle-3 {
    left: 155px;
    top: 15px;
  }
}

@media (max-width: 480px) {
  .pr-landing-mobile-hero {
    height: 100vh;
  }
  
  .pr-landing-mobile-content {
    padding: 0 15px;
  }
  
  .pr-landing-mobile-info-box {
    padding: 25px 20px;
    border-radius: 15px;
  }
  
  .pr-landing-mobile-title {
    font-size: 24px;
  }
  
  .pr-landing-mobile-subtitle {
    font-size: 16px;
  }
  
  .pr-landing-mobile-benefits-list li {
    font-size: 14px;
    margin-bottom: 15px;
  }
  
  .pr-landing-mobile-button {
    padding: 15px 30px;
    font-size: 15px;
  }
}
</style>

<script>
function toggleLayout(sectionId) {
  const section = document.getElementById('pr-landing-section-' + sectionId);
  const desktopLayout = section.querySelector('.pr-landing-desktop-layout');
  
  if (desktopLayout.classList.contains('pr-landing-layout-left-right')) {
    desktopLayout.classList.remove('pr-landing-layout-left-right');
    desktopLayout.classList.add('pr-landing-layout-right-left');
  } else {
    desktopLayout.classList.remove('pr-landing-layout-right-left');
    desktopLayout.classList.add('pr-landing-layout-left-right');
  }
}
</script>

