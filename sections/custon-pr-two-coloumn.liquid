  max-width: 1200px;
}
}

.pr-landing-content-wrapper {
  display: flex;
  align-items: center;
  gap: 40px;
  min-height: 400px;
}

.pr-landing-info-panel {
  flex: 1;
  max-width: 45%;
}

.pr-landing-info-content {
