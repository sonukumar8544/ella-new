{% comment %} 
      Custom PR Page Two Col section
{% endcomment %}

<div class="pr-landing-section" id="pr-landing-section-{{ section.id }}">
  <div class="pr-landing-container">
    <!-- Desktop Layout -->
    <div class="pr-landing-desktop-layout pr-landing-layout-{{ section.settings.layout_direction | default: 'left-right' }}">
      <!-- Layout Toggle Button (for testing) -->
      <div class="pr-landing-layout-toggle">
        <button class="pr-landing-toggle-btn" onclick="toggleLayout('{{ section.id }}')">
          Switch Layout
        </button>
      </div>
      
      <div class="pr-landing-content-wrapper">
        <!-- Desktop: Information Panel -->
        <div class="pr-landing-info-panel">
          <div class="pr-landing-info-content">
            <h1 class="pr-landing-main-title">{{ section.settings.main_title }}</h1>
            <h2 class="pr-landing-subtitle">{{ section.settings.subtitle }}</h2>
            
            <ul class="pr-landing-benefits-list">
              {% if section.settings.benefit_1 != blank %}
              <li>{{ section.settings.benefit_1 }}</li>
              {% endif %}
              {% if section.settings.benefit_2 != blank %}
              <li>{{ section.settings.benefit_2 }}</li>
              {% endif %}
              {% if section.settings.benefit_3 != blank %}
              <li class="pr-landing-benefit-3">{{ section.settings.benefit_3 }}</li>
              {% endif %}
            </ul>
            
            {% if section.settings.button_text != blank %}
            <a href="{{ section.settings.button_url | default: '#' }}" class="pr-landing-cta-button">
              {{ section.settings.button_text }}
              <span class="pr-landing-arrow">→</span>
            </a>
            {% endif %}
          </div>
        </div>
        
        <!-- Desktop: Product Display -->
        <div class="pr-landing-product-display">
          <div class="pr-landing-bottles-container">
            <div class="pr-landing-bottle pr-landing-bottle-1"></div>
            <div class="pr-landing-bottle pr-landing-bottle-2"></div>
            <div class="pr-landing-bottle pr-landing-bottle-3"></div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Mobile Layout -->
    <div class="pr-landing-mobile-layout">
      <!-- Mobile Full Screen Background with Overlapping Content -->
      {% if section.settings.mobile_background_image %}
      <div class="pr-landing-mobile-hero">
        <div class="pr-landing-mobile-image-container">
          <img src="{{ section.settings.mobile_background_image | img_url: '768x1024' }}" alt="Mobile Hero" class="pr-landing-mobile-hero-image" />
          <div class="pr-landing-mobile-overlay"></div>
          
          <!-- Overlapping Content Box -->
          <div class="pr-landing-mobile-content">
            <div class="pr-landing-mobile-info-box">
              <h1 class="pr-landing-mobile-title">{{ section.settings.main_title }}</h1>
              <h2 class="pr-landing-mobile-subtitle">{{ section.settings.subtitle }}</h2>
              
              <ul class="pr-landing-mobile-benefits-list">
                {% if section.settings.benefit_1 != blank %}
                <li>{{ section.settings.benefit_1 }}</li>
                {% endif %}
                {% if section.settings.benefit_2 != blank %}
                <li>{{ section.settings.benefit_2 }}</li>
                {% endif %}
                {% if section.settings.benefit_3 != blank %}
                <li class="pr-landing-mobile-benefit-3">{{ section.settings.benefit_3 }}</li>
                {% endif %}
              </ul>
              
              {% if section.settings.button_text != blank %}
              <div class="pr-landing-mobile-cta">
                <a href="{{ section.settings.button_url | default: '#' }}" class="pr-landing-mobile-button">
                  <span>{{ section.settings.button_text }}</span>
                  <div class="pr-landing-mobile-button-icon">→</div>
                </a>
              </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
