<section class="blog-banner-section-outer">
  <div class="blog-banner-section">
    <div class="blog-banner-content-wrapper">
      <div class="blog-banner-title-wrapper">
        <h1>{{ section.settings.banner_title | raw }}</h1>
        <p>{{ section.settings.banner_subtitle | escape }}</p>
      </div>
    </div>
  </div>

<div class="blog-main-slider">
    <div class="container">
        <div class="inner-container">
              <div class="hero-blog-slide">
                {% assign current_url = canonical_url %}
                {% assign url_parts = current_url | split: "/" %}
                {% assign last_segment = url_parts | last %}
              {% for article in blogs[last_segment].articles limit: 3 %}
                  <div class="blog-slide-items">
                    <a  href="{{ article.url }}">
                      <div class="blogs-inner-items">
                          <div class="blog-img-sec">
                          <img class="blog-border-radius" src="{{ article.image | img_url: 'large' }}" alt="" />
                          </div>
                          <div class="blog-des-sec">
                            <h3 class="blog-title">
                              {{ article.title }}
                            </h3>
                            <div class="blog-date"> {{ article.published_at | time_tag: '%b %d, %Y' }} </div>
                            <div class="blog-summary">
                            {{ article.excerpt_or_content }}
                            </div>
                              <a href="{{ article.url }}"><div class="read-more"> Read More...</div></a>
                          </div>
                      </div>
                    </a>
                </div>  
              {% endfor %}

              </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
  {
    "name": "Blog Page Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      }, {
        "type": "textarea",
        "id": "banner_title",
        "label": "Enter title here (supports HTML)",
        "default": "Health Hub"
      }, {
        "type": "textarea",
        "id": "banner_subtitle",
        "label": "Enter subtitle here",
        "default": "This is the default subtitle for the blog page."
      }
    ],
    "presets": [
      {
        "name": "Blog Page Banner",
        "category": "Custom Sections"
      }
    ]
  }
{% endschema %}



