    }
  ],
  "presets": [
    {
      "name": "Tocotrienole Graph Show",
      "blocks": [
        {
          "type": "chart",
          "settings": {
            "chart_label": "Annatto",
            "bioavailability_text": "Highest Bioavailability"
          }
        },
        {
          "type": "chart",
          "settings": {
            "chart_label": "Palm",
            "bioavailability_text": "Moderate Bioavailability"
          }
        },
        {
          "type": "chart",
          "settings": {
