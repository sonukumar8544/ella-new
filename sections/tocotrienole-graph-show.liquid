    },
    {
      "type": "color",
      "id": "legend_item1_color",
      "label": "Legend Item 1 Color",
      "default": "#4caf50"
    },
    {
      "type": "text",
      "id": "legend_item2_text",
      "label": "Legend Item 2 Text",
      "default": "Alpha & Beta Tocotrienol"
    },
    {
      "type": "color",
      "id": "legend_item2_color",
      "label": "Legend Item 2 Color",
      "default": "#87ceeb"
    },
    {
      "type": "text",
      "id": "legend_item3_text",
      "label": "Legend Item 3 Text",
      "default": "Tocopherol"
    },
    {
      "type": "color",
      "id": "legend_item3_color",
      "label": "Legend Item 3 Color",
      "default": "#555555"
    }
  ],
  "blocks": [
    {
      "type": "chart",
      "name": "Chart Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "chart_image",
