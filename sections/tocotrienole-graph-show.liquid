        },
        {
          "type": "text",
          "id": "chart_label",
          "label": "Chart Label",
          "default": "Annatto"
        },
        {
          "type": "text",
          "id": "bioavailability_text",
          "label": "Bioavailability Text",
          "default": "Highest Bioavailability"
        }
