<div id="shopify-section-{{ section.id }}" class="toco-section-{{ section.id }}">
  <div class="toco-pagebarry-wrapper">
    <div class="toco-pagebarry-inner">
      <h1 class="toco-pagebarry-title">
        The Problem with Other Sources?
        <span class="accent">Alpha-Tocopherol!!</span>
      </h1>

      <p class="toco-pagebarry-sub">
        Most vitamin E sources contain alpha-tocopherol.
        However, research shows that
        <span class="hl">alpha-tocopherol interferes with tocotrienol absorption</span>
        and blocks their health-promoting effects.
      </p>
    </div>
  </div>

  <div class="toco-blocks-wrapper">
    {% if section.settings.bottom_title != blank %}
      <h2 class="toco-bottom-title">{{ section.settings.bottom_title }}</h2>
    {% endif %}
    
    <div class="toco-blocks-container">
      {% for block in section.blocks %}
        <div class="toco-block" {{ block.shopify_attributes }}>
          {% if block.settings.block_title != blank %}
            <h3 class="toco-block-title">{{ block.settings.block_title }}</h3>
          {% endif %}
          {% if block.settings.block_image != blank %}
            <div class="toco-block-image-wrapper">
              <img src="{{ block.settings.block_image | image_url: width: 200 }}" 
                   alt="{{ block.settings.block_title | escape }}"
                   class="toco-block-image"
                   width="200"
                   height="200"
                   loading="lazy" />
            </div>
          {% endif %}
          {% if block.settings.block_text != blank %}
            <p class="toco-block-text">{{ block.settings.block_text }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
    
    <div class="toco-legend">
      <div class="toco-legend-item">
        <span class="toco-legend-color" style="background-color: #a8e063;"></span>
        <span class="toco-legend-text">Delta & Gamma Tocotrienol</span>
      </div>
      <div class="toco-legend-item">
        <span class="toco-legend-color" style="background-color: #87ceeb;"></span>
        <span class="toco-legend-text">Alpha & Beta Tocotrienol</span>
      </div>
      <div class="toco-legend-item">
        <span class="toco-legend-color" style="background-color: #6b7480;"></span>
        <span class="toco-legend-text">Tocopherol</span>
      </div>
    </div>
  </div>
</div>


<style>
  #shopify-section-{{ section.id }} .toco-pagebarry-wrapper {
  min-height: 320px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40px 20px;
  box-sizing: border-box;
  font-family: "Inter", Arial, sans-serif;
  background: #ffffff;
  padding-top: 80px;
}

#shopify-section-{{ section.id }} .toco-pagebarry-inner {
  max-width: 700px;
  text-align: center;
}

#shopify-section-{{ section.id }} .toco-pagebarry-title {
  font-weight: 800;
  color: #374650;
  font-size: 45px;
  line-height: 1.2;
  margin: 0 0 18px;
  letter-spacing: -0.2px;
}

#shopify-section-{{ section.id }} .toco-pagebarry-title .accent {
  color: #d82b1b;
  font-weight: 900;
  margin-left: 6px;
}

#shopify-section-{{ section.id }} .toco-pagebarry-sub {
    max-width: 640px;
    margin: 10px auto;
    color: #374650;
    font-size: 17px;
    line-height: 1.65;
    padding-top: 20px;
}

#shopify-section-{{ section.id }} .toco-pagebarry-sub .hl {
  background: #f6d67a;
  padding: 6px 8px;
  /* border-radius: 4px; */
  font-weight: 600;
  color: #2c2c2c;
  display: inline-block;
  box-decoration-break: clone;
}

@media (max-width: 640px) {
  #shopify-section-{{ section.id }} .toco-pagebarry-title {
    font-size: 26px;
  }

  #shopify-section-{{ section.id }} .toco-pagebarry-sub {
    font-size: 16px;
  }

  
  .toco-pagebarry-wrapper {
  padding-top: 50px !important;
}
}

#shopify-section-{{ section.id }} .toco-blocks-wrapper {
  padding: 0px 20px 60px 20px;
  max-width: 800px;
    margin: auto;
}

#shopify-section-{{ section.id }} .toco-blocks-container {
  max-width: 1200px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 40px;
  align-items: start;
}

#shopify-section-{{ section.id }} .toco-block {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

#shopify-section-{{ section.id }} .toco-block-title {
  font-size: 24px;
  font-weight: 700 !important;
  color: #374650;
  margin: 0 0 20px;
  line-height: 1.3;
}

#shopify-section-{{ section.id }} .toco-block-image-wrapper {
  margin: 0 0 20px;
  display: flex;
  justify-content: center;
  align-items: center;
}

#shopify-section-{{ section.id }} .toco-block-image {
  max-width: 150px;
  height: auto;
  object-fit: contain;
}

#shopify-section-{{ section.id }} .toco-block-text {
  font-size: 16px;
  color: #374650;
  line-height: 1.6;
  margin: 0;
  max-width: 280px;
  font-weight: 500;
}

#shopify-section-{{ section.id }} .toco-bottom-title {
  text-align: center;
  font-size: 28px;
  font-weight: 800;
  color: #374650;
  margin: 0 auto 40px;
  max-width: 800px;
  line-height: 1.3;
}

@media (max-width: 968px) {
  #shopify-section-{{ section.id }} .toco-blocks-container {
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }
}

@media (max-width: 640px) {
  #shopify-section-{{ section.id }} .toco-blocks-container {
    grid-template-columns: 1fr;
    gap: 40px;
  }
  
  #shopify-section-{{ section.id }} .toco-block-title {
    font-size: 18px;
  }
  
  #shopify-section-{{ section.id }} .toco-block-text {
    font-size: 14px;
    max-width: 100%;
  }
  
  #shopify-section-{{ section.id }} .toco-bottom-title {
    font-size: 24px;
    margin-bottom: 30px;
  }
}

#shopify-section-{{ section.id }} .toco-legend {
  display: flex;
  justify-content: center;
  align-items: left;
  gap: 30px;
  margin-top: 50px;
  flex-wrap: wrap;
}

#shopify-section-{{ section.id }} .toco-legend-item {
  display: flex;
  align-items: center;
  gap: 10px;
}

#shopify-section-{{ section.id }} .toco-legend-color {
  width: 16px;
  height: 16px;
  display: inline-block;
  flex-shrink: 0;
}

#shopify-section-{{ section.id }} .toco-legend-text {
  font-size: 15px;
  color: #6b7480;
  font-weight: 400;
}

@media (max-width: 640px) {
  #shopify-section-{{ section.id }} .toco-legend {
    gap: 5px;
    margin-top: 40px;
    display: flex;
    flex-direction: column;
    align-items: left;
  }
  
  #shopify-section-{{ section.id }} .toco-legend-text {
    font-size: 14px;
  }
}

</style>


