<style>
  #tocotrienole-graph-{{ section.id }} {
    padding: clamp(40px, 6vw, 80px) clamp(20px, 4vw, 40px);
    background-color: #ffffff;
    width: 100%;
  }

  #tocotrienole-graph-{{ section.id }} .tocotrienole-graph__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  #tocotrienole-graph-{{ section.id }} .tocotrienole-graph__title {
    font-size: clamp(28px, 4vw, 42px);
    font-weight: 700;
    line-height: 1.3;
    margin: 0 0 20px;
    color: #333333;
    text-align: center;
  }

  #tocotrienole-graph-{{ section.id }} .tocotrienole-graph__title-highlight {
    color: #e74c3c;
  }

  #tocotrienole-graph-{{ section.id }} .tocotrienole-graph__description {
    font-size: clamp(16px, 2vw, 18px);
    line-height: 1.6;
    color: #333333;
    margin: 0 auto 40px;
    max-width: 900px;
    text-align: center;
  }

  #tocotrienole-graph-{{ section.id }} .tocotrienole-graph__description-highlight {
    background-color: #ffeb3b;
    padding: 2px 4px;
    font-weight: 600;
  }

  #tocotrienole-graph-{{ section.id }} .tocotrienole-graph__bioavailability-title {
    font-size: clamp(24px, 3vw, 32px);
    font-weight: 700;
    line-height: 1.3;
    margin: 0 0 40px;
    color: #333333;
    text-align: center;
  }

  #tocotrienole-graph-{{ section.id }} .tocotrienole-graph__charts {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: clamp(20px, 4vw, 40px);
    margin-bottom: 40px;
    align-items: start;
  }

  #tocotrienole-graph-{{ section.id }} .tocotrienole-graph__chart-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  #tocotrienole-graph-{{ section.id }} .tocotrienole-graph__chart-label {
    font-size: clamp(18px, 2.5vw, 24px);
    font-weight: 600;
    color: #333333;
    margin-bottom: 15px;
  }

  #tocotrienole-graph-{{ section.id }} .tocotrienole-graph__chart-image {
    width: 100%;
    max-width: 250px;
    height: auto;
    margin-bottom: 15px;
  }

  #tocotrienole-graph-{{ section.id }} .tocotrienole-graph__chart-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  #tocotrienole-graph-{{ section.id }} .tocotrienole-graph__chart-bioavailability {
    font-size: clamp(14px, 1.8vw, 16px);
    font-weight: 500;
    color: #333333;
    margin-top: 10px;
  }

  #tocotrienole-graph-{{ section.id }} .tocotrienole-graph__legend {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: clamp(20px, 3vw, 30px);
    flex-wrap: wrap;
    margin-top: 30px;
  }

  #tocotrienole-graph-{{ section.id }} .tocotrienole-graph__legend-item {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  #tocotrienole-graph-{{ section.id }} .tocotrienole-graph__legend-color {
    width: 20px;
    height: 20px;
    border-radius: 3px;
    flex-shrink: 0;
  }

  #tocotrienole-graph-{{ section.id }} .tocotrienole-graph__legend-text {
    font-size: clamp(14px, 1.8vw, 16px);
    color: #333333;
  }

  /* Tablet Styles */
  @media (min-width: 769px) and (max-width: 1024px) {
    #tocotrienole-graph-{{ section.id }} .tocotrienole-graph__charts {
      grid-template-columns: repeat(3, 1fr);
      gap: 30px;
    }
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    #tocotrienole-graph-{{ section.id }} .tocotrienole-graph__charts {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    #tocotrienole-graph-{{ section.id }} .tocotrienole-graph__legend {
      flex-direction: column;
      align-items: flex-start;
      gap: 15px;
    }
  }
</style>

<section id="tocotrienole-graph-{{ section.id }}">
  <div class="tocotrienole-graph__container">
    <!-- Title Section -->
    {% if section.settings.title != blank %}
      <h2 class="tocotrienole-graph__title">
        {% assign title_parts = section.settings.title | split: section.settings.highlight_text %}
        {% if title_parts.size > 1 %}
          {{ title_parts[0] }}<span class="tocotrienole-graph__title-highlight">{{ section.settings.highlight_text }}</span>{{ title_parts[1] }}
        {% else %}
          {{ section.settings.title }}
        {% endif %}
      </h2>
    {% else %}
      <h2 class="tocotrienole-graph__title">
        The Problem with Other Sources? <span class="tocotrienole-graph__title-highlight">Alpha-Tocopherol!!</span>
      </h2>
    {% endif %}

    <!-- Description Section -->
    {% if section.settings.description != blank %}
      <div class="tocotrienole-graph__description">
        {% assign desc = section.settings.description %}
        {% assign highlight1 = "alpha-tocopherol interferes with" %}
        {% assign highlight2 = "tocotrienol absorption" %}
        {% if desc contains highlight1 %}
          {% assign parts1 = desc | split: highlight1 %}
          {% if parts1.size > 1 %}
            {% assign before_highlight1 = parts1[0] %}
            {% assign after_highlight1 = parts1[1] %}
            {% if after_highlight1 contains highlight2 %}
              {% assign parts2 = after_highlight1 | split: highlight2 %}
              {{ before_highlight1 }}<span class="tocotrienole-graph__description-highlight">{{ highlight1 }}</span><span class="tocotrienole-graph__description-highlight">{{ highlight2 }}</span>{{ parts2[1] }}
            {% else %}
              {{ before_highlight1 }}<span class="tocotrienole-graph__description-highlight">{{ highlight1 }}</span>{{ after_highlight1 }}
            {% endif %}
          {% else %}
            {{ desc }}
          {% endif %}
        {% else %}
          {{ desc }}
        {% endif %}
      </div>
    {% else %}
      <div class="tocotrienole-graph__description">
        Most vitamin E sources contain alpha-tocopherol. However, research shows that <span class="tocotrienole-graph__description-highlight">alpha-tocopherol interferes with</span> <span class="tocotrienole-graph__description-highlight">tocotrienol absorption</span> and blocks their health-promoting effects.
      </div>
    {% endif %}

    <!-- Bioavailability Section -->
    <h3 class="tocotrienole-graph__bioavailability-title">
      {{ section.settings.bioavailability_title | default: "The Bioavailability Issue:" }}
    </h3>

    <!-- Charts Grid -->
    <div class="tocotrienole-graph__charts">
      {% for block in section.blocks %}
        <div class="tocotrienole-graph__chart-item" {{ block.shopify_attributes }}>
          {% if block.settings.chart_label != blank %}
            <div class="tocotrienole-graph__chart-label">{{ block.settings.chart_label }}</div>
          {% endif %}
          
          {% if block.settings.chart_image != blank %}
            <div class="tocotrienole-graph__chart-image">
              {{ block.settings.chart_image | image_url: width: 500 | image_tag: alt: block.settings.chart_label, loading: 'lazy' }}
            </div>
          {% endif %}
          
          {% if block.settings.bioavailability_text != blank %}
            <div class="tocotrienole-graph__chart-bioavailability">{{ block.settings.bioavailability_text }}</div>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    <!-- Legend Section -->
    {% if section.settings.show_legend %}
      <div class="tocotrienole-graph__legend">
        {% if section.settings.legend_item1_text != blank %}
          <div class="tocotrienole-graph__legend-item">
            <div class="tocotrienole-graph__legend-color" style="background-color: {{ section.settings.legend_item1_color | default: '#4caf50' }};"></div>
            <span class="tocotrienole-graph__legend-text">{{ section.settings.legend_item1_text }}</span>
          </div>
        {% endif %}
        
        {% if section.settings.legend_item2_text != blank %}
          <div class="tocotrienole-graph__legend-item">
            <div class="tocotrienole-graph__legend-color" style="background-color: {{ section.settings.legend_item2_color | default: '#87ceeb' }};"></div>
            <span class="tocotrienole-graph__legend-text">{{ section.settings.legend_item2_text }}</span>
          </div>
        {% endif %}
        
        {% if section.settings.legend_item3_text != blank %}
          <div class="tocotrienole-graph__legend-item">
            <div class="tocotrienole-graph__legend-color" style="background-color: {{ section.settings.legend_item3_color | default: '#555555' }};"></div>
            <span class="tocotrienole-graph__legend-text">{{ section.settings.legend_item3_text }}</span>
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Tocotrienole Graph Show",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "The Problem with Other Sources? Alpha-Tocopherol!!"
    },
    {
      "type": "text",
      "id": "highlight_text",
      "label": "Title Highlight Text",
      "default": "Alpha-Tocopherol!!",
      "info": "This text will be highlighted in red"
