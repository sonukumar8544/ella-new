<div class="science-mobile-container container">
  <h2 class="title-mob">Team of Scientists and Experts</h2>
  <div class="science-mobile-profile-section">
    {% for block in section.blocks %}
      <div class="science-mobile-profile-card">
        <div class="mobile-image-science-pag">
          <img loading="lazy"
            src="{{ block.settings.scientist_image | img_url: 'master' }}"
            alt="{{ block.settings.scientist_image.alt }}" width="" height="" title=""
            class="science-mobile-profile-image">
        </div>
        <div class="science-mobile-profile-details">
          <h2 class="science-mobile-profile-name">{{ block.settings.scientist_title }}</h2>
          <h3 class="science-mobile-profile-role">{{ block.settings.scientist_subtitle }}</h3>
          <p class="science-mobile-profile-description">
            {{ block.settings.scientist_description }}
          </p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .title-mob {
    font-size: 24px;
    margin: 0 0 -45px;
    color: #374650;
    padding: 0;
    line-height: 1.2;
  }
  @media (min-width: 768px) {
    .science-mobile-container {
      display: none !important;
    }
  }
  .science-mobile-container {
    margin: 0 auto;
    text-align: center;
  }

  .science-mobile-container {
    margin: 50px 0;
  }

  .mobile-image-science-pag {
    position: relative;
    top: 85px;
  }


  .science-mobile-profile-section {
    display: block;
    overflow: hidden;
  }


  .science-mobile-profile-card {
    border-radius: 10px;
    display: flex;
    align-items: center;
    flex-direction: column;
    margin: 0 auto;
  }


  .science-mobile-profile-image {
    width: 200px;
    margin-bottom: 20px;
  }


  .science-mobile-profile-details {
    text-align: center;
    padding: 0 10px;
  }


  .science-mobile-profile-name {
    font-size: 25px;
    margin: 0;
    color: #086B92;
  }


  .science-mobile-profile-role {
    font-size: 18px;
  font-weight: 500;
    margin: 0;
    padding: 0;
    color: #36454F;
  }


  .science-mobile-profile-description {
    font-size: 15px;
    margin-top: 10px;
    color: #36454F;
    line-height: 1.6;
  }


  @media (max-width: 768px) {
    .science-mobile-profile-section {
      flex-direction: column;
      align-items: center;
    }

    .science-mobile-profile-details {
      text-align: center;
      padding-top: 75px;
      padding-bottom: 30px;
      background-image: url('https://cdn.shopify.com/s/files/1/0735/8172/3944/files/Group_42.png?v=1727695771');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }
  }
</style>


<script defer>
  $(document).ready(function(){
    $('.science-mobile-profile-section').slick({
      infinite: true,
      speed: 300,
      slidesToShow: 2,
      slidesToScroll: 1,
      autoplay: true, // Enable autoplay
      autoplaySpeed: 1000000, // Delay between slides in ms
      arrows: true, // Show next/prev arrows
      // prevArrow: '<button type="button" class="slick-prev">Previous</button>',
      // nextArrow: '<button type="button" class="slick-next">Next</button>',
      responsive: [
        {
          breakpoint: 1024,
          settings: {
            slidesToShow: 2,
            slidesToScroll: 1,
            infinite: true,
            dots: true
          }
        },
        {
          breakpoint: 768,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1,
            infinite: true,
            dots: true
          }
        },
        {
          breakpoint: 600,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1
          }
        },
        {
          breakpoint: 480,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1
          }
        }
      ]
    });
  });
</script>


