<div class="imain-wrapper-sec-scientist">
  <div class="container-section-scie">
    <h2 class="title-science-sec">{{ section.settings.science_testomonial_title }}</h2>
    <div class="container profile-section science-slick-mobile">
      {% for block in section.blocks %}
        <div class="profile-card {% if block.settings.row_reverse_sec %} row-reverse-card {% endif %}">
          <div class="profile-image-container">
            <img
              class="profile-image"
              src="{{ block.settings.scientist_image | img_url: 'master' }}"
              alt="{{ block.settings.scientist_image.alt }}">
          </div>
          <div class="profile-details">
            <div class="scientist-title-sub">
              <h2 class="profile-name {% if block.settings.row_reverse_sec %} text-rigt-sec {% endif %}">{{ block.settings.scientist_title }}</h2>
              <h3 class="profile-role {% if block.settings.row_reverse_sec %} text-rigt-sec {% endif %}">{{ block.settings.scientist_subtitle }}</h3>
            </div>
            <div class="profile-description {% if block.settings.row_reverse_sec %} text-rigt-sec {% endif %}">
              <p class="mobile-title-sc">{{ block.settings.scientist_title }}</p>
              <p class="mobile-sub-title-sc">{{ block.settings.scientist_subtitle }}</p>
              {{ block.settings.scientist_description }}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

