<style>
  #shopify-section-{{ section.id }} .career-culture {
    background-color: {{ section.settings.background_color | default: '#f9fafb' }};
    padding: {{ section.settings.section_padding_top }}px {{ section.settings.section_padding_horizontal }}px {{ section.settings.section_padding_bottom }}px;
  }

  #shopify-section-{{ section.id }} .career-culture__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  #shopify-section-{{ section.id }} .career-culture__header {
    text-align: center;
    margin-bottom: {{ section.settings.header_bottom_spacing }}px;
  }

  #shopify-section-{{ section.id }} .career-culture__title {
    font-size: {{ section.settings.title_font_size }}px;
    font-weight: {{ section.settings.title_font_weight }};
    line-height: 1.2;
    color: {{ section.settings.title_color | default: '#000000' }};
    margin: 0 0 {{ section.settings.title_bottom_spacing }}px;
  }

  #shopify-section-{{ section.id }} .career-culture__subtitle {
    font-size: {{ section.settings.subtitle_font_size }}px;
    line-height: 1.6;
    color: {{ section.settings.subtitle_color | default: '#666666' }};
    margin: 0;
    max-width: {{ section.settings.subtitle_max_width }}px;
    margin-left: auto;
    margin-right: auto;
  }

  #shopify-section-{{ section.id }} .career-culture__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ section.settings.grid_gap }}px;
    margin-top: {{ section.settings.grid_top_spacing }}px;
  }

  #shopify-section-{{ section.id }} .career-culture__item {
    background-color: {{ section.settings.item_background_color | default: '#ffffff' }};
    border-radius: {{ section.settings.item_border_radius }}px;
    padding: {{ section.settings.item_padding }}px;
    text-align: left;
  }

  #shopify-section-{{ section.id }} .career-culture__icon-wrapper {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    background-color: {{ section.settings.icon_background_color | default: '#006F8C' }};
    border-radius: {{ section.settings.icon_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: {{ section.settings.icon_bottom_spacing }}px;
    flex-shrink: 0;
  }

  #shopify-section-{{ section.id }} .career-culture__icon {
    width: {{ section.settings.icon_inner_size }}px;
    height: {{ section.settings.icon_inner_size }}px;
    object-fit: contain;
    display: block;
  }

  #shopify-section-{{ section.id }} .career-culture__item-title {
    font-size: {{ section.settings.item_title_font_size }}px;
    font-weight: {{ section.settings.item_title_font_weight }};
    line-height: 1.3;
    color: {{ section.settings.item_title_color | default: '#000000' }};
    margin: 0 0 {{ section.settings.item_title_bottom_spacing }}px;
    text-align: left;
  }

  #shopify-section-{{ section.id }} .career-culture__item-description {
    font-size: {{ section.settings.item_description_font_size }}px;
    line-height: 1.6;
    color: {{ section.settings.item_description_color | default: '#666666' }};
    margin: 0;
    text-align: left;
  }

  /* Responsive Styles */
  @media screen and (max-width: 1024px) {
    #shopify-section-{{ section.id }} .career-culture__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 768px) {
    #shopify-section-{{ section.id }} .career-culture {
      padding: {{ section.settings.section_padding_top_mobile }}px {{ section.settings.section_padding_horizontal_mobile }}px {{ section.settings.section_padding_bottom_mobile }}px;
    }

    #shopify-section-{{ section.id }} .career-culture__title {
      font-size: {{ section.settings.title_font_size_mobile | default: section.settings.title_font_size }}px;
    }

    #shopify-section-{{ section.id }} .career-culture__subtitle {
      font-size: {{ section.settings.subtitle_font_size_mobile | default: section.settings.subtitle_font_size }}px;
    }

    #shopify-section-{{ section.id }} .career-culture__icon-wrapper {
      width: {{ section.settings.icon_size_mobile | default: section.settings.icon_size }}px;
      height: {{ section.settings.icon_size_mobile | default: section.settings.icon_size }}px;
    }

    #shopify-section-{{ section.id }} .career-culture__icon {
      width: {{ section.settings.icon_inner_size_mobile | default: section.settings.icon_inner_size }}px;
      height: {{ section.settings.icon_inner_size_mobile | default: section.settings.icon_inner_size }}px;
    }

    #shopify-section-{{ section.id }} .career-culture__item-title {
      font-size: {{ section.settings.item_title_font_size_mobile | default: section.settings.item_title_font_size }}px;
    }

    #shopify-section-{{ section.id }} .career-culture__item-description {
      font-size: {{ section.settings.item_description_font_size_mobile | default: section.settings.item_description_font_size }}px;
    }

    #shopify-section-{{ section.id }} .career-culture__grid {
      gap: {{ section.settings.grid_gap_mobile | default: section.settings.grid_gap }}px;
    }

    #shopify-section-{{ section.id }} .career-culture__item {
      padding: {{ section.settings.item_padding_mobile | default: section.settings.item_padding }}px;
    }
  }

  @media screen and (max-width: 480px) {
    #shopify-section-{{ section.id }} .career-culture__grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<section class="career-culture">
  <div class="career-culture__container">
    {% if section.settings.title != blank or section.settings.subtitle != blank %}
      <div class="career-culture__header">
        {% if section.settings.title != blank %}
          <h2 class="career-culture__title">{{ section.settings.title }}</h2>
        {% endif %}
        {% if section.settings.subtitle != blank %}
          <p class="career-culture__subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="career-culture__grid">
        {% for block in section.blocks limit: 10 %}
          <div class="career-culture__item" {{ block.shopify_attributes }}>
            {% if block.settings.icon != blank %}
              <div class="career-culture__icon-wrapper">
                <img 
                  src="{{ block.settings.icon | image_url: width: 200 }}"
                  alt="{{ block.settings.icon.alt | default: block.settings.title }}"
                  class="career-culture__icon"
                  width="{{ block.settings.icon.width | default: 100 }}"
                  height="{{ block.settings.icon.height | default: 100 }}"
                  loading="lazy"
                >
              </div>
            {% endif %}

            {% if block.settings.title != blank %}
              <h3 class="career-culture__item-title">{{ block.settings.title }}</h3>
            {% endif %}

            {% if block.settings.description != blank %}
              <p class="career-culture__item-description">{{ block.settings.description }}</p>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

