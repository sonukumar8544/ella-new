{% schema %}
  {
    "name": "BMR Calculator",
    "settings": [],
    "presets": [
      {
        "name": "BMR Calculator"
      }
    ]
  }
{% endschema %}

<style>
    @media (min-width: 768px){
        .bmr-calc-body{
           min-height: 100vh;
        }
    }
  .bmr-calc-body {
    font-family: 'Arial', sans-serif;
    background-color: #f5f5f5;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #333;
    flex-direction: column;
  }

  .bmr-calc-calculator-container {
    background-color: white;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 30px;
    width: 100%;
    max-width: 500px;
    position: relative;
  }

  .bmr-calc-calculator-container h1 {
    color: #2c3e50;
    text-align: center;
    margin-bottom: 30px;
    line-height: 1.1;
    font-size: 24px;
  }

  .bmr-calc-input-group {
    margin-bottom: 20px;
  }

  .bmr-calc-input-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: bold;
  }

  .bmr-calc-input-group select,
  .bmr-calc-input-group input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 16px;
  }

  .bmr-calc-button {
    background-color: #086b92;
    color: white;
    border: none;
    padding: 12px 20px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    width: 100%;
    transition: background-color 0.3s;
    margin-top: 10px;
  }

  .bmr-calc-button:hover {
    background-color: #075a7b;
  }

  .bmr-calc-result-container {
    margin-top: 30px;
    padding: 20px;
    background-color: #f8f9fa;
    border-radius: 5px;
    width: 100%;
    box-sizing: border-box;
    display: none;
  }

  .bmr-calc-result-container h2 {
    color: #2c3e50;
    margin-top: 0;
    text-align: center;
  }

  .bmr-calc-result-value {
    font-size: 32px;
    font-weight: bold;
    color: #e74c3c;
    margin: 15px 0;
    text-align: center;
  }

  .bmr-calc-result-category {
    font-size: 24px;
    font-weight: bold;
    color: #086b92;
    margin: 15px 0;
    text-align: center;
  }

  .bmr-calc-suggestion {
    background-color: #e8f4fc;
    padding: 15px;
    border-radius: 5px;
    margin-top: 20px;
    border-left: 4px solid #086b92;
    max-width: 1000px;
    margin-left: auto;
    margin-right: auto;
  }

  @media (max-width: 760px){
    .bmr-calc-calculator-container{
      padding: 15px;
    }

    .bmr-calc-calculator-container h1{
      font-size: 22px;
    }
    
    .bmr-calc-result-value {
      font-size: 28px;
    }
    
    .bmr-calc-result-category {
      font-size: 20px;
    }
  }
</style>

<section class="bmr-calc-body">
  <div class="bmr-calc-calculator-container">
    <h1>BMR Calculator</h1>

    <div class="bmr-calc-input-group">
      <label for="bmr-calc-gender">Gender</label>
      <select id="bmr-calc-gender">
        <option value="male">Male</option>
        <option value="female">Female</option>
      </select>
    </div>

    <div class="bmr-calc-input-group">
      <label for="bmr-calc-age">Age (years)</label>
      <input
        type="number"
        id="bmr-calc-age"
        placeholder="Enter your age"
        min="15"
        max="120"
        value="30">
    </div>

    <div class="bmr-calc-input-group">
      <label for="bmr-calc-height">Height (cm)</label>
      <input
        type="number"
        id="bmr-calc-height"
        placeholder="Enter your height in cm"
        min="100"
        max="250"
        value="175">
    </div>

    <div class="bmr-calc-input-group">
      <label for="bmr-calc-weight">Weight (kg)</label>
      <input
        type="number"
        id="bmr-calc-weight"
        placeholder="Enter your weight in kg"
        min="30"
        max="300"
        value="70">
    </div>

    <button id="bmr-calc-calculate-btn" class="bmr-calc-button">Calculate BMR</button>
  </div>

  <div class="bmr-calc-result-container" id="bmr-calc-result">
    <h2>Your Results</h2>
    <div class="bmr-calc-result-value" id="bmr-calc-result-value">0 kcal</div>
    <div class="bmr-calc-result-category">Basal Metabolic Rate</div>

    <div class="bmr-calc-suggestion">
      <h3>About Your BMR</h3>
      <p>Your Basal Metabolic Rate (BMR) is the number of calories your body needs at complete rest to maintain basic functions like breathing and circulation. This is calculated using the Mifflin-St Jeor Equation, the most accurate BMR formula.</p>
      <p id="bmr-calc-activity-note"></p>
    </div>
  </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const calculateBtn = document.getElementById('bmr-calc-calculate-btn');
        const resultContainer = document.getElementById('bmr-calc-result');
        const resultValue = document.getElementById('bmr-calc-result-value');
        const activityNote = document.getElementById('bmr-calc-activity-note');
        
        calculateBtn.addEventListener('click', calculateBMR);
        
        function calculateBMR() {
            const gender = document.getElementById('bmr-calc-gender').value;
            const age = parseInt(document.getElementById('bmr-calc-age').value);
            const height = parseFloat(document.getElementById('bmr-calc-height').value);
            const weight = parseFloat(document.getElementById('bmr-calc-weight').value);
            
            // Clear previous errors
            const existingError = document.querySelector('.bmr-calc-error');
            if (existingError) {
                existingError.remove();
            }
            
            // Validate inputs
            if (isNaN(age) || age <= 0 || age > 120) {
                showError('Please enter a valid age between 1-120');
                return;
            }
            
            if (isNaN(height) || height <= 0) {
                showError('Please enter a valid height');
                return;
            }
            
            if (isNaN(weight) || weight <= 0) {
                showError('Please enter a valid weight');
                return;
            }
            
            // Calculate BMR using Mifflin-St Jeor Equation
            let bmr;
            if (gender === 'male') {
                bmr = (10 * weight) + (6.25 * height) - (5 * age) + 5;
            } else {
                bmr = (10 * weight) + (6.25 * height) - (5 * age) - 161;
            }
            
            // Round to nearest whole number
            bmr = Math.round(bmr);
            
            // Add activity level information
            activityNote.innerHTML = `
                <strong>Based on your activity level:</strong><br>
                • Sedentary (little/no exercise): ${Math.round(bmr * 1.2)} kcal/day<br>
                • Lightly active (light exercise 1-3 days/week): ${Math.round(bmr * 1.375)} kcal/day<br>
                • Moderately active (moderate exercise 3-5 days/week): ${Math.round(bmr * 1.55)} kcal/day<br>
                • Very active (hard exercise 6-7 days/week): ${Math.round(bmr * 1.725)} kcal/day<br>
                • Extremely active (very hard exercise & physical job): ${Math.round(bmr * 1.9)} kcal/day
            `;
            
            // Display result
            resultValue.textContent = `${bmr} kcal/day`;
            resultContainer.style.display = 'block';
            
            // Scroll to results
            resultContainer.scrollIntoView({ behavior: 'smooth' });
        }
        
        function showError(message) {
            const errorElement = document.createElement('div');
            errorElement.className = 'bmr-calc-error';
            errorElement.textContent = message;
            
            document.querySelector('.bmr-calc-body').insertBefore(
                errorElement, 
                document.querySelector('.bmr-calc-result-container')
            );
        }
    });
</script>