      "type": "text",
      "id": "blog_author_name",
      "label": "Author Name"
    },
    {
      "type": "text",
      "id": "blog_dr_name",
      "label": "Dr Name"
    },
    {
      "type": "text",
      "id": "review_dr_page",
      "label": "Dr Page URL"
    }
  ],
  "presets": [
    {
      "name": "blog-card-review-doctor"
    }
  ]
}
{% endschema %}
