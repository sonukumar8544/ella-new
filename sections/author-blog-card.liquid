<div class="container-blog" id="blog-list-vlog-writer"> 
  {% assign author_filter = section.settings.blog_author_name %}
  {% for article in blogs['wellness'].articles %}
    {% if article.author == author_filter %}
      <div class="card blog-item-vlog-writer">
        <div class="card-header">
          <img src="{{ article.image | img_url: 'medium' }}" alt="" />
        </div>
        <div class="card-body">
          <a href={{ article.url }}>
            <h4 class="blog-title-author-page">{{ article.title }}</h4>
          </a>
          <div class="user">
            <div class="user-info">
              <small>
                <span class="blog-date">{{ article.published_at | time_tag: '%b %d, %Y' }}</span>
              </small>
              <a href="https://wellnessextract.com/pages/{{ article.author | replace: ' ', '-' | downcase }}">
                {% if article.author == 'Aditi bakshi' %}
                  <h5>Author: Dr. {{ article.author }}</h5>
                {% else %}
                  <h5>Author: {{ article.author }}</h5>
                {% endif %}
              </a>
            </div>
          </div>
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>

<!-- Pagination Controls -->
<div id="pagination-vlog-writer" class="pagination-vlog-writer"></div>

<style>
  .container-blog {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    margin: auto;
    padding: 20px;
    max-width: 1020px !important;
  }

  .container-blog .card{
    max-width: 400px;
  }
  .card {
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }
  .card-header img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .card-body {
    display: flex;
    flex-direction: column;
    align-items: start;
    padding: 20px;
  }
  .tag {
    background-color: #ccc;
    color: #fff;
    border-radius: 50px;
    font-size: 12px;
    margin: 0;
    padding: 2px 10px;
    text-transform: uppercase;
  }
  .tag-teal {
    background-color: #086b92;
  }
  .card-body h4 {
    margin: 10px 0;
    line-height: 25px;
    color: #086b92;
  }

  .blog-title-author-page {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: normal;
  }
  .user {
    display: flex;
    align-items: center;
  }
  .user img {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin-right: 10px;
    object-fit: cover;
  }
  .user-info h5 {
    margin: 0;
  }
  .user-info small {
    color: #888785;
    margin: auto;
  }
  .user-info {
    display: flex;
    gap: 12px;
  }

  /* Pagination Styles */
  .pagination-vlog-writer {
    text-align: center;
    margin: 30px 0;
  }
  .pagination-vlog-writer button {
    background: #086b92;
    color: #fff;
    border: none;
    padding: 8px 14px;
    margin: 0 5px;
    border-radius: 6px;
    cursor: pointer;
  }
  .pagination-vlog-writer button.disabled {
    background: #ccc;
    cursor: not-allowed;
  }
  .pagination-vlog-writer button.active {
    background: #05445e;
  }

  @media (max-width: 768px) {
    .container-blog {
      padding: 10px;
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .card-body {
      padding: 15px;
    }
    .tag {
      font-size: 10px;
      padding: 2px 8px;
    }
    .card-body h4 {
      font-size: 16px;
    }
    .user img {
      width: 30px;
      height: 30px;
    }
    .user-info h5 {
      font-size: 14px;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const itemsPerPage = 6; // Number of blogs per page
    const items = document.querySelectorAll(".blog-item-vlog-writer");
    const pagination = document.getElementById("pagination-vlog-writer");
    const totalPages = Math.ceil(items.length / itemsPerPage);
    let currentPage = 1;

    function showPage(page) {
      items.forEach((item, index) => {
        item.style.display =
          index >= (page - 1) * itemsPerPage && index < page * itemsPerPage
            ? "block"
            : "none";
      });

      // update pagination buttons
      const buttons = pagination.querySelectorAll("button.page-btn-vlog-writer");
      buttons.forEach((btn) => btn.classList.remove("active"));
      if (buttons[page - 1]) {
        buttons[page - 1].classList.add("active");
      }
    }

    function setupPagination() {
      pagination.innerHTML = "";

      // Prev button
      const prevBtn = document.createElement("button");
      prevBtn.innerText = "Prev";
      prevBtn.classList.add("prev-btn-vlog-writer");
      prevBtn.onclick = () => {
        if (currentPage > 1) {
          currentPage--;
          showPage(currentPage);
        }
      };
      pagination.appendChild(prevBtn);

      // Page numbers
      for (let i = 1; i <= totalPages; i++) {
        const btn = document.createElement("button");
        btn.innerText = i;
        btn.classList.add("page-btn-vlog-writer");
        if (i === currentPage) btn.classList.add("active");
        btn.onclick = () => {
          currentPage = i;
          showPage(currentPage);
        };
        pagination.appendChild(btn);
      }

      // Next button
      const nextBtn = document.createElement("button");
      nextBtn.innerText = "Next";
      nextBtn.classList.add("next-btn-vlog-writer");
      nextBtn.onclick = () => {
        if (currentPage < totalPages) {
          currentPage++;
          showPage(currentPage);
        }
      };
      pagination.appendChild(nextBtn);
    }

    if (items.length > 0) {
      setupPagination();
      showPage(currentPage);
    }
  });
</script>

