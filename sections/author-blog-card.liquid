    "name": "Author Blog Card",
    "settings": [
      {
        "type": "text",
        "id": "blog_author_name",
        "label": "Author Name"
      }
    ],
    "presets": [
      {
        "name": "author-blog-card"
      }
    ]
  }
{% endschema %}
