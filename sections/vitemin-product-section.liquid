<style>
  .tocotrienol-product-section {
    padding: 72px 0;
  }

  .tocotrienol-product-container {
    max-width: 1180px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .tocotrienol-header {
    text-align: center;
    margin-bottom: 48px;
  }

  .tocotrienol-title {
    margin: 0 0 16px;
    font-size: 38px;
    font-weight: 700;
    line-height: 1.2;
    color: #1f2a36;
  }

  .tocotrienol-subtitle {
    margin: 0;
    color: #5a6b78;
    font-size: 17px;
    line-height: 1.6;
  }

  .tocotrienol-card-grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 24px;
  }

  .tocotrienol-card {
    background: #ffffff;
    border-radius: 22px;
    box-shadow: 0 18px 40px rgba(35, 64, 116, 0.12);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: transform 0.25s ease, box-shadow 0.25s ease;
  }

  .tocotrienol-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 26px 58px rgba(35, 64, 116, 0.16);
  }

  .tocotrienol-card-media {
    position: relative;
    padding: 15px 15px 0;
  }

  .tocotrienol-card-media-inner {
    position: relative;
    border-radius: 16px 16px 8px 8px;
    overflow: hidden;
    background: linear-gradient(145deg, rgba(244, 248, 255, 0.96), rgba(228, 238, 255, 0.85));
  }

  .tocotrienol-card-media img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .tocotrienol-card-image {
    transition: opacity 0.35s ease, transform 0.35s ease;
  }

  .tocotrienol-card-image--hover {
    position: absolute;
    inset: 0;
    opacity: 0;
    transform: scale(1.04);
  }

  .tocotrienol-card--has-hover:hover .tocotrienol-card-image--hover {
    opacity: 1;
    transform: scale(1);
  }

  .tocotrienol-card--has-hover:hover .tocotrienol-card-image--default {
    opacity: 0;
    transform: scale(1.04);
  }

  .tocotrienol-card-body {
    padding: 32px 32px 36px;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
  }

  .tocotrienol-card-price {
    margin: 0;
    font-size: 26px;
    font-weight: 700;
    color: #203145;
  }

  .tocotrienol-card-note {
    margin: 0;
    font-size: 15px;
    color: #6e7c8a;
  }

  .tocotrienol-card-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 13px 32px;
    border-radius: 999px;
    background: #ffd45a;
    color: #1f2a36;
    font-size: 15px;
    font-weight: 600;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    width: 100%;
    max-width: 200px;
  }

  .tocotrienol-card-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 24px rgba(255, 212, 90, 0.35);
  }

  .tocotrienol-card-button:focus-visible {
    outline: 3px solid rgba(12, 116, 212, 0.35);
    outline-offset: 2px;
  }

  .tocotrienol-card-button-icon svg {
    width: 18px;
    height: 18px;
    fill: currentColor;
    display: block;
  }

  .tocotrienol-cta {
    margin-top: 48px;
    text-align: center;
  }

  .tocotrienol-cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 16px 40px;
    border-radius: 999px;
    background: #086b92;
    color: #ffffff;
    font-weight: 600;
    font-size: 16px;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .tocotrienol-cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 22px 40px rgba(12, 116, 212, 0.32);
  }

  .tocotrienol-cta-button:focus-visible {
    outline: 3px solid rgba(255, 255, 255, 0.6);
    outline-offset: 2px;
  }

  @media (max-width: 1024px) {
    .tocotrienol-card-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    .tocotrienol-title {
      font-size: 32px;
    }
  }

  @media (max-width: 768px) {
    .tocotrienol-product-section {
      padding: 60px 0;
    }

    .tocotrienol-card-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .tocotrienol-card-media {
      padding: 24px 24px 0;
    }

    .tocotrienol-card-body {
      padding: 24px 24px 28px;
    }
  }

  @media (max-width: 480px) {
    .tocotrienol-product-container {
      padding: 0 16px;
    }

    .tocotrienol-title {
      font-size: 26px;
    }

  }
</style>

