<style>
  .tocotrienol-product-section {
    padding: 72px 0;
  }

  .tocotrienol-product-container {
    max-width: 1180px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .tocotrienol-header {
    text-align: center;
    margin-bottom: 48px;
  }

  .tocotrienol-title {
    margin: 0 0 16px;
    font-size: 38px;
    font-weight: 700;
    line-height: 1.2;
    color: #1f2a36;
  }

  .tocotrienol-subtitle {
    margin: 0;
    color: #5a6b78;
    font-size: 17px;
    line-height: 1.6;
  }

  .tocotrienol-card-grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 24px;
  }

  .tocotrienol-card {
    background: #ffffff;
    border-radius: 22px;
    box-shadow: 0 18px 40px rgba(35, 64, 116, 0.12);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: transform 0.25s ease, box-shadow 0.25s ease;
    position: relative;
    border: 2px solid transparent;
  }

  .tocotrienol-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 26px 58px rgba(35, 64, 116, 0.16);
    border-color: #7d6ff5;
  }

  .tocotrienol-card:focus-within {
    border-color: #7d6ff5;
    box-shadow: 0 26px 58px rgba(35, 64, 116, 0.16);
  }

  .tocotrienol-card--no-media {
    border-color: #e2e8ff;
  }

  .tocotrienol-card-media {
    position: relative;
    /* padding: 15px 15px 0; */
  }

  .tocotrienol-card-media-inner {
    position: relative;
    border-radius: 16px 16px 8px 8px;
    overflow: hidden;
    background: linear-gradient(145deg, rgba(244, 248, 255, 0.96), rgba(228, 238, 255, 0.85));
  }

  .tocotrienol-card-media img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .tocotrienol-card-image {
    transition: opacity 0.35s ease, transform 0.35s ease;
  }

  .tocotrienol-card-image--hover {
    position: absolute;
    inset: 0;
    opacity: 0;
    transform: scale(1.04);
  }

  .tocotrienol-card--has-hover:hover .tocotrienol-card-image--hover {
    opacity: 1;
    transform: scale(1);
  }

  .tocotrienol-card--has-hover:hover .tocotrienol-card-image--default {
    opacity: 0;
    transform: scale(1.04);
  }

  .tocotrienol-card-overlay {
    position: absolute;
    inset: 0;
    z-index: 2;
    background: linear-gradient(180deg, rgba(250, 252, 255, 0.98), #ffffff 78%);
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 32px 32px 40px;
    opacity: 0;
    pointer-events: none;
    transform: translateY(18px);
    transition: opacity 0.35s ease, transform 0.35s ease;
  }

  .tocotrienol-card:hover .tocotrienol-card-overlay,
  .tocotrienol-card:focus-within .tocotrienol-card-overlay {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  .tocotrienol-card--no-media .tocotrienol-card-overlay {
    position: relative;
    opacity: 1;
    transform: none;
    pointer-events: auto;
    background: linear-gradient(180deg, rgba(248, 251, 255, 0.96), #ffffff 88%);
  }

  .tocotrienol-card-body {
    padding: 28px 32px 32px;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 14px;
  }

  .tocotrienol-card-headline {
    margin: 0;
    font-size: 22px;
    font-weight: 600;
    color: #203145;
  }

  .tocotrienol-card-features {
    margin: 0;
    padding: 0;
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 8px;
    color: #425569;
    font-size: 16px;
  }

  .tocotrienol-card-features li {
    display: flex;
    align-items: center;
    gap: 10px;
    justify-content: center;
  }

  .tocotrienol-card-feature-icon {
    display: inline-flex;
    width: 20px;
    height: 20px;
    border-radius: 999px;
    background: #d6ecfd;
    align-items: center;
    justify-content: center;
