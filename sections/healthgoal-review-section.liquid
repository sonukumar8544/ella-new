      flex-direction: column;
    }

    .testimonial-slider {
      width: 100%;
    }

    .testimonial-fixed-slide {
      padding: 0;
      width: 100%;
    }
  }

  .testimonial-section .slick-arrow.slick-next {
    right: -15px;
  }

  .testimonial-section .slick-arrow.slick-prev {
    left: -15px;
  }
</style>

