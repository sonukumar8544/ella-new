<style>
  .testimonial-section {
    padding: 40px 20px;
    text-align: center;
    background-color: #fff;
    display: flex;
    gap: 20px;
    justify-content: center;
  }

  .testimonial-heading {
    font-size: 35px;
    color: #086b92;
    text-align: center;
    margin-bottom: 20px;
  }

  .testimonial-slider {
    width: 70%;
    display: flex;
    gap: 20px;
  }

  /* Slick Slide Styling */
  .testimonial-img-slide img {
