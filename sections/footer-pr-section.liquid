<style>
  .pr-footer-press-contact {
    background-color: #086b92;
    padding: 60px 20px;
    color: white;
  }
  
  .pr-footer-container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .pr-footer-title {
    font-size: 32px;
    font-weight: bold;
    margin-bottom: 20px;
    color: white;
  }
  
  .pr-footer-intro {
    font-size: 16px;
    margin-bottom: 40px;
    color: white;
  }
  
  .pr-footer-contacts {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 40px;
  }
  
  .pr-footer-contact-person {
    background: rgba(255, 255, 255, 0.1);
    padding: 30px;
    border-radius: 10px;
  }
  
  .pr-footer-contact-name {
    font-weight: bold;
    margin-bottom: 0px;
    padding-bottom: 0px;
    color: white;
  }
  
  .pr-footer-contact-role {
    font-size: 16px;
    margin-bottom: 20px;
    color: white;
    margin-top: 0px;
  }
  
  .pr-footer-contact-detail {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
    color: white;
    text-decoration: none;
    font-weight: 300;
  }
  
  .pr-footer-contact-detail:hover {
    color: #ccc;
  }
  
  .pr-footer-icon {
    width: 20px;
    height: 20px;
    margin-right: 10px;
    fill: white;
  }
  
  .pr-footer-website {
    text-decoration: underline;
    color: white;
  }
  
  .pr-footer-website:hover {
    color: #ccc;
  }
  
  @media (max-width: 768px) {
    .pr-footer-press-contact {
      padding: 40px 15px;
    }
    
    .pr-footer-title {
      font-size: 22px;
    }
    
    .pr-footer-contacts {
      grid-template-columns: 1fr;
      gap: 20px;
    }
  }
</style>

