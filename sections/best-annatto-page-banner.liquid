<style>
  #annatto-banner-{{ section.id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  #annatto-banner-{{ section.id }} .annatto-banner__background-section {
    width: 100%;
    padding: 80px 20px;
    padding-bottom: 0px;
        margin-bottom: 100px;
        position: relative;
  }

  #annatto-banner-{{ section.id }} .annatto-banner__content-wrapper {
    max-width: 900px;
    width: 100%;
    margin: 0 auto;
    text-align: center;
    position: relative;
    bottom: -200px;
  }

  #annatto-banner-{{ section.id }} .annatto-banner__heading {
    font-size: 45px;
    font-weight: 700;
    line-height: 1.3;
    margin: 0 auto;
    color: #ffffff;
    letter-spacing: -0.5px;
    max-width: 900px;
    padding-bottom: 40px;
  }

  #annatto-banner-{{ section.id }} .annatto-banner__heading-highlight {
    /* Color set via inline style */
  }

  #annatto-banner-{{ section.id }} .annatto-banner__image {
    width: 100%;
    max-width: 900px;
    height: auto;
    object-fit: contain;
    border-radius: 12px;
    margin: 0 auto;
    display: block;
  }

  #annatto-banner-{{ section.id }} .annatto-banner__mobile-image {
    display: none;
    width: 100%;
    height: auto;
  }

  #annatto-banner-{{ section.id }} .annatto-banner__paragraphs-section {
    max-width: 900px;
    width: 100%;
    margin: 0 auto;
    padding: 80px 20px;
    text-align: center;
    background-color: #ffffff;
  }

  #annatto-banner-{{ section.id }}  p {
    font-size: 22px;
    line-height: 1.6;
    margin: 0;
    font-weight: 600;
    letter-spacing: 1.1px;
  }

  #annatto-banner-{{ section.id }} .annatto-banner__paragraphs-section p.text-line--dark {
    color: #374650;
  }

  #annatto-banner-{{ section.id }} .annatto-banner__paragraphs-section p.text-line--orange {
    color: #ef9111;
  }


  /* Desktop Styles */
  @media (min-width: 769px) {
    #annatto-banner-{{ section.id }} .annatto-banner__background-section {
      padding: 100px 40px;
      padding-top: 0px;
      margin-top: -110px;
    }

    #annatto-banner-{{ section.id }} .annatto-banner__heading {
      font-size: 47px;
      padding-bottom: 50px;
    }

    #annatto-banner-{{ section.id }} .annatto-banner__paragraphs-section {
      padding: 80px 40px;
      padding-top: 40px;
    }

    #annatto-banner-{{ section.id }} .annatto-banner__paragraphs-section p {
      font-size: 24px;
    }
  }

  /* Small Screen Styles (max-width: 768px) - Hide everything, show only mobile image */
  @media (max-width: 768px) {
    #annatto-banner-{{ section.id }} .annatto-banner__background-section {
      display: none;
    }

    #annatto-banner-{{ section.id }} .annatto-banner__content-wrapper {
      display: none;
    }

    #annatto-banner-{{ section.id }} .annatto-banner__paragraphs-section {
      display: none;
    }

    #annatto-banner-{{ section.id }} .annatto-banner__mobile-image {
      display: block;
    }
  }
</style>

<section class="annatto-banner" id="annatto-banner-{{ section.id }}">
  <!-- Desktop/Tablet Content - Hidden on small screens -->
  <div class="annatto-banner__background-section" style="background-color: {{ section.settings.background_color | default: '#0a5d6f' }};">
    <!-- Second Child: Content Wrapper (Title and Image) -->
    <div class="annatto-banner__content-wrapper">
      <!-- Title -->
      <h1 class="annatto-banner__heading">
        {% if section.settings.heading != blank %}
          {% assign highlight_color = section.settings.highlight_color | default: '#ffd700' %}
          {% assign replacement = '<span class="annatto-banner__heading-highlight" style="color: ' | append: highlight_color | append: ';">Purest Tocotrienols</span>' %}
          {{ section.settings.heading | replace: 'Purest Tocotrienols', replacement }}
        {% else %}
          Meet Annatto —<br>
          The World's Only<br>
          Source of <span class="annatto-banner__heading-highlight" style="color: {{ section.settings.highlight_color | default: '#ffd700' }};">Purest Tocotrienols</span>
        {% endif %}
      </h1>

      <!-- Image -->
      {% if section.settings.annatto_image != blank %}
        {% assign alt_text = section.settings.image_alt | default: "Annatto fruits" %}
        {{ section.settings.annatto_image | image_url: width: 1200 | image_tag: alt: alt_text, class: 'annatto-banner__image', loading: 'lazy' }}
      {% else %}
        <div class="annatto-banner__image" style="background: #f5f5f5; min-height: 400px; display: flex; align-items: center; justify-content: center; color: #999;">
          <p>Annatto Image Placeholder</p>
        </div>
      {% endif %}
    </div>
  </div>

  <!-- Mobile Image - Only visible on small screens (max-width: 768px) -->
  {% if section.settings.mobile_image != blank %}
    {% assign mobile_alt = section.settings.mobile_image_alt | default: "Annatto banner" %}
    {{ section.settings.mobile_image | image_url: width: 768 | image_tag: alt: mobile_alt, class: 'annatto-banner__mobile-image', loading: 'lazy' }}
  {% endif %}


  <!-- Paragraphs Section - Desktop Only -->
  <div class="annatto-banner__paragraphs-section">
    <p class="text-line--dark">{{ section.settings.text_line1 | default: "Annatto is the world's only plant source that delivers" }}</p>
    <p class="text-line--orange">{{ section.settings.text_line2 | default: "tocotrienols in their purest, most potent form" }}</p>
    <p class="text-line--dark">{{ section.settings.text_line3 | default: "and it is 100% tocopherol free." }}</p>
  </div>
</section>

{% schema %}
{
  "name": "Best Annatto Page Banner",
  "settings": [
    {
      "type": "header",
      "content": "Title Section"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Meet Annatto — The World's Only Source of Purest Tocotrienols",
      "info": "Use 'Purest Tocotrienols' to automatically highlight in gold"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#0a5d6f"
    },
    {
      "type": "color",
      "id": "highlight_color",
      "label": "Highlight Color",
      "default": "#ffd700"
    },
    {
      "type": "header",
      "content": "Image Section"
    },
    {
      "type": "image_picker",
      "id": "annatto_image",
      "label": "Annatto Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text",
      "default": "Annatto fruits"
    },
    {
      "type": "header",
      "content": "Mobile Image (Small Screens)"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image (max-width: 768px)",
      "info": "This image will be shown only on screens 768px and below. All other content will be hidden."
    },
    {
      "type": "text",
      "id": "mobile_image_alt",
      "label": "Mobile Image Alt Text",
      "default": "Annatto banner"
    },
    {
      "type": "header",
      "content": "Paragraphs Section (Desktop Only)"
    },
    {
      "type": "text",
      "id": "text_line1",
      "label": "Text Line 1",
      "default": "Annatto is the world's only plant source that delivers"
    },
    {
      "type": "text",
      "id": "text_line2",
      "label": "Text Line 2",
      "default": "tocotrienols in their purest, most potent form"
    },
    {
      "type": "text",
      "id": "text_line3",
      "label": "Text Line 3",
      "default": "and it is 100% tocopherol free."
    }
  ],
  "presets": [
    {
      "name": "Best Annatto Page Banner"
    }
  ]
}
{% endschema %}
