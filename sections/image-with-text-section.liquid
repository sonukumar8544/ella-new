{% schema %}
  {
    "name": "image with text",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "What's Inside"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Product Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Product Title1",
        "default": "Annatto-Derived Tocotrienols"
      },
      {
        "type": "text",
        "id": "title2",
        "label": "Product Title2",
        "default": "Annatto-Derived Tocotrienols"
      }, {
        "type": "textarea",
        "id": "description",
        "label": "Product Description1",
        "default": "Annatto seeds (Bixa Orellana) are tiny, vibrant red color seeds. They are a unique natural source of 100% tocotrienols, free from tocopherol interference."
      }, {
        "type": "textarea",
        "id": "description2",
        "label": "Product Description2",
        "default": "Annatto seeds (Bixa Orellana) are tiny, vibrant red color seeds. They are a unique natural source of 100% tocotrienols, free from tocopherol interference."
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "SHOP NOW"
      }
    ],
    "presets": [
      {
        "name": "image with text"
      }
    ]
  }
{% endschema %}

<div class="img-text-section">
  {% if section.settings.heading %}
    <h2 class="img-heading">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="img-two-column-new">
    <div class="img-image">
      {% if section.settings.image %}
        <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.image.alt | escape }}">
      {% else %}
        <img src="https://via.placeholder.com/200" alt="Placeholder Image">
      {% endif %}
    </div>

    <div class="img-text">
      {% if section.settings.title %}
        <h3>{{ section.settings.title }}</h3>
      {% endif %}

      {% if section.settings.description %}
        <p>{{ section.settings.description }}</p>
      {% endif %}

      {% if section.settings.title2 %}
        <h3>{{ section.settings.title2 }}</h3>
      {% endif %}

      {% if section.settings.description2 %}
        <p>{{ section.settings.description2 }}</p>
      {% endif %}

      {% if section.settings.button_link and section.settings.button_text %}
        <a href="{{ section.settings.button_link }}" class="img-shop-button">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .img-text-section {
    max-width: 1300px;
    margin: auto;
    text-align: center;
  }

  .img-heading {
    color: #374650;
    font-size: 35px;
    margin-bottom: 25px;
    line-height: 1.3;
  }

  .img-two-column-new {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 30px;
    margin-top: 40px;
  }

  .img-image,
  .img-text {
    flex: 1 1 45%;
    box-sizing: border-box;
  }

  .img-image {
    background-color: #eaeaea;
    border-radius: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    height: 500px;
  }

  .img-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 20px;
  }

  .img-text {
    max-width: 100%;
    text-align: left;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .img-text h3 {
    font-size: 30px;
    color: #374650;
    margin-bottom: 10px;
    line-height: 1.2;
    padding: 0px;
    margin: 0px;
    font-family: 'Nunito', sans-serif;
  }

  .img-text p {
    color: #36454F;
    font-size: 16px;
    line-height: 1.6;
    margin-bottom: 20px;
    font-family: 'Lato', sans-serif;
    padding-bottom: 0px !important;
    margin-bottom: 6px;
  }

  .img-shop-button {
    display: inline-block;
    padding: 10px 20px;
    border: 1px solid #086b92;
    color: #086b92;
    text-decoration: none;
    font-size: 16px;
    font-weight: 700;
    border-radius: 5px;
    transition: all 0.3s ease-in-out;
    width: 200px;
    text-align: center;
  }

  .img-shop-button:hover {
    background-color: #086b92;
    color: white;
  }

  @media (max-width: 768px) {
    .img-two-column-new {
      flex-direction: column;
      align-items: center;
    }

    .img-image img {
      width: 100vw;
    }

    .img-image,
    .img-text {
      flex: 1 1 100%;
      max-width: 100%;
      text-align: center;
    }

    .img-text h3 {
      font-size: 28px;
    }

    .img-text {
      text-align: center;
    }
  }
</style>