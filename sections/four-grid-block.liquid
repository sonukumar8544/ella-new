<script>
  (function() {
    function initAmazonPopups() {
      var section = document.getElementById('amazon-four-grid-{{ section.id }}');
      if (!section || section.dataset.modalInitialized === 'true') {
        return;
      }

      var triggers = section.querySelectorAll('[data-modal-target]');
      var modals = section.querySelectorAll('.amazon-modal');
      if (!triggers.length || !modals.length) {
        section.dataset.modalInitialized = 'true';
        return;
      }

      var lastFocusedElement = null;

      function lockScroll(lock) {
        if (lock) {
          document.documentElement.style.overflow = 'hidden';
          document.body.style.overflow = 'hidden';
        } else {
          document.documentElement.style.overflow = '';
          document.body.style.overflow = '';
        }
      }

      function openModal(modal) {
        if (!modal) return;

        modal.hidden = false;
        modal.classList.add('is-active');
        lockScroll(true);

        var focusable = modal.querySelector('.amazon-modal-close');
        if (focusable) {
          focusable.focus();
        }

        modal.dataset.active = 'true';
      }

      function closeModal(modal) {
        if (!modal) return;

        modal.classList.remove('is-active');
        modal.hidden = true;
        modal.dataset.active = 'false';

        lockScroll(false);

        if (lastFocusedElement && typeof lastFocusedElement.focus === 'function') {
          lastFocusedElement.focus();
          lastFocusedElement = null;
        }
      }

      triggers.forEach(function(trigger) {
        trigger.addEventListener('click', function() {
          var targetId = trigger.getAttribute('data-modal-target');
          if (!targetId) return;
          var modal = section.querySelector('#' + targetId);
          lastFocusedElement = trigger;
          openModal(modal);
        });
      });

      modals.forEach(function(modal) {
        modal.addEventListener('click', function(event) {
          var closeTrigger = event.target.closest('[data-modal-close]');
          if (closeTrigger || event.target === modal) {
            closeModal(modal);
          }
        });
      });

      document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape') {
          modals.forEach(function(modal) {
            if (modal.dataset.active === 'true') {
              closeModal(modal);
            }
          });
        }
      });

      section.dataset.modalInitialized = 'true';
    }

    document.addEventListener('DOMContentLoaded', initAmazonPopups);
    document.addEventListener('shopify:section:load', function(event) {
      if (event.detail && event.detail.sectionId === '{{ section.id }}') {
        initAmazonPopups();
      }
    });
  })();
</script>