<style>
  .amazon-four-grid {
    padding: 80px 20px;
    max-width: 1200px;
    margin: 0 auto;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background: white;
  }

  .amazon-grid-header {
    text-align: center;
    margin-bottom: 60px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .amazon-grid-title {
    font-size: 42px;
    font-weight: 700;
    color: #374650;
    margin: 0 0 20px;
    line-height: 1.2;
    letter-spacing: -0.5px;
  }

  .amazon-grid-subtitle {
    font-size: 18px;
    font-style: italic;
    color: #374650;
    margin: 0;
    line-height: 1.6;
  }

  .amazon-grid-container {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    overflow: hidden;
  }

  .amazon-grid-item {
    background: white;
    padding: 40px 20px;
    text-align: center;
    border-right: 1px solid #e0e0e0;
    position: relative;
    transition: background-color 0.3s ease;
  }

  .amazon-grid-item:last-child {
    border-right: none;
  }

  .amazon-grid-item:hover {
    background-color: #f8f9fa;
  }

  .amazon-grid-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #e3f2fd;
    border-radius: 50%;
    position: relative;
  }

  .amazon-grid-icon svg {
    width: 50px;
    height: 50px;
    color: #1976d2;
  }

  .amazon-grid-item-title {
    font-size: 24px;
    font-weight: 700;
    color: #374650;
    margin: 0 0 12px;
    line-height: 1.2;
  }

  .amazon-grid-item-description {
    font-size: 16px;
    color: #6c757d;
    margin: 0;
    line-height: 1.5;
    max-width: 200px;
    margin: 0 auto;
  }

  /* Tablet Styles */
  @media (max-width: 1024px) {
    .amazon-four-grid {
      padding: 60px 20px;
    }

    .amazon-grid-title {
      font-size: 28px !important;
    }

    .amazon-grid-subtitle {
      font-size: 16px !important;
    }

    .amazon-grid-item {
      padding: 35px 15px;
    }

    .amazon-grid-icon {
      width: 70px;
      height: 70px;
      margin-bottom: 18px;
    }

    .amazon-grid-icon svg {
      width: 45px;
      height: 45px;
    }

    .amazon-grid-item-title {
      font-size: 22px;
    }

    .amazon-grid-item-description {
      font-size: 15px;
      max-width: 180px;
    }
  }

  /* Mobile Styles - 2x2 Grid */
  @media (max-width: 768px) {
    .amazon-four-grid {
      padding: 40px 15px;
    }

    .amazon-grid-header {
      margin-bottom: 40px;
    }

    .amazon-grid-title {
      font-size: 28px;
    }

    .amazon-grid-subtitle {
      font-size: 16px;
    }

    .amazon-grid-container {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(2, 1fr);
    }

    .amazon-grid-item {
      padding: 30px 15px;
      border-right: none;
      border-bottom: 1px solid #e0e0e0;
    }

    .amazon-grid-item:nth-child(2),
    .amazon-grid-item:nth-child(4) {
      border-left: 1px solid #e0e0e0;
    }

    .amazon-grid-item:nth-child(3),
    .amazon-grid-item:nth-child(4) {
      border-bottom: none;
    }

    .amazon-grid-icon {
      width: 60px;
      height: 60px;
      margin-bottom: 15px;
    }

    .amazon-grid-icon svg {
      width: 40px;
      height: 40px;
    }

    .amazon-grid-item-title {
      font-size: 20px;
      margin-bottom: 10px;
    }

    .amazon-grid-item-description {
      font-size: 14px;
      max-width: 160px;
    }
  }

  @media (max-width: 480px) {
    .amazon-four-grid {
      padding: 30px 10px;
    }

    .amazon-grid-title {
      font-size: 24px;
    }

    .amazon-grid-subtitle {
      font-size: 14px;
    }

    .amazon-grid-item {
      padding: 25px 10px;
    }

    .amazon-grid-icon {
      width: 50px;
      height: 50px;
      margin-bottom: 12px;
    }

    .amazon-grid-icon svg {
      width: 35px;
      height: 35px;
    }

    .amazon-grid-item-title {
      font-size: 18px;
    }

    .amazon-grid-item-description {
      font-size: 13px;
      max-width: 140px;
    }
  }
</style>

