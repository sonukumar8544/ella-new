{% schema %}
  {
    "name": "product ingredients",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "What's Inside"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Product Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Product Title1",
        "default": "Annatto-Derived Tocotrienols"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Product Description1",
        "default": "Annatto seeds (Bixa Orellana) are tiny, vibrant red color seeds. They are a unique natural source of 100% tocotrienols, free from tocopherol interference."
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Read More"
      }
    ],
    "presets": [
      {
        "name": "product ingrediant section"
      }
    ]
  }
{% endschema %}

<div class="product-ing-product-ing-iimg-text-section">
  {% if section.settings.heading %}
    <h2 class="product-ing-img-heading">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="product-ing-img-two-column-new">
    <div class="product-ing-img-image">
      {% if product.metafields.Custom.we_product_ingrediant_image_one %}
        <img src="{{ product.metafields.Custom.we_product_ingrediant_image_one | img_url: 'master' }}" alt="Annatto Seeds">
      {% else %}
        <img src="https://via.placeholder.com/200" alt="Placeholder Image">
      {% endif %}
    </div>

    <div class="product-ing-iimg-text">
      {% if product.metafields.Custom.we_product_ingrediat_title_one %}
        <h3>{{ product.metafields.Custom.we_product_ingrediat_title_one }}</h3>
      {% endif %}

      {% if product.metafields.Custom.we_product_ingrediant_subtitle_one %}
        <p>{{ product.metafields.Custom.we_product_ingrediant_subtitle_one }}</p>
      {% endif %}

      {% if product.metafields.Custom.we_product_ingrediant_link_one %}
        <a href="{{ product.metafields.Custom.we_product_ingrediant_link_one }}" class="product-ing-img-shop-button">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>

  {% comment %} Ingrediant block 2 {% endcomment %}
  {% if product.metafields.Custom.we_product_ingrediant_image_two %}
    <div class="product-ing-img-two-column-new second-ingrediant-block">
      <div class="product-ing-img-image">
        {% if product.metafields.Custom.we_product_ingrediant_image_two %}
          <img src="{{ product.metafields.Custom.we_product_ingrediant_image_two | img_url: 'master' }}" alt="Annatto Seeds">
        {% else %}
          <img src="https://via.placeholder.com/200" alt="Placeholder Image">
        {% endif %}
      </div>
      <div class="product-ing-iimg-text">
        {% if product.metafields.Custom.we_product_ingrediant_title_two %}
          <h3>{{ product.metafields.Custom.we_product_ingrediant_title_two }}</h3>
        {% endif %}

        {% if product.metafields.Custom.we_product_ingrediant_subtitle_two %}
          <p>{{ product.metafields.Custom.we_product_ingrediant_subtitle_two }}</p>
        {% endif %}

        {% if product.metafields.Custom.we_product_ingrediant_link_two %}
          <a href="{{ product.metafields.Custom.we_product_ingrediant_link_two }}" class="product-ing-img-shop-button">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  {% endif %}
</div>

<style>
  .product-ing-product-ing-iimg-text-section {
    max-width: 1300px;
    margin: 50px auto;
    text-align: center;
    padding: 0px 13px;
  }

  .second-ingrediant-block {
    display: flex;
    flex-direction: row-reverse;
  }

  .product-ing-img-heading {
    color: #374650;
    font-size: 35px;
    margin-bottom: 25px;
    line-height: 1.3;
  }

  .product-ing-img-two-column-new {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 30px;
    margin-top: 40px;
  }

  .product-ing-img-image,
  .product-ing-iimg-text {
    flex: 1 1 45%;
    box-sizing: border-box;
  }

  .product-ing-img-image {
    background-color: #eaeaea;
    border-radius: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    height: 500px;
  }

  .product-ing-img-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 20px;
  }

  .product-ing-iimg-text {
    max-width: 100%;
    text-align: left;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .product-ing-iimg-text h3 {
    font-size: 30px;
    color: #374650;
    margin: 0;
    line-height: 1.2;
    padding: 0;
    font-family: 'Nunito'
    , sans-serif;
  }

  .product-ing-iimg-text p {
    color: #36454F;
    font-size: 16px;
    line-height: 1.6;
    margin-bottom: 20px;
    font-family: 'Lato', sans-serif;
    padding-bottom: 0 !important;
    margin-bottom: 6px;
    font-weight: 500;
  }

  .product-ing-img-shop-button {
    display: inline-block;
    padding: 10px 20px;
    border: 1px solid #086b92;
    background-color: #086b92;
    color: white;
    text-decoration: none;
    font-size: 16px;
    font-weight: 700;
    border-radius: 5px;
    transition: all 0.3s ease-in-out;
    width: 200px;
    text-align: center;
    margin-top: 20px;
  }

  .product-ing-img-shop-button:hover {
    background-color: #fff;
    color:#086b92;
  }

  @media (max-width: 768px) {
    .product-ing-img-two-column-new {
      flex-direction: column;
      align-items: center;
    }

    .product-ing-img-shop-button {
      margin: auto;
    }

    .product-ing-img-image img {
      width: 100vw;
    }

    .product-ing-img-image,
    .product-ing-iimg-text {
      flex: 1 1 100%;
      max-width: 100%;
      text-align: center;
    }

    .product-ing-iimg-text h3 {
      font-size: 28px;
    }

    .product-ing-iimg-text {
      text-align: center;
    }
  }
</style>