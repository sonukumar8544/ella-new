<div class="purity-dosage-hero-section purity-dosage-hero-section--{{ section.settings.card_position }}" style="
  --bg-image: url('{{ section.settings.background_image | image_url: width: 2000 }}');
  --heading-color: {{ section.settings.heading_color }};
  --sub-heading-color: {{ section.settings.sub_heading_color }};
  --button-bg-color: {{ section.settings.button_bg_color }};
  --button-text-color: {{ section.settings.button_text_color }};
">
  <div class="container">
    <div class="purity-dosage-hero-card">
      {% if section.settings.heading != blank %}
        <h1>{{ section.settings.heading }}</h1>
      {% endif %}
      
      {% if section.settings.sub_heading != blank %}
        <p>{{ section.settings.sub_heading }}</p>
      {% endif %}
      
      {% if section.settings.cta_text != blank and section.settings.cta_link != blank %}
        <a href="{{ section.settings.cta_link }}" class="purity-dosage-btn-hero">{{ section.settings.cta_text }}</a>
      {% endif %}
    </div>
  </div>
</div>

<style>
.purity-dosage-hero-section {
  position: relative;
  overflow: hidden;
  height: auto;
  display: flex;
  align-items: center;
}

.purity-dosage-hero-section--left {
  justify-content: flex-start;
  padding-left: 40px;
  padding-right: 0;
}

.purity-dosage-hero-section--center {
  justify-content: center;
  padding-left: 40px;
  padding-right: 40px;
}

.purity-dosage-hero-section--right {
  justify-content: flex-end;
  padding-left: 0;
  padding-right: 40px;
}

.purity-dosage-hero-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: var(--bg-image);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  transform: scaleX(-1);
  z-index: 1;
}

.purity-dosage-hero-card {
  width: fit-content;
  max-width: 1300px;
  height: auto;
  padding: 40px;
  gap: 20px;
  opacity: 1;
  background: linear-gradient(90deg, #FFFFFF 40.88%, rgba(255, 255, 255, 0) 100%);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  position: relative;
  z-index: 3;
  margin: 200px 0;
  overflow-y: auto;
  overflow-x: hidden;
  line-height: 1.5;
}

.purity-dosage-hero-card h1 {
  width: 470px;
  height: auto;
  opacity: 1;
  font-weight: 700;
  font-style: normal;
  font-size: 48px;
  line-height: 1.2;
  letter-spacing: -0.5px;
  vertical-align: middle;
  color: var(--heading-color);
  margin: 0;
}

.purity-dosage-hero-card p {
  width: 630px;
  height: auto;
  opacity: 1;
  font-weight: 400;
  font-style: regular;
  font-size: 20px;
  letter-spacing: 0px;
  vertical-align: middle;
  color: var(--sub-heading-color);
  margin: 0;
}

.purity-dosage-btn-hero {
  width: 240px;
  height: 60px;
  padding: 18px 30px;
  gap: 8px;
  opacity: 1;
  border-radius: 100px;
  background: var(--button-bg-color);
  color: var(--button-text-color);
  border: none;
  font-size: 18px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  text-decoration: none;
  display: inline-block;
  text-align: center;
  box-sizing: border-box;
}

.purity-dosage-btn-hero:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 15px rgba(248, 206, 99, 0.4);
}

@media (max-width: 1200px) {
  .purity-dosage-hero-card {
    width: fit-content;
    max-width: 1300px;
    height: auto;
    margin: 120px 0;
  }
  
  .purity-dosage-hero-card h1 {
    width: 100%;
    height: auto;
    font-size: 40px;
  }
  
  .purity-dosage-hero-card p {
    width: 100%;
    height: auto;
    font-size: 18px;
  }
}

@media (max-width: 768px) {
  .purity-dosage-hero-section {
    padding: 20px !important;
  }
  
  .purity-dosage-hero-section--left,
  .purity-dosage-hero-section--center,
  .purity-dosage-hero-section--right {
    padding-left: 20px !important;
    padding-right: 20px !important;
  }
  
  .purity-dosage-hero-card {
    width: 100%;
    padding: 40px 30px;
    gap: 20px;
    margin: 60px 0 !important;
  }
  
  .purity-dosage-hero-card h1 {
    font-size: 28px;
  }
  
  .purity-dosage-hero-card p {
    font-size: 16px;
  }
  
  .purity-dosage-btn-hero {
    width: 100%;
    max-width: 240px;
  }
}

@media (max-width: 360px) {
  .purity-dosage-hero-card {
    padding: 30px 20px;
  }
  
  .purity-dosage-btn-hero {
    width: 100% !important;
    max-width: 100% !important;
    padding: 14px 20px;
    font-size: 15px !important;
    height: auto;
    min-height: 44px;
  }
}
</style>

{% schema %}
{
  "name": "Purity Dosage Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Heading Here"
    },
    {
      "type": "text",
      "id": "sub_heading",
      "label": "Sub Heading",
      "default": "Your Sub Heading Here"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link"
    },
    {
      "type": "select",
      "id": "card_position",
      "label": "Card Position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Color Settings"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#2C3E50"
    },
    {
      "type": "color",
      "id": "sub_heading_color",
      "label": "Sub-heading Color",
      "default": "#374650"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#F8CE63"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#333333"
    }
  ],
  "presets": [
    {
      "name": "Purity Dosage Hero Banner"
    }
  ]
}
{% endschema %}

