<div class="hero-section hero-section--{{ section.settings.card_position }}" style="
  min-height: {{ section.settings.section_height }}px;
  --bg-image: url('{{ section.settings.background_image | image_url: width: 2000 }}');
  --card-width: {{ section.settings.card_width }}px;
  --card-min-width: {{ section.settings.card_min_width }}px;
  --card-max-width: {{ section.settings.card_max_width }}px;
  --card-padding: {{ section.settings.card_padding }}px;
  --card-gap: {{ section.settings.card_gap }}px;
  --card-min-height: {{ section.settings.card_min_height }}px;
  --card-max-height: {{ section.settings.card_max_height }}px;
  --heading-font-size: {{ section.settings.heading_font_size }}px;
  --heading-color: {{ section.settings.heading_color }};
  --heading-width: {{ section.settings.heading_width }}px;
  --sub-heading-font-size: {{ section.settings.sub_heading_font_size }}px;
  --sub-heading-color: {{ section.settings.sub_heading_color }};
  --sub-heading-width: {{ section.settings.sub_heading_width }}px;
  --button-bg-color: {{ section.settings.button_bg_color }};
  --button-text-color: {{ section.settings.button_text_color }};
  --button-font-size: {{ section.settings.button_font_size }}px;
  --button-width: {{ section.settings.button_width }}px;
  --button-height: {{ section.settings.button_height }}px;
  --button-border-radius: {{ section.settings.button_border_radius }}px;
">
  <div class="hero-card">
    {% if section.settings.heading != blank %}
      <h1>{{ section.settings.heading }}</h1>
    {% endif %}
    
    {% if section.settings.sub_heading != blank %}
      <p>{{ section.settings.sub_heading }}</p>
    {% endif %}
    
    {% if section.settings.cta_text != blank and section.settings.cta_link != blank %}
      <a href="{{ section.settings.cta_link }}" class="btn-hero">{{ section.settings.cta_text }}</a>
    {% endif %}
  </div>
</div>

<style>
.hero-section {
  position: relative;
  overflow: hidden;
  min-height: 900px;
  display: flex;
  align-items: center;
}

.hero-section--left {
  justify-content: flex-start;
  padding-left: 40px;
  padding-right: 0;
}

.hero-section--center {
  justify-content: center;
  padding-left: 40px;
  padding-right: 40px;
}

.hero-section--right {
  justify-content: flex-end;
  padding-left: 0;
  padding-right: 40px;
}

.hero-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: var(--bg-image);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  transform: scaleX(-1);
  z-index: 1;
}

.hero-card {
  width: var(--card-width);
  min-width: var(--card-min-width);
  max-width: var(--card-max-width);
  height: auto;
  min-height: var(--card-min-height);
  max-height: var(--card-max-height);
  padding: var(--card-padding);
  gap: var(--card-gap);
  opacity: 1;
  background: linear-gradient(90deg, #FFFFFF 40.88%, rgba(255, 255, 255, 0) 100%);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  position: relative;
  z-index: 3;
  margin: 0;
  overflow-y: auto;
  overflow-x: hidden;
}

.hero-card h1 {
  width: var(--heading-width);
  height: auto;
  opacity: 1;
  font-family: 'Nunito', sans-serif;
  font-weight: 700;
  font-style: normal;
  font-size: var(--heading-font-size);
  line-height: 120%;
  letter-spacing: -0.5px;
  vertical-align: middle;
  color: var(--heading-color);
  margin: 0;
}

.hero-card p {
  width: var(--sub-heading-width);
  height: auto;
  opacity: 1;
  font-family: 'Lato', sans-serif;
  font-weight: 400;
  font-style: regular;
  font-size: var(--sub-heading-font-size);
  line-height: 140%;
  letter-spacing: 0px;
  vertical-align: middle;
  color: var(--sub-heading-color);
  margin: 0;
}

.btn-hero {
  width: var(--button-width);
  height: var(--button-height);
  padding: 18px 30px;
  gap: 8px;
  opacity: 1;
  border-radius: var(--button-border-radius);
  background: var(--button-bg-color);
  color: var(--button-text-color);
  border: none;
  font-size: var(--button-font-size);
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  text-decoration: none;
  display: inline-block;
  text-align: center;
  box-sizing: border-box;
}

.btn-hero:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 15px rgba(248, 206, 99, 0.4);
}

@media (max-width: 1200px) {
  .hero-card {
    width: 90%;
    max-width: var(--card-width);
    height: auto;
    min-height: var(--card-min-height);
  }
  
  .hero-card h1 {
    width: 100%;
    height: auto;
    font-size: calc(var(--heading-font-size) * 0.83);
  }
  
  .hero-card p {
    width: 100%;
    height: auto;
    font-size: calc(var(--sub-heading-font-size) * 0.9);
  }
}

@media (max-width: 768px) {
  .hero-section {
    min-height: 600px;
    padding: 20px !important;
  }
  
  .hero-section--left,
  .hero-section--center,
  .hero-section--right {
    padding-left: 20px !important;
    padding-right: 20px !important;
  }
  
  .hero-card {
    width: 100%;
    padding: 40px 30px;
    gap: 20px;
  }
  
  .hero-card h1 {
    font-size: calc(var(--heading-font-size) * 0.58);
  }
  
  .hero-card p {
    font-size: calc(var(--sub-heading-font-size) * 0.8);
  }
  
  .btn-hero {
    width: 100%;
    max-width: var(--button-width);
  }
}
</style>

