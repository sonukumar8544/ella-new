<script>
    document.addEventListener('DOMContentLoaded', function () {
        const genderSelect = document.getElementById('body-fat-calc-gender');
        const hipGroup = document.getElementById('body-fat-calc-hip-group');
        const calculateBtn = document.getElementById('body-fat-calc-calculate-btn');
        const resultElement = document.getElementById('body-fat-calc-result');
        const resultValue = document.getElementById('body-fat-calc-result-value');
        const resultCategory = document.getElementById('body-fat-calc-result-category');
        const suggestionText = document.getElementById('body-fat-calc-suggestion-text');
        
        // Popup elements
        const popup = document.getElementById('body-fat-calc-popup');
        const popupClose = document.getElementById('body-fat-calc-popup-close');
        
        // Store the calculated body fat percentage
        let calculatedBodyFat = 0;
        let calculatedGender = '';
        let calculatedAge = 0;
        
        // Toggle hip measurement based on gender selection
        function toggleHipGroup() {
            hipGroup.style.display = genderSelect.value === 'female' ? 'block' : 'none';
        }
        
        // Initial toggle
        toggleHipGroup();
        
        // Add event listener for gender change
        genderSelect.addEventListener('change', toggleHipGroup);
        
        // Calculate button event listener
        calculateBtn.addEventListener('click', calculateBodyFat);
        
        // Close popup when clicking the close button
        popupClose.addEventListener('click', function() {
            popup.classList.remove('active');
            // Show the regular result container after closing popup
            displayResult(calculatedBodyFat, calculatedGender, calculatedAge);
        });
        
        // Close popup when clicking outside of it
        popup.addEventListener('click', function(e) {
            if (e.target === popup) {
                popup.classList.remove('active');
                // Show the regular result container after closing popup
                displayResult(calculatedBodyFat, calculatedGender, calculatedAge);
            }
        });
        
        // Function to handle Klaviyo button clicks
        function handleKlaviyoButtonClick(e) {
            // Check if the clicked element is the Klaviyo submit button
            const klaviyoButton = e.target.closest('.go3265039304');
            if (klaviyoButton && popup.classList.contains('active')) {
                // Close the popup
                popup.classList.remove('active');
                // Show the regular result container
                displayResult(calculatedBodyFat, calculatedGender, calculatedAge);
            }
        }
        
        // Set up event listener for Klaviyo button
        document.addEventListener('click', handleKlaviyoButtonClick);
        
        // Function to show results after Klaviyo form submission
        function showResultsAfterFormSubmission() {
            popup.classList.remove('active');
            displayResult(calculatedBodyFat, calculatedGender, calculatedAge);
        }
        
        // Listen for Klaviyo form submission as a fallback
        document.addEventListener('klaviyoForms', function(e) {
            if (e.detail.type === 'submit' && e.detail.formId === 'T6BNnH') {
                showResultsAfterFormSubmission();
            }
        });
        
        function calculateBodyFat() {
            // Get selected gender
            const gender = genderSelect.value;
            
            // Get input values
            const age = parseInt(document.getElementById('body-fat-calc-age').value) || 30;
            const height = parseFloat(document.getElementById('body-fat-calc-height').value) || 175;
            const heightUnit = document.getElementById('body-fat-calc-height-unit').value;
            const neck = parseFloat(document.getElementById('body-fat-calc-neck').value) || 38;
            const neckUnit = document.getElementById('body-fat-calc-neck-unit').value;
            const waist = parseFloat(document.getElementById('body-fat-calc-waist').value) || 85;
            const waistUnit = document.getElementById('body-fat-calc-waist-unit').value;
            let hip = 0;
            let hipUnit = 'cm'; // Default value
            
            if (gender === 'female') {
                hip = parseFloat(document.getElementById('body-fat-calc-hip').value) || 95;
                hipUnit = document.getElementById('body-fat-calc-hip-unit').value;
            }
            
            // Convert all measurements to cm
            const heightCm = heightUnit === 'in' ? height * 2.54 : height;
            const neckCm = neckUnit === 'in' ? neck * 2.54 : neck;
            const waistCm = waistUnit === 'in' ? waist * 2.54 : waist;
            const hipCm = gender === 'female' ? (hipUnit === 'in' ? hip * 2.54 : hip) : 0;
            
            // Calculate body fat using U.S. Navy method
            let bodyFatPercentage;
            
            if (gender === 'male') {
                // Male formula: 86.010 * log10(waist - neck) - 70.041 * log10(height) + 36.76
                bodyFatPercentage = 86.010 * Math.log10(waistCm - neckCm) -
                    70.041 * Math.log10(heightCm) + 36.76;
            } else {
                // Female formula: 163.205 * log10(waist + hip - neck) - 97.684 * log10(height) - 78.387
                bodyFatPercentage = 163.205 * Math.log10(waistCm + hipCm - neckCm) -
                    97.684 * Math.log10(heightCm) - 78.387;
            }
            
            // Ensure body fat is not negative or too high
            bodyFatPercentage = Math.max(2, Math.min(50, bodyFatPercentage));
            
            // Store the calculated values
            calculatedBodyFat = bodyFatPercentage.toFixed(1);
            calculatedGender = gender;
            calculatedAge = age;
            
            // Show the popup with Klaviyo form
            popup.classList.add('active');
            
            // Hide the regular result container initially
            resultElement.style.display = 'none';
        }
        
        function displayResult(percentage, gender, age) {
            // Update the result display
            resultValue.textContent = `${percentage}%`;
            
            // Determine category based on gender and percentage
            let category, description;
            const percentageNum = parseFloat(percentage);
            
            if (gender === 'male') {
                if (percentageNum < 6) {
                    category = "Essential Fat";
                    description = "Very low body fat. Essential for physiological functions. Athletes may reach this level temporarily but maintaining it long-term may not be healthy.";
                } else if (percentageNum < 14) {
                    category = "Athletic";
                    description = "Excellent condition. Typical for athletes and highly fit individuals. Shows good muscle definition and fitness level.";
                } else if (percentageNum < 18) {
                    category = "Fitness";
                    description = "Good condition. Better than average, showing some muscle definition. This is a healthy range for most men.";
                } else if (percentageNum < 25) {
                    category = "Average";
                    description = "Within normal range. May show slight abdominal definition. Could improve with better nutrition and exercise.";
                } else {
                    category = "Above Average";
                    description = "Higher than recommended. Consider dietary improvements and regular exercise to reduce health risks associated with excess body fat.";
                }
            } else {
                if (percentageNum < 14) {
                    category = "Essential Fat";
                    description = "Very low body fat. Essential for physiological functions. Athletes may reach this level temporarily but maintaining it long-term may not be healthy.";
                } else if (percentageNum < 21) {
                    category = "Athletic";
                    description = "Excellent condition. Typical for female athletes. Shows good muscle tone and fitness level.";
                } else if (percentageNum < 25) {
                    category = "Fitness";
                    description = "Good condition. Better than average, showing some muscle definition. This is a healthy range for most women.";
                } else if (percentageNum < 32) {
                    category = "Average";
                    description = "Within normal range. Common for women. Could improve with better nutrition and exercise.";
                } else {
                    category = "Above Average";
                    description = "Higher than recommended. Consider dietary improvements and regular exercise to reduce health risks associated with excess body fat.";
                }
            }
            
            // Update the display
            resultCategory.textContent = category;
            suggestionText.textContent = description;
            
            // Show the result container
            resultElement.style.display = 'block';
            resultElement.scrollIntoView({ behavior: 'smooth' });
        }
    });
</script>