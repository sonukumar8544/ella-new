    line-height: 1.1;
    font-size: 24px;
  }

  .body-fat-calc-input-group {
    margin-bottom: 20px;
  }

  .body-fat-calc-input-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: bold;
  }

  .body-fat-calc-input-group select,
