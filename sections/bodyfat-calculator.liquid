    color: #086b92;
    margin: 15px 0;
    text-align: center;
  }

  .body-fat-calc-suggestion {
    background-color: #e8f4fc;
    padding: 15px;
    border-radius: 5px;
    margin-top: 20px;
    border-left: 4px solid #086b92;
    max-width: 1000px;
    margin-left: auto;
    margin-right: auto;
  }

  .body-fat-calc-suggestion h3 {
    margin-top: 0;
    color: #2c3e50;
  }

  .body-fat-calc-comparison {
    display: flex;
    justify-content: space-around;
    margin-top: 15px;
    text-align: center;
  }

  .body-fat-calc-comparison-item {
    flex: 1;
    padding: 10px;
  }

  .body-fat-calc-comparison-value {
    font-weight: bold;
    color: #2c3e50;
