<section id="section-{{ section.id }}" class="vitamin-highlight">
  <div class="vitamin-highlight__wrapper">
    {% if section.settings.heading != blank %}
      <h2 class="vitamin-highlight__heading">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <p class="vitamin-highlight__subheading">
        {{ section.settings.subheading }}
      </p>
    {% endif %}

    {% if section.settings.description != blank %}
      <p class="vitamin-highlight__description">
        {{ section.settings.description }}
      </p>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="vitamin-highlight__list" role="list">
        {% for block in section.blocks %}
          {% assign is_even = forloop.index0 | modulo: 2 %}
          <div
            class="vitamin-highlight__item vitamin-highlight__item--{% if is_even == 0 %}left{% else %}right{% endif %}{% if block.type == 'rating' %} vitamin-highlight__item--rating{% endif %}"
            role="listitem"
            {{ block.shopify_attributes }}
          >
            {% if block.type == 'feature' %}
              {% if block.settings.icon_image != blank or block.settings.icon_text != blank %}
                <div class="vitamin-highlight__media">
                  {% if block.settings.icon_image != blank %}
                    {{ block.settings.icon_image | image_url: width: 160 | image_tag:
                      widths: '80,120,160',
                      class: 'vitamin-highlight__image',
                      loading: 'lazy',
                      alt: block.settings.icon_alt | default: block.settings.title }}
                  {% else %}
                    <div class="vitamin-highlight__badge">
                      {{ block.settings.icon_text }}
                    </div>
                  {% endif %}
                </div>
              {% endif %}
            {% endif %}

            <div class="vitamin-highlight__content">
              {% if block.settings.title != blank or block.settings.description != blank %}
                <p class="vitamin-highlight__text">
                  {% if block.settings.title != blank %}
                    <span class="vitamin-highlight__item-title">
                      {{ block.settings.title }}
                    </span>
                  {% endif %}
                  {% if block.settings.description != blank %}
                    <span class="vitamin-highlight__item-description">
                      {{ block.settings.description }}
                    </span>
                  {% endif %}
                </p>
              {% endif %}

              {% if block.type == 'rating' and block.settings.show_stars %}
                <div class="vitamin-highlight__rating">
                  {% if block.settings.star_image != blank %}
                    {{ block.settings.star_image | image_url: width: 220 | image_tag:
                      widths: '140,180,220',
                      loading: 'lazy',
                      alt: block.settings.star_alt | default: block.settings.title }}
                  {% else %}
                    <span>★ ★ ★ ★ ★</span>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}

    {% if section.settings.cta_link != blank and section.settings.cta_text != blank %}
      <div class="vitamin-highlight__cta">
        <a class="vitamin-highlight__cta-link" href="{{ section.settings.cta_link }}">
          {{ section.settings.cta_text }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

<style>
  #section-{{ section.id }}.vitamin-highlight {
    padding: clamp(58px, 10vw, 110px) 20px;
    background: #dceffd;
  }

  #section-{{ section.id }} .vitamin-highlight__wrapper {
    max-width: 760px;
    margin: 0 auto;
    text-align: center;
    font-family: "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    color: #1a3244;
  }

  #section-{{ section.id }} .vitamin-highlight__heading {
    font-size: clamp(32px, 5.8vw, 40px);
    font-weight: 400;
    line-height: 1.35;
    margin: 0;
    color: #173042;
  }

  #section-{{ section.id }} .vitamin-highlight__heading em {
    font-style: italic;
    font-weight: 600;
    color: #315a70;
  }

  #section-{{ section.id }} .vitamin-highlight__subheading {
    margin: 18px 0 6px;
    font-size: 24px;
    font-style: italic;
    font-weight: 700;
    color: #173042;
  }

  #section-{{ section.id }} .vitamin-highlight__description {
    margin: 0 auto clamp(42px, 6vw, 62px);
    max-width: 540px;
    font-size: 16px;
    line-height: 1.75;
    color: #365263;
  }

  #section-{{ section.id }} .vitamin-highlight__list {
    display: flex;
    flex-direction: column;
    gap: clamp(18px, 3.5vw, 26px);
  }

  #section-{{ section.id }} .vitamin-highlight__item {
    display: flex;
    align-items: center;
    gap: clamp(16px, 3.2vw, 28px);
    padding: clamp(18px, 3.5vw, 26px) clamp(22px, 4.4vw, 44px);
    text-align: left;
    position: relative;
  }

  #section-{{ section.id }} .vitamin-highlight__item::after {
    content: "";
    position: absolute;
    left: clamp(22px, 4.4vw, 44px);
    right: clamp(22px, 4.4vw, 44px);
    bottom: 0;
    height: 1px;
    background: rgba(255, 255, 255, 0.8);
  }

  #section-{{ section.id }} .vitamin-highlight__item:last-child::after {
    display: none;
  }

  #section-{{ section.id }} .vitamin-highlight__item--right {
    flex-direction: row-reverse;
  }

  #section-{{ section.id }} .vitamin-highlight__media {
    flex: 0 0 auto;
    display: flex;
    justify-content: center;
  }

  #section-{{ section.id }} .vitamin-highlight__image {
    width: clamp(60px, 8vw, 82px);
    height: clamp(60px, 8vw, 82px);
    border-radius: 50%;
    object-fit: cover;
    box-shadow: 0 10px 24px rgba(40, 104, 134, 0.25);
    border: 5px solid rgba(40, 104, 134, 0.12);
  }

  #section-{{ section.id }} .vitamin-highlight__badge {
    width: clamp(60px, 8vw, 82px);
    height: clamp(60px, 8vw, 82px);
    border-radius: 50%;
    display: grid;
    place-items: center;
    background: #ffffff;
    border: 2px solid #b3cedc;
    font-weight: 700;
    font-size: 16px;
    color: #26272c;
    box-shadow: 0 8px 22px rgba(46, 106, 133, 0.25);
    text-transform: uppercase;
  }

  #section-{{ section.id }} .vitamin-highlight__content {
    flex: 1 1 auto;
    text-align: left;
  }

  #section-{{ section.id }} .vitamin-highlight__item--right .vitamin-highlight__content {
    text-align: right;
  }

  #section-{{ section.id }} .vitamin-highlight__text {
    display: inline-flex;
    align-items: baseline;
    gap: 10px;
    margin: 0;
  }

  #section-{{ section.id }} .vitamin-highlight__item-title {
    font-size: 19px;
    font-style: italic;
    color: #163549;
    display: inline-flex;
  }

  #section-{{ section.id }} .vitamin-highlight__item-description {
    font-size: 16px;
    line-height: 1.65;
    color: #315363;
    display: inline-flex;
  }

  #section-{{ section.id }} .vitamin-highlight__item--rating {
    flex-direction: column;
    gap: 16px;
    text-align: center;
  }

  #section-{{ section.id }} .vitamin-highlight__item--rating .vitamin-highlight__content {
    text-align: center;
    max-width: 380px;
  }

  #section-{{ section.id }} .vitamin-highlight__rating {
    margin-top: 10px;
    font-size: 24px;
    color: #fbbb31;
    letter-spacing: 6px;
  }

  #section-{{ section.id }} .vitamin-highlight__rating img {
    max-width: 170px;
    width: 100%;
    height: auto;
  }

  #section-{{ section.id }} .vitamin-highlight__cta {
    margin-top: clamp(38px, 6vw, 58px);
  }

  #section-{{ section.id }} .vitamin-highlight__cta-link {
    font-size: 15px;
    font-weight: 600;
    color: #155c7b;
    text-decoration: underline;
    text-underline-offset: 4px;
    transition: color 0.2s ease;
  }

  #section-{{ section.id }} .vitamin-highlight__cta-link:hover {
    color: #0f4359;
  }

  @media (max-width: 840px) {
    #section-{{ section.id }} .vitamin-highlight__item {
      flex-direction: column;
      text-align: center;
      border-radius: 36px;
      padding: clamp(20px, 6vw, 32px);
    }

    #section-{{ section.id }} .vitamin-highlight__item--right {
      flex-direction: column;
    }

    #section-{{ section.id }} .vitamin-highlight__content,
    #section-{{ section.id }} .vitamin-highlight__item--right .vitamin-highlight__content {
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    #section-{{ section.id }} .vitamin-highlight__heading {
      font-size: clamp(28px, 8vw, 34px);
    }
  }
</style>

