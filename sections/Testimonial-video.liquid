<style>
  .video-section {
      padding: 3rem 1.5rem;
      background-color: white;
  }

  .section-heading {
      text-align: center;
      font-size: 2rem;
      font-style: italic;
      font-weight: 300;
  }

  .section-heading .font-semibold {
      font-weight: 600;
  }

  .section-subheading {
      text-align: center;
      color: #4B5563;
      margin: 0.5rem 0 2rem;
  }

  .video-scroll-container {
      display: flex;
      overflow-x: auto;
      gap: 1rem;
      padding-bottom: 1rem;
      scroll-snap-type: x mandatory;
  }

  .video-card {
      flex: 0 0 300px;
      background-color: white;
      border-radius: 12px;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      scroll-snap-align: start;
      display: flex;
      flex-direction: column;
      transition: transform 0.3s;
      position: relative;
  }

  .video-card:hover {
      transform: translateY(-4px);
  }

  .video-wrapper {
      width: 100%;
      height: auto;
      overflow: hidden;
  }

  .video-wrapper video {
      width: 100%;
      height: auto;
      display: block;
      object-fit: cover;
  }

  .card-content {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      padding: 0.8rem;
      display: flex;
      align-items: flex-start;
      backdrop-filter: blur(5px);
      margin: 5px;
      border-radius: 10px;
      background: #ffffff5c;
      gap: 10px;
      align-items: center;
      justify-content: space-between;
  }

  .product-img {
      width: 48px;
      height: auto;
      border-radius: 4px;
  }

  .product-title {
      font-weight: 600;
      font-size: 0.9rem;
      padding: 0px;
      margin: 0px;
      font-size: 13px;
      font-family: 'Lato';
      color: white;
      font-family: monospace;
  }

  .product-price {
      font-size: 0.9rem;
      padding: 0px;
      margin: 0px;
      color: white;
      font-family: monospace;
  }

  .shop-button {
      background-color: #086b92;
      color: white;
      padding: 0.4rem 1rem;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      float: right;
  }

  .shop-button:hover {
      background-color: #086b92;
  }

  .video-scroll-container::-webkit-scrollbar {
      display: none;
  }

  .video-scroll-container {
      -ms-overflow-style: none;
      scrollbar-width: none;
  }

  .product-title-new {
      width: 200px;
  }
</style>

<section class="video-section">
  <h2 class="section-heading">
    Our <span class="font-semibold">community</span>, our <span class="font-semibold">everything</span>.
  </h2>
  <p class="section-subheading">"The first two ingredients are always care + science." - Jessica Sepel, Founder</p>
  <div class="video-scroll-container">
    {% for video in section.blocks %}
      {% assign testimonial = video.settings %}
      <div class="video-card">
        <div class="video-wrapper">
          <video muted playsinline loop autoplay>
            <source
              src="{{ testimonial.videourl }}"
              type="video/mp4"
            >
          </video>
        </div>
        {% comment %}
          {% assign testimonial_product = testimonial.product_url1 %}
          {% if testimonial.product_url1 != blank %}
          <div class="card-content">
              <div class="product-image">
                    <img data-src="{{ testimonial.posterimage | img_url:'master' }}" src="{{ testimonial.posterimage | img_url:'100x' }}" title="" alt="" loading="lazy" width="100%" height="100%"
                      class="product-img lazyload" />
              </div>

              <div class="product-title-new">
                  <p class="product-title"></p>
                  <p class="product-price">Rs. 1,600.00</p>
                  <button class="shop-button">Add Product</button>
              </div>
          </div>
          {% endif %}
        {% endcomment %}
        {% render 'video_product', product: product %}
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Section name",
  "settings": []
}
{% endschema %}
