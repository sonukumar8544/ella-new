<style>
  .video-section {
    padding: 3rem 1.5rem;
    background-color: white;
  }

  .section-heading {
    text-align: center;
    font-size: 2rem;
    font-style: italic;
    font-weight: 300;
  }

  .section-heading .font-semibold {
    font-weight: 600;
  }

  .section-subheading {
    text-align: center;
    color: #4B5563;
    margin: 0.5rem 0 2rem;
  }

  .video-scroll-container {
    display: flex;
    overflow-x: auto;
    gap: 1rem;
    padding-bottom: 1rem;
    scroll-snap-type: x mandatory;
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  .video-scroll-container::-webkit-scrollbar {
    display: none;
  }

  .video-card {
    flex: 0 0 300px;
    background-color: white;
    border-radius: 12px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    scroll-snap-align: start;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s;
    position: relative;
  }

  .video-card:hover {
    transform: translateY(-4px);
  }

  .video-wrapper {
    width: 100%;
    height: auto;
    overflow: hidden;
  }

  .video-wrapper video {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .card-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 0.8rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 10px;
    backdrop-filter: blur(5px);
    background: #ffffff5c;
    margin: 5px;
    border-radius: 10px;
  }

  .product-img {
    width: 48px;
    height: auto;
    border-radius: 4px;
  }

  .product-title {
    font-weight: 600;
    font-size: 13px;
    margin: 0;
    color: white;
    font-family: monospace;
  }

  .product-price {
    font-size: 0.9rem;
    margin: 0;
    color: white;
    font-family: monospace;
  }

  .shop-button {
    background-color: #086b92;
    color: white;
    padding: 0.4rem 1rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  .shop-button:hover {
    background-color: #055671;
  }

  .product-title-new {
    width: 200px;
  }
</style>

<section class="video-section" id="video_{{ section.id }}">
  {%- if section.settings.title != blank -%}
    <h3 class="title">
      <span class="text">{{ section.settings.title }}</span>
    </h3>
  {%- endif -%}
  {% if section.settings.description != blank %}
    <div class="rte subtext-brand w-100 text-center">
      <p>{{ section.settings.description }}</p>
    </div>
  {% endif %}

  <div class="video-scroll-container">
    {% for video in section.blocks %}
      {% if video.settings.video != blank %}
        <div class="video-card">
          <div class="video-wrapper">
            <video muted playsinline loop autoplay style="width: 100%; height: auto;">
              <source src="{{ video.settings.video | video_tag_url }}" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          </div>

          {% assign featured_product = video.settings.product %}
          {% if video.settings.product != blank %}
            <div class="card-content">
              <img
                data-src="{{ featured_product.featured_image | img_url: '70x' }}"
                src="{{ featured_product.featured_image | img_url: '20x' }}"
                alt="{{featured_product.title  }}"
                title=""
                width="50px"
                height="50px"
                class="product-img lazyload"
                alt=""
              >

              <div class="product-title-new">
                <p class="product-title">{{ featured_product.title }}</p>
                <p class="product-price">{{ featured_product.price | money_with_currency }}</p>
              </div>

              <button class="shop-button">Add Product</button>
            </div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Video Product Cards",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Voices of Satisfaction"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Content"
    }
  ],
  "blocks": [
    {
      "type": "product_card",
      "name": "Custom Product Card",
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "Video"
        },
        {
          "type": "header",
          "content": "Product Details"
        },
        {
          "type": "url",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "text",
          "id": "swatch",
          "label": "Swatch Option Name",
          "default": "Color"
        },
        {
          "type": "checkbox",
          "id": "show_swatch",
          "label": "Show Swatch",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "disable_product_card_border",
          "label": "Disable Product Card Border",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "enable_custom_layout_card",
          "label": "Enable Custom Layout Card",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "enable_custom_position_swatch_layout_card_1",
          "label": "Enable Custom Swatch Position",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "show_action",
          "label": "Show Add to Cart Button",
          "default": true
        },
        {
          "type": "select",
          "id": "product_title_line_text",
          "label": "Product Title Line Display",
          "default": "full",
          "options": [
            {
              "value": "full",
              "label": "Full"
            },
            {
              "value": "ellipsis",
              "label": "Truncate with Ellipsis"
            }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonial Video | App"
    }
  ]
}
{% endschema %}
