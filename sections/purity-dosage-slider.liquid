<div class="badges-section" style="
  --section-padding: {{ section.settings.section_padding }}px;
  --section-bg-color: {{ section.settings.section_bg_color }};
  --heading-font-size: {{ section.settings.heading_font_size }}px;
  --heading-color: {{ section.settings.heading_color }};
  --heading-font-weight: {{ section.settings.heading_font_weight }};
  --heading-margin-bottom: {{ section.settings.heading_margin_bottom }}px;
  --subheading-font-size: {{ section.settings.subheading_font_size }}px;
  --subheading-color: {{ section.settings.subheading_color }};
  --subheading-highlight-color: {{ section.settings.subheading_highlight_color }};
  --subheading-margin-bottom: {{ section.settings.subheading_margin_bottom }}px;
  --badge-gap: {{ section.settings.badge_gap }}px;
  --badge-width: {{ section.settings.badge_width }}px;
  --badge-height: {{ section.settings.badge_height }}px;
  --text-font-size: {{ section.settings.text_font_size }}px;
  --text-color: {{ section.settings.text_color }};
  --text-font-weight: {{ section.settings.text_font_weight }};
  --text-margin-top: {{ section.settings.text_margin_top }}px;
  --text-line-height: {{ section.settings.text_line_height }};
  --text-width: {{ section.settings.text_width }}px;
  --text-height: {{ section.settings.text_height }}px;
  --description-font-size: {{ section.settings.description_font_size }}px;
  --description-font-weight: {{ section.settings.description_font_weight }};
  --description-line-height: {{ section.settings.description_line_height }};
  --description-width: {{ section.settings.description_width }}px;
  --description-height: {{ section.settings.description_height }}px;
  --description-margin-top: {{ section.settings.description_margin_top }}px;
  --description-opacity: {{ section.settings.description_opacity | divided_by: 100.0 }};
  --badge-item-padding: {{ section.settings.badge_item_padding }}px;
  --container-max-width: {{ section.settings.container_max_width }}px;
  --image-object-fit: {{ section.settings.image_object_fit }};
  --text-align: {{ section.settings.text_align }};
  --description-align: {{ section.settings.description_align }};
">
  <div class="section-content">
    {% if section.settings.heading != blank %}
      <h2 class="section-heading">{{ section.settings.heading }}</h2>
    {% endif %}
    
    {% if section.settings.subheading != blank %}
      <p class="section-subheading">
        {% if section.settings.highlight_text != blank and section.settings.subheading contains section.settings.highlight_text %}
          {% assign temp_text = section.settings.subheading %}
          {% assign highlight = section.settings.highlight_text %}
          {% assign parts = temp_text | split: highlight %}
          {% if parts.size > 1 %}
            {{ parts[0] }}<span class="highlight">{{ highlight }}</span>{{ parts[1] }}
          {% else %}
            {{ section.settings.subheading }}
          {% endif %}
        {% else %}
          {{ section.settings.subheading }}
        {% endif %}
      </p>
    {% endif %}
  </div>
  
  <div class="badges-container">
    {% for block in section.blocks %}
      <div class="badge-item" {{ block.shopify_attributes }}>
        {% if block.settings.badge_image != blank %}
          <div class="badge-image-wrapper">
            <img src="{{ block.settings.badge_image | image_url: width: 200 }}" alt="{{ block.settings.badge_text | escape }}" class="badge-image">
          </div>
        {% endif %}
        {% if block.settings.badge_text != blank %}
          <p class="badge-text">{{ block.settings.badge_text }}</p>
        {% endif %}
        {% if block.settings.badge_description != blank %}
          <p class="badge-description">{{ block.settings.badge_description }}</p>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

<style>
.badges-section {
  width: 100%;
  padding: var(--section-padding);
  background-color: var(--section-bg-color);
  box-sizing: border-box;
}

.section-content {
  text-align: center;
  max-width: 1400px;
  margin: 0 auto var(--subheading-margin-bottom) auto;
}

.section-heading {
  font-family: 'Nunito', sans-serif;
  font-size: var(--heading-font-size);
  font-weight: var(--heading-font-weight);
  color: var(--heading-color);
  margin: 0 0 var(--heading-margin-bottom) 0;
}

.section-subheading {
  font-family: 'Lato', sans-serif;
  font-size: var(--subheading-font-size);
  font-weight: 400;
  color: var(--subheading-color);
  margin: 0;
  line-height: 1.5;
}

.section-subheading .highlight {
  color: var(--subheading-highlight-color);
}

.badges-container {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  gap: var(--badge-gap);
  flex-wrap: wrap;
  max-width: var(--container-max-width);
  margin: 0 auto;
}

.badge-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  flex: 0 0 auto;
  padding: var(--badge-item-padding);
  box-sizing: border-box;
}

.badge-image-wrapper {
  width: var(--badge-width);
  height: var(--badge-height);
  display: flex;
  align-items: center;
  justify-content: center;
}

.badge-image {
  width: 100%;
  height: 100%;
  object-fit: var(--image-object-fit);
  display: block;
}

.badge-text {
  font-family: 'Lato', sans-serif;
  font-size: var(--text-font-size);
  font-weight: var(--text-font-weight);
  color: var(--text-color);
  line-height: var(--text-line-height);
  margin: var(--text-margin-top) auto 0 auto;
  text-align: var(--text-align);
  width: var(--text-width);
  min-height: var(--text-height);
  max-width: 100%;
  box-sizing: border-box;
  word-wrap: break-word;
}

.badge-description {
  font-family: 'Lato', sans-serif;
  font-size: var(--description-font-size);
  font-weight: var(--description-font-weight);
  color: var(--text-color);
  line-height: var(--description-line-height);
  margin: var(--description-margin-top) auto 0 auto;
  text-align: var(--description-align);
  opacity: var(--description-opacity);
  width: var(--description-width);
  min-height: var(--description-height);
  max-width: 100%;
  box-sizing: border-box;
  word-wrap: break-word;
}

/* Mobile Slider Styles */
@media (max-width: 768px) {
  .section-heading {
    font-size: calc(var(--heading-font-size) * 0.85);
  }
  
  .section-subheading {
    font-size: calc(var(--subheading-font-size) * 0.9);
  }
  
  .badges-container {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
    gap: calc(var(--badge-gap) * 0.8);
    padding-bottom: 10px;
    justify-content: flex-start;
    flex-wrap: nowrap;
  }
  
  .badges-container::-webkit-scrollbar {
    display: none;
  }
  
  .badge-item {
    flex: 0 0 calc(50% - var(--badge-gap));
    scroll-snap-align: center;
    min-width: calc(50% - var(--badge-gap));
  }
  
  .badge-image-wrapper {
    width: calc(var(--badge-width) * 0.9);
    height: calc(var(--badge-height) * 0.9);
  }
  
  .badge-text {
    font-size: calc(var(--text-font-size) * 0.9);
  }
}

@media (max-width: 480px) {
  .badge-item {
    flex: 0 0 calc(70% - var(--badge-gap));
    min-width: calc(70% - var(--badge-gap));
  }
  
  .badge-image-wrapper {
    width: calc(var(--badge-width) * 0.8);
    height: calc(var(--badge-height) * 0.8);
  }
  
  .badge-text {
    font-size: calc(var(--text-font-size) * 0.85);
  }
}
</style>

