      "label": "Main Title",
      "default": "What Influences Color"
    },
    {
      "type": "textarea",
      "id": "section_subtitle",
      "label": "Subtitle (below title)",
      "default": "Natural variations that make each batch unique"
    },
    {
      "type": "header",
      "content": "Section Background"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#F1FAFE"
    },
    {
      "type": "header",
      "content": "Bottom Subtitle"
    },
    {
      "type": "textarea",
      "id": "footer_text",
      "label": "Subtitle Text",
      "default": "None of these factors change what matters most: every softgel is standardized, tested, and verified for purity and potency."
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 10,
      "unit": "px",
      "label": "Top Padding",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 10,
      "unit": "px",
      "label": "Bottom Padding",
