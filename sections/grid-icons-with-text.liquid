<style>
  .color-grid-icons-section {
    padding: 80px 20px;
    background: #F1FAFE;
  }

  .color-grid-icons-section__inner {
    max-width: 1400px;
    margin: 0 auto;
  }

  .color-grid-icons-section__header {
    text-align: center;
    margin-bottom: 60px;
  }

  .color-grid-icons-section__main-title {
    font-size: 38px;
    font-weight: 700;
    color: #2d3e50;
    margin: 0 0 15px;
    line-height: 1.2;
    letter-spacing: -0.5px;
  }

  .color-grid-icons-section__subtitle {
    font-size: 22px;
    line-height: 1.6;
    color: #374650;
    font-style: italic;
    margin: 0 auto;
    font-weight: 400;
    max-width: 550px;
  }

  .color-grid-icons-section__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
    margin-bottom: 50px;
  }

  .color-grid-icons-section__card {
    background: #ffffff;
    border-radius: 12px;
    padding: 40px 30px;
    text-align: center;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    transition: box-shadow 0.3s ease;
  }

  .color-grid-icons-section__card:hover {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
  }

  .color-grid-icons-section__icon {
    width: 85px;
    height: 85px;
    margin: 0 auto 25px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .color-grid-icons-section__icon img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .color-grid-icons-section__icon svg {
    width: 100%;
    height: 100%;
  }

  .color-grid-icons-section__title {
    font-size: 22px;
    font-weight: 700;   
    color: #2d3e50;
    margin: 0 0 15px;
    line-height: 1.4;
  }

  .color-grid-icons-section__description {
    font-size: 16px;
    line-height: 1.6;
    color: #374650;
    margin: 0;
    font-weight: 400;
  }

  .color-grid-icons-section__footer-text {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
    padding: 30px 20px 0;
  }

  .color-grid-icons-section__footer-text p {
    font-size: 20px;
    line-height: 1.8;
    color: #555555;
    margin: 0;
    font-style: italic;
    font-weight: 400;
  }

  /* Tablet styles */
  @media (max-width: 1024px) {
    .color-grid-icons-section__header {
      margin-bottom: 50px;
    }

    .color-grid-icons-section__main-title {
      font-size: 36px;
      margin-bottom: 12px;
    }

    .color-grid-icons-section__subtitle {
      font-size: 17px;
    }

    .color-grid-icons-section__grid {
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 25px;
    }

    .color-grid-icons-section__card {
      padding: 35px 25px;
    }

    .color-grid-icons-section__icon {
      width: 65px;
      height: 65px;
      margin-bottom: 20px;
    }

    .color-grid-icons-section__title {
      font-size: 20px;
    }

    .color-grid-icons-section__description {
      font-size: 15px;
    }
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    .color-grid-icons-section {
      padding: 60px 20px;
    }

    .color-grid-icons-section__header {
      margin-bottom: 40px;
    }

    .color-grid-icons-section__main-title {
      font-size: 32px;
      margin-bottom: 10px;
    }

    .color-grid-icons-section__subtitle {
      font-size: 16px;
    }

    .color-grid-icons-section__grid {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 20px;
      margin-bottom: 40px;
    }

    .color-grid-icons-section__card {
      padding: 30px 25px;
    }

    .color-grid-icons-section__icon {
      width: 60px;
      height: 60px;
      margin-bottom: 18px;
    }

    .color-grid-icons-section__title {
      font-size: 20px;
      margin-bottom: 12px;
    }

    .color-grid-icons-section__description {
      font-size: 15px;
      line-height: 1.5;
    }

    .color-grid-icons-section__footer-text {
      padding-top: 20px;
    }

    .color-grid-icons-section__footer-text p {
      font-size: 14px;
      line-height: 1.7;
    }
  }

  @media (max-width: 480px) {
    .color-grid-icons-section {
      padding: 50px 15px;
    }

    .color-grid-icons-section__header {
      margin-bottom: 35px;
    }

    .color-grid-icons-section__main-title {
      font-size: 30px;
      margin-bottom: 8px;
    }

    .color-grid-icons-section__subtitle {
      font-size: 15px;
    }

    .color-grid-icons-section__grid {
      grid-template-columns: 1fr;
    }

    .color-grid-icons-section__card {
      padding: 25px 20px;
    }

    .color-grid-icons-section__icon {
      width: 55px;
      height: 55px;
      margin-bottom: 15px;
    }

    .color-grid-icons-section__title {
      font-size: 20px;
    }

    .color-grid-icons-section__description {
      font-size: 15px;
    }

    .color-grid-icons-section__footer-text p {
      font-size: 14px;
    }
  }
</style>

<div class="color-grid-icons-section" id="color-grid-icons-{{ section.id }}">
  <div class="color-grid-icons-section__inner">
    {% if section.settings.section_title != blank or section.settings.section_subtitle != blank %}
      <div class="color-grid-icons-section__header">
        {% if section.settings.section_title != blank %}
          <h2 class="color-grid-icons-section__main-title">{{ section.settings.section_title }}</h2>
        {% endif %}
        {% if section.settings.section_subtitle != blank %}
          <p class="color-grid-icons-section__subtitle">{{ section.settings.section_subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="color-grid-icons-section__grid">
      {% for block in section.blocks %}
        <div class="color-grid-icons-section__card" {{ block.shopify_attributes }}>
          <div class="color-grid-icons-section__icon">
            {% if block.settings.icon != blank %}
              <img src="{{ block.settings.icon | img_url: '100x' }}" alt="{{ block.settings.title }}" loading="lazy">
            {% else %}
              <!-- Default placeholder icon -->
              <svg viewBox="0 0 70 70" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="35" cy="35" r="30" stroke="#ddd" stroke-width="2" fill="none"/>
                <circle cx="35" cy="35" r="15" fill="#e0e0e0"/>
              </svg>
            {% endif %}
          </div>
          
          {% if block.settings.title != blank %}
            <h3 class="color-grid-icons-section__title">{{ block.settings.title }}</h3>
          {% endif %}
          
          {% if block.settings.description != blank %}
            <p class="color-grid-icons-section__description">{{ block.settings.description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    {% if section.settings.footer_text != blank %}
      <div class="color-grid-icons-section__footer-text">
        <p>{{ section.settings.footer_text }}</p>
      </div>
    {% endif %}
  </div>
</div>

