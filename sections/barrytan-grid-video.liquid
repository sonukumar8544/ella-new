<section class="barry-tan-grid-video" id="barry-tan-grid-video-{{ section.id }}">
  <div class="barry-tan-grid-video-container">
    {% if section.settings.title != blank %}
      <h2 class="barry-tan-grid-video-title">{{ section.settings.title }}</h2>
    {% endif %}

    <div class="barry-tan-grid-video-grid">
      {% for block in section.blocks %}
        <div class="barry-tan-grid-video-item" {{ block.shopify_attributes }}>
          <a href="{{ block.settings.video_link | default: '#' }}" class="barry-tan-grid-video-link">
            <div class="barry-tan-grid-video-thumbnail">
              {% if block.settings.video_image != blank %}
                {% assign alt_text = block.settings.video_image_alt | default: block.settings.video_title %}
                {{ block.settings.video_image | image_url: width: 600 | image_tag: alt: alt_text, loading: 'lazy', class: 'barry-tan-grid-video-image' }}
              {% else %}
                <div class="barry-tan-grid-video-placeholder"></div>
              {% endif %}
              
              <div class="barry-tan-grid-video-play-overlay">
                <div class="barry-tan-grid-video-play-button">
                  <svg width="60" height="60" viewBox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="30" cy="30" r="30" fill="#DC2626" opacity="0.9"/>
                    <path d="M24 18L42 30L24 42V18Z" fill="white"/>
                  </svg>
                </div>
                {% if block.settings.video_title_overlay != blank %}
                  <div class="barry-tan-grid-video-overlay-text">{{ block.settings.video_title_overlay }}</div>
                {% endif %}
              </div>

              {% if block.settings.show_branding %}
                <div class="barry-tan-grid-video-branding">
                  {{ block.settings.branding_text | default: "Wellness by designs PODCAST" }}
                </div>
              {% endif %}

              {% if block.settings.show_guest_banner %}
                <div class="barry-tan-grid-video-guest-banner">
                  {{ block.settings.guest_text | default: "With Dr Barrie Tan PhD" }}
                </div>
              {% endif %}
            </div>
            
            {% if block.settings.video_title != blank %}
              <h3 class="barry-tan-grid-video-item-title">{{ block.settings.video_title }}</h3>
            {% endif %}
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  #barry-tan-grid-video-{{ section.id }} {
    padding: {{ section.settings.section_padding_top | default: 80 }}px 20px {{ section.settings.section_padding_bottom | default: 80 }}px;
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
  }

  #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-container {
    max-width: {{ section.settings.max_width | default: 1200 }}px;
    margin: 0 auto;
  }

  #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-title {
    font-size: clamp(28px, 4vw, 36px);
    font-weight: 700;
    color: {{ section.settings.title_color | default: '#1a1a1a' }};
    text-align: center;
    margin: 0 0 50px;
    line-height: 1.3;
    letter-spacing: -0.02em;
  }

  #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }

  #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-item {
    display: flex;
    flex-direction: column;
  }

  #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease;
  }

  #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-link:hover {
    transform: translateY(-4px);
  }

  #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-thumbnail {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    background-color: #f5f5f5;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 16px;
  }

  #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #e0e0e0 0%, #f5f5f5 100%);
  }

  #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-play-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.1);
    transition: background 0.3s ease;
  }

  #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-link:hover .barry-tan-grid-video-play-overlay {
    background: rgba(0, 0, 0, 0.2);
  }

  #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-play-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
  }

  #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-play-button svg {
    width: 60px;
    height: 60px;
    filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.3));
  }

  #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-overlay-text {
    position: absolute;
    bottom: 60px;
    right: 20px;
    background: rgba(220, 38, 38, 0.9);
    color: #ffffff;
    padding: 8px 16px;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 600;
    z-index: 3;
    max-width: 200px;
    text-align: center;
  }

  #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-branding {
    position: absolute;
    top: 12px;
    left: 12px;
    background: rgba(255, 255, 255, 0.95);
    padding: 6px 12px;
    border-radius: 4px;
    font-size: 11px;
    font-weight: 600;
    color: #1a1a1a;
    z-index: 3;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-guest-banner {
    position: absolute;
    bottom: 12px;
    left: 0;
    right: 0;
    background: rgba(8, 107, 146, 0.9);
    color: #ffffff;
    padding: 10px 16px;
    font-size: 14px;
    font-weight: 600;
    text-align: center;
    z-index: 3;
  }

  #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-item-title {
    font-size: clamp(15px, 1.8vw, 17px);
    font-weight: 400;
    color: {{ section.settings.text_color | default: '#374650' }};
    margin: 0;
    line-height: 1.5;
  }

  /* Tablet styles */
  @media (max-width: 1024px) {
    #barry-tan-grid-video-{{ section.id }} {
      padding: 60px 20px;
    }

    #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-grid {
      gap: 24px;
    }

    #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-title {
      margin-bottom: 40px;
    }
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    #barry-tan-grid-video-{{ section.id }} {
      padding: 50px 16px;
    }

    #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-title {
      font-size: 24px;
      margin-bottom: 32px;
    }

    #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-grid {
      grid-template-columns: 1fr;
      gap: 32px;
    }

    #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-thumbnail {
      margin-bottom: 12px;
    }

    #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-play-button svg {
      width: 50px;
      height: 50px;
    }

    #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-overlay-text {
      bottom: 50px;
      right: 16px;
      font-size: 13px;
      padding: 6px 12px;  
      max-width: 180px;
    }

    #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-branding {
      top: 10px;
      left: 10px;
      font-size: 10px;
      padding: 5px 10px;
    }

    #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-guest-banner {
      bottom: 10px;
      padding: 8px 12px;
      font-size: 13px;
    }
  }

  @media (max-width: 480px) {
    #barry-tan-grid-video-{{ section.id }} {
      padding: 40px 12px;
    }

    #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-title {
      font-size: 22px;
      margin-bottom: 28px;
    }

    #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-grid {
      gap: 28px;
    }

    #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-play-button svg {
      width: 45px;
      height: 45px;
    }

    #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-overlay-text {
      bottom: 45px;
      right: 12px;
      font-size: 12px;
      padding: 5px 10px;
      max-width: 150px;
    }

    #barry-tan-grid-video-{{ section.id }} .barry-tan-grid-video-item-title {
      font-size: 15px;
    }
  }
</style>

