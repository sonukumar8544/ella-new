
<section
  class="dr-barry-banner"
>
  <div class="dr-barry-banner__wrapper page-width">
    <div class="dr-barry-banner__card">
      {% if section.settings.heading != blank %}
        <h2 class="dr-barry-banner__heading dr-barry-banner__heading--mobile-first">{{ section.settings.heading }}</h2>
      {% endif %}

      <div class="dr-barry-banner__content">
        {% if section.settings.heading != blank %}
          <h2 class="dr-barry-banner__heading dr-barry-banner__heading--desktop">{{ section.settings.heading }}</h2>
        {% endif %}

        {% if section.settings.subheading != blank %}
          <p class="dr-barry-banner__subheading">
            {{ section.settings.subheading }}
          </p>
        {% endif %}

        {% if section.settings.button_label != blank and section.settings.button_link != blank %}
          <a
            class="dr-barry-banner__button"
            href="{{ section.settings.button_link }}"
            {% if section.settings.button_open_new_tab %}
              target="_blank"
              rel="noopener"
            {% endif %}
          >
            {{ section.settings.button_label }}
            <span class="dr-barry-banner__button-icon" aria-hidden="true">
              <svg viewBox="0 0 24 24" fill="none">
                <path d="M7 7h-2m2 0h12l-1.2 6.4c-.1.6-.7 1.1-1.3 1.1H9.2c-.6 0-1.2-.5-1.3-1.1L7 7Zm2.5 12a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3Zm7 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </span>
          </a>
        {% endif %}
      </div>

      {% if section.settings.image != blank %}
        <div class="dr-barry-banner__media">
          {% assign alt_text = section.settings.image_alt | default: section.settings.heading %}
          {{ section.settings.image | image_url: width: 900 | image_tag: alt: alt_text | replace: 'src=', 'loading="lazy" src=' }}
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .dr-barry-banner {
    padding: {{ section.settings.section_padding | default: 48 }}px 16px;
  }

  .dr-barry-banner__wrapper {
    max-width: {{ section.settings.max_width | default: 1100 }}px;
    margin: 0 auto;
  }

  .dr-barry-banner__card {
    background: {{ section.settings.card_background | default: '#086B92' }}; 
    border-radius: {{ section.settings.border_radius | default: 28 }}px;
    padding: 8px;
    display: flex;
    align-items: center;
    /* gap: clamp(28px, 6vw, 64px); */
    /* overflow: hidden;
    box-shadow: 0 28px 60px rgba(11, 56, 86, 0.22); */
  }

  .dr-barry-banner__content {
    flex: 0 0 60%;
    max-width: 60%;
    color: #ffffff;
  }

  @media (min-width: 1025px) {
    .dr-barry-banner__content{
      padding-left: 50px !important;
    }
  }

  .dr-barry-banner__heading {
    margin: 0 0 18px;
    font-size: clamp(28px, 4vw, 42px);
    line-height: 1.15;
    font-weight: 600;
    color: #ffffff;
  }

  .dr-barry-banner__heading--mobile-first {
    display: none;
  }

  .dr-barry-banner__heading--desktop {
    display: block;
  }

  .dr-barry-banner__subheading {
    margin: 0 0 30px;
    font-size: clamp(16px, 2vw, 18px);
    line-height: 1.6;
    max-width: 420px;
    color: {{ section.settings.subheading_color | default: '#d8ecf5' }};
  }

  .dr-barry-banner__button {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 5px 10px 5px 22px;
    border-radius: 999px;
    background: #ffffff;
    color: {{ section.settings.button_text_color | default: '#0b6c8d' }};
    font-size: 15px;
    font-weight: 600;
    text-decoration: none;
    box-shadow: 0 14px 28px rgba(10, 108, 141, 0.25);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .dr-barry-banner__button:hover,
  .dr-barry-banner__button:focus-visible {
    transform: translateY(-2px);
    box-shadow: 0 20px 34px rgba(10, 108, 141, 0.3);
  }

  .dr-barry-banner__button-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 35px;
    height: 35px;
    border-radius: 999px;
    background: {{ section.settings.button_icon_background | default: '#0b6c8d' }};
    color: {{ section.settings.button_icon_color | default: '#ffffff' }};
  }

  .dr-barry-banner__button-icon svg {
    width: 25px;
    height: 25px;
  }

  .dr-barry-banner__media {
    flex: 0 0 40%;
    max-width: 40%;
    display: flex;
    justify-content: flex-end;
  }

  .dr-barry-banner__media img {
    width: 100%;
    max-width: 340px;
    height: auto;
    border-radius: {{ section.settings.image_border_radius | default: 20 }}px;
    object-fit: cover;
    box-shadow: 0 18px 40px rgba(8, 41, 55, 0.18);
  }

  @media (max-width: 900px) {
    .dr-barry-banner__card {
      flex-direction: column;
      text-align: center;
      padding: 8px;
      padding-top: 40px !important;
      gap: 0;
    }

    .dr-barry-banner__heading--mobile-first {
      display: block;
      order: 1;
      margin: 0 0 28px;
      width: 100%;
    }

    .dr-barry-banner__content {
      flex: 1 1 auto;
      max-width: 100%;
      order: 2;
    }

    .dr-barry-banner__heading--desktop {
      display: none;
    }

    .dr-barry-banner__subheading {
      margin-left: auto;
      margin-right: auto;
      margin-bottom: 24px;
    }

    .dr-barry-banner__media {
      justify-content: center;
      flex: 1 1 auto;
      max-width: 100%;
      order: 3;
      margin: 28px 0 0;
    }
  }

  @media (max-width: 600px) {
    .dr-barry-banner {
      padding: 36px 14px;
    }

    .dr-barry-banner__card {
      border-radius: 22px;
      padding: 8px;
      gap: 0;
    }

    .dr-barry-banner__heading--mobile-first {
      font-size: 28px;
      /* margin-bottom: 24px; */
      line-height: 1.2;
    }

    .dr-barry-banner__media {
      margin-top: 24px;
      margin-bottom: 0;
    }

    .dr-barry-banner__media img {
      max-width: 500px;
      width: 100%;
      border-radius: 18px;
      box-shadow: 0 12px 32px rgba(8, 41, 55, 0.25);
    }

    .dr-barry-banner__subheading {
      font-size: 16px;
      line-height: 1.65;
      margin-bottom: 20px;
      max-width: 90%;
    }

    .dr-barry-banner__button {
      font-size: 14px;
      padding: 5px;
      padding-left: 10px;
      max-width: 213px;
      justify-content: center;
      box-shadow: 0 12px 24px rgba(10, 108, 141, 0.3);
    }

    .dr-barry-banner__button:hover,
    .dr-barry-banner__button:focus-visible {
      transform: translateY(-1px);
      box-shadow: 0 16px 28px rgba(10, 108, 141, 0.35);
    }
  }
</style>

{% schema %}
