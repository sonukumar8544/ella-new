      "max": 120,
      "step": 4,
      "default": 48
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Card border radius",
      "min": 8,
      "max": 48,
      "step": 2,
      "default": 28
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "label": "Image border radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "default": 20
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Content max width",
      "min": 800,
      "max": 1400,
      "step": 20,
      "default": 1100
    }
  ],
  "presets": [
    {
      "name": "dr-barry-tan-banner"
    }
  ]
}
{% endschema %}