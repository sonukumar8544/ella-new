  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "30+ Years of Tocotrienols by Dr. Barrie Tan"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "The turning points that took it from SEED to SCIENCE."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Tocotrienols"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "checkbox",
      "id": "button_open_new_tab",
      "label": "Open button in new tab",
      "default": false
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Portrait image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image alt text",
      "default": "Portrait of Dr. Barrie Tan"
    },
    {
      "type": "header",
      "content": "Styling"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Section background color",
      "default": "#0b6c8d"
    },
    {
      "type": "color",
      "id": "card_background",
      "label": "Card background color",
      "default": "#0a6c8d"
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading text color",
      "default": "#d8ecf5"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#0b6c8d"
    },
    {
      "type": "color",
      "id": "button_icon_background",
      "label": "Button icon background",
      "default": "#0b6c8d"
    },
    {
      "type": "color",
      "id": "button_icon_color",
      "label": "Button icon color",
      "default": "#ffffff"
    },
    {
      "type": "range",
