<style>
  body {
  font-family: 'Helvetica Neue', sans-serif;
  margin: 0;
  padding: 0;
  background: linear-gradient(to bottom, #ffffff, #fef9f2);
}

.scientific-section {
  padding: 50px 20px;
  max-width: 1200px;
  margin: auto;
  text-align: center;
}

.scientific-header {
  margin-bottom: 40px;
}

.scientific-title {
  font-size: 36px;
  color: #00587A;
  margin-bottom: 10px;
}

.scientific-subtitle {
  font-size: 16px;
  color: #333;
  max-width: 700px;
  margin: 0 auto;
  line-height: 1.6;
}

.scientific-slider {
  margin: 0 auto;
}

.scientific-card {
  background-color: #f4f0eb;
  border-radius: 12px;
  padding: 30px 24px;
  margin: 10px;
  text-align: left;
  position: relative;
  min-height: 250px;
}

.scientific-quote-icon {
  font-size: 48px;
  color: #c0bdb9;
}

.scientific-quote-text {
  font-size: 18px;
  color: #3f3f3f;
  line-height: 1.5;
  margin: 16px 0;
}

.scientific-verified {
  font-size: 14px;
  color: #444;
}

.scientific-icon {
  margin-right: 6px;
}

.scientific-note {
  display: block;
  font-size: 10px;
  color: #888;
  margin-top: 4px;
}

/* Slick Dots */
.slick-dots {
  margin-top: 30px;
}

.slick-dots li button:before {
  color: #00587A;
}

</style>



