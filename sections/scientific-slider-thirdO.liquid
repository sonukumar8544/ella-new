<!-- scientific-slider-thirdO -->
{% assign science_content = product.metafields.custom.product_3_0_science_slider.value %}

{% if science_content != blank %}
<section class="scientific-section" id="scientifically-backed_{{ section.id }}">
  <div class="container">

    {% for block in science_content %}
      <div class="scientific-header">
        {% if block.scientific_main_title != blank %}
          <h2 class="scientific-title">{{ block.scientific_main_title }}</h2>
        {% endif %}
        {% if block.scientific_main_description != blank %}
          <p class="scientific-subtitle">{{ block.scientific_main_description }}</p>
        {% endif %}
      </div>
    {% endfor %}

    <div class="scientific-slider">
      {% for block in science_content %}
        <div class="scientific-card">
          {% if block.scientific_card_image_url != blank %}
            <div class="scientific-quote-icon">
              <img src="{{ block.scientific_card_image_url }}" alt="" title="">
            </div>
          {% endif %}

          {% if block.scientific_card_content != blank %}
            <p class="scientific-quote-text">
              {{ block.scientific_card_content }}
              {% if block.scientific_card_small_content != blank %}
                <a href="{{ block.scientific_card_link1 }}" class="scientific-note">{{ block.scientific_card_small_content }}</a>
              {% endif %}
            </p>
          {% endif %}

        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
#scientifically-backed_{{ section.id }} {
  background: linear-gradient(180deg, #f8f8f8 0%, #FEF8E8 100%);
  padding: 50px 0px;
  text-align: center;
}

.scientific-header {
  margin-bottom: 40px;
}

#scientifically-backed_{{ section.id }} .scientific-title {
  letter-spacing: 0.68px;
  text-transform: capitalize;
  color: #086B92;
  text-align: center;
  font-family: Nunito;
  font-size: 40px;
  font-style: normal;
  font-weight: 600;
  line-height: 48px;
      margin-top: 0;
  margin-bottom: 20px;
}

#scientifically-backed_{{ section.id }} .scientific-subtitle {
  color: #333;
  max-width: 700px;
  margin: 0 auto;
  font-weight: 400;
  font-size: 20px;
  line-height: 1.3;
  letter-spacing: 0.32px;
  text-align: center;
  vertical-align: middle;
  font-family: 'nunito';
}

#scientifically-backed_{{ section.id }} .scientific-slider {
  margin: 0 auto;
  display: flex;
  overflow-x: auto;
  gap: 1rem;
  padding-bottom: 1rem;
  scroll-snap-type: x mandatory;
  -ms-overflow-style: none;
  scrollbar-width: none;
}

#scientifically-backed_{{ section.id }} span.scientific-icon svg {
  height: 20px;
}
#scientifically-backed_{{ section.id }} .scientific-card:hover {
 border:1px solid #006a91;
}
#scientifically-backed_{{ section.id }} .scientific-card {
  background-color: #f4f0eb;
  border-radius: 12px;
  padding: 30px 24px;
  margin: 10px;
  text-align: left;
  position: relative;
  flex: 0 0 380px;
  box-shadow: 0 4px 4px rgba(0, 0, 0, 0.1);
  overflow: hidden;
      border: 1px solid #00000000;
}

#scientifically-backed_{{ section.id }} .scientific-quote-text {
  color: #3f3f3f;
  margin: 15px 0;
  font-weight: 300;
  font-size: 19px;
  line-height: 1.3;
  letter-spacing: -0.63px;
  font-family: 'Poppins';
}

#scientifically-backed_{{ section.id }} .scientific-quote-icon img {
  width: 70px;
  margin-left: 0;
}
#scientifically-backed_{{ section.id }} .scientific-note:hover{
 text-decoration: underline;
}
#scientifically-backed_{{ section.id }} .scientific-note {
  display: block;
    margin-top: 5px;
    font-style: normal;
    line-height: 1.4;
    letter-spacing: -0.108px;
    color: #086b92;
     text-decoration: none;
    font-weight: 400;
    font-size: 16px;
  
}

#scientifically-backed_{{ section.id }} .slick-dots {
  margin-top: 30px;
}

#scientifically-backed_{{ section.id }} .slick-dots li button:before {
  color: #00587A;
}

/* Tablet */
@media (max-width: 1025px) {
  #scientifically-backed_{{ section.id }} h2.scientific-title {
    margin-bottom: 20px;
    color: #374650;
    font-size: 28px;
    font-weight: 700;
    line-height: 1.2;
    letter-spacing: 0.68px;
  }

  #scientifically-backed_{{ section.id }} .scientific-subtitle {
    font-size: 16px;
    line-height: 1.5;
  }
}

/* Mobile */
@media (max-width: 769px) {
  #scientifically-backed_{{ section.id }} h2.scientific-title {
    font-size: 28px;
    line-height: 48px;
  }

  #scientifically-backed_{{ section.id }} .scientific-header {
    margin-bottom: 20px;
  }

  #scientifically-backed_{{ section.id }} .scientific-quote-text {
    font-size: 18px;
    line-height: 1.3;
  }

  #scientifically-backed_{{ section.id }} .scientific-quote-icon img {
    width: 50px;
  }

  #scientifically-backed_{{ section.id }} .scientific-slider {
    gap: 0;
  }

  #scientifically-backed_{{ section.id }} .scientific-card {
    padding: 20px;
    flex: 0 0 310px;
  }
  #scientifically-backed_{{ section.id }} {
padding:10px 0px 25px;
    background:linear-gradient(223deg, #FFF 0%, #FEF8E8 100%);
  }
}
</style>
{% endif %}

<!-- Slick JS and Init (UNCOMMENT and include in theme.liquid or section template) -->
{%- comment -%}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

<script>
  $(document).ready(function(){
    $('#scientifically-backed_{{ section.id }} .scientific-slider').slick({
      dots: false,
      arrows: false,
      infinite: true,
      slidesToShow: 3,
      slidesToScroll: 1,
      responsive: [
        {
          breakpoint: 1024,
          settings: {
            slidesToShow: 2.2
          }
        },
        {
          breakpoint: 768,
          settings: {
            slidesToShow: 2,
            slidesToScroll: 1,
            autoplay: true,
            autoplaySpeed: 2000,
            infinite: true
          }
        },
        {
          breakpoint: 500,
          settings: {
            slidesToShow: 1.2,
            slidesToScroll: 1,
            autoplay: true,
            autoplaySpeed: 2000,
            infinite: true
          }
        }
      ]
    });
  });
</script>
{%- endcomment -%}

