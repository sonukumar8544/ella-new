<!-- scientific-slider-thirdO -->
    {% assign science_content = product.metafields.custom.product_3_0_science_slider.value %}
    {% if science_content != blank  %}
    <section class="scientific-section" id="scientifically-backed_{{ section.id }}">
    <div class="container">
       {% for block in science_content %}
    <div class="scientific-header">
    {% if block.scientific_main_title != blank %} <h2 class="scientific-title">{{ block.scientific_main_title }}</h2> {% endif %}
    {% if block.scientific_main_description != blank %} <p class="scientific-subtitle">{{ block.scientific_main_description }}</p>{% endif %}
    </div>
    {% endfor %}
    <div class="scientific-slider">
    
    {% for block in science_content %}
    <div class="scientific-card">
    {% if block.scientific_card_image_url != blank %}   <div class="scientific-quote-icon">
    <img src="{{ block.scientific_card_image_url }}" alt="" title="" width="" height=""></div>{% endif %}
    {% if block.scientific_card_content != blank %} 
    <p class="scientific-quote-text">
    {{ block.scientific_card_content }}
    </p>
    {% endif %}
    <div class="scientific-verified">
    
    {% if block.scientific_card_small_content != blank %}  <a href="{{ block.scientific_card_link }}" class="scientific-note">{{ block.scientific_card_small_content }}</p> {% endif %}
    </div>
    </div>
    {% endfor %}
    </div>
    </div>
    </section>
<style>
 #scientifically-backed_{{ section.id }} {
  background: linear-gradient(180deg, #FFF 0%, #FEF8E8 100%);
  padding: 50px 0px;
  text-align: center;
}

.scientific-header {
  margin-bottom: 40px;
}

#scientifically-backed_{{ section.id }} .scientific-title {
  letter-spacing: 0.68px;
  text-transform: capitalize;
  color: #086B92;
  text-align: center;
  font-family: Nunito;
  font-size: 40px;
  font-style: normal;
  font-weight: 600;
  line-height: 48px;
}

#scientifically-backed_{{ section.id }} .scientific-subtitle {
  color: #333;
  max-width: 700px;
  margin: 0 auto;
  font-weight: 400;
  font-size: 20px;
  line-height: 1.3;
  letter-spacing: 0.32px;
  text-align: center;
  vertical-align: middle;
  font-family: 'Poppins';
}

#scientifically-backed_{{ section.id }} .scientific-slider {
  margin: 0 auto;
  display: flex;
  overflow-x: auto;
  gap: 1rem;
  padding-bottom: 1rem;
  scroll-snap-type: x mandatory;
  -ms-overflow-style: none;
  scrollbar-width: none;
}

#scientifically-backed_{{ section.id }} span.scientific-icon svg {
  height: 20px;
}

#scientifically-backed_{{ section.id }} .scientific-card {
  background-color: #f4f0eb;
  border-radius: 12px;
  padding: 30px 24px;
  margin: 10px;
  text-align: left;
  position: relative;
  flex: 0 0 400px;
  box-shadow: 0 4px 4px rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

#scientifically-backed_{{ section.id }} .scientific-quote-text {
  color: #3f3f3f;
  margin: 15px 0;
  font-weight: 300;
  font-size: 22px;
  line-height: 1.2;
  letter-spacing: -0.63px;
  font-family: 'Poppins';
}

#scientifically-backed_{{ section.id }} .scientific-verified {
  color: #67646A;
  font-size: 17px;
  font-style: normal;
  font-weight: 500;
  line-height: 16.2px;
  letter-spacing: -0.126px;
}

#scientifically-backed_{{ section.id }} .scientific-icon {
  margin-right: 6px;
}

#scientifically-backed_{{ section.id }} .scientific-quote-icon img {
  width: 70px;
  margin-left: 0;
}

#scientifically-backed_{{ section.id }} .scientific-note {
  display: block;
  margin-top: 4px;
  color: #413D45;
  font-size: 10px;
  font-style: normal;
  font-weight: 500;
  line-height: 14.4px;
  letter-spacing: -0.108px;
}

/* Slick Dots */
#scientifically-backed_{{ section.id }} .slick-dots {
  margin-top: 30px;
}

#scientifically-backed_{{ section.id }} .slick-dots li button:before {
  color: #00587A;
}

/* Tablet */
@media (max-width: 1025px) {
#scientifically-backed_{{ section.id }} h2.scientific-title {
    margin-bottom: 20px;
    color: #374650;
    text-align: center;
    font-family: Nunito;
    font-size: 28px;
    font-style: normal;
    font-weight: 700;
    line-height: 1.2;
    letter-spacing: 0.68px;
    text-transform: capitalize;
    margin-top: 0;
  }

  #scientifically-backed_{{ section.id }} .scientific-subtitle {
    font-size: 16px;
    line-height: 1.5;
  }
}

/* Mobile */
@media (max-width: 768px) {
 #scientifically-backed_{{ section.id }} h2.scientific-title {
    letter-spacing: 0.68px;
    text-transform: capitalize;
    color: #086B92;
    text-align: center;
    font-family: Nunito;
    font-size: 28px;
    font-style: normal;
    font-weight: 600;
    line-height: 48px;
  }
#scientifically-backed_{{ section.id }} .scientific-header {
    margin-bottom: 20px;
}
 #scientifically-backed_{{ section.id }} .scientific-quote-text {
    color: #3f3f3f;
    margin: 15px 0;
    font-weight: 400;
    font-size: 18px;
    line-height: 1.3;
    letter-spacing: -0.63px;
  }

  #scientifically-backed_{{ section.id }} .scientific-quote-icon img {
    width: 50px;
    margin-left: 0;
  }

  #scientifically-backed_{{ section.id }} .scientific-slider {
    gap: 0rem;
  }

 #scientifically-backed_{{ section.id }} .scientific-card {
    background-color: #f4f0eb;
    border-radius: 12px;
    padding: 20px 20px;
    margin: 10px;
    text-align: left;
    position: relative;
    flex: 0 0 310px;
  }
}

</style>

{% endif %}

