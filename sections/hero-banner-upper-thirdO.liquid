<!--hero-banner-upper-thirdO-->
{% assign benefitmetaobject = product.metafields.custom.custom.product_3_0_banner_details.value %}

{% if benefitmetaobject != blank %}
<section class="hero-section" id="{{ section.id }}" style="background: url({{ product_banner.subtitle }}) center/cover no-repeat;">
  <div class="hero-overlay">
    {% if product_banner.subtitle != blank %}
      <span class="subtitle">{{ product_banner.subtitle }}</span>
    {% endif %}
    
    {% if product_banner.title != blank %}
      <h2>{{ product_banner.title }}</h2>
    {% endif %}

    <ul class="benefits-list">
      {% if product_banner.list1 != blank %}
        <li><img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/image.svg?v=1752225814"> {{ product_banner.list1 }}</li>
      {% endif %}
      {% if product_banner.list2 != blank %}
        <li><img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/image.svg?v=1752225814"> {{ product_banner.list2 }}</li>
      {% endif %}
      {% if product_banner.list3 != blank %}
        <li><img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/image.svg?v=1752225814"> {{ product_banner.list3 }}</li>
      {% endif %}
      {% if product_banner.list4 != blank %}
        <li><img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/image.svg?v=1752225814"> {{ product_banner.list4 }}</li>
      {% endif %}
    </ul>

    <ul class="benefits-list">
      {% if product_banner.list11 != blank %}
        <li><img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/image.svg?v=1752225814"> {{ product_banner.list11 }}</li>
      {% endif %}
      {% if product_banner.list12 != blank %}
        <li><img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/image.svg?v=1752225814"> {{ product_banner.list12 }}</li>
      {% endif %}
      {% if product_banner.list13 != blank %}
        <li><img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/image.svg?v=1752225814"> {{ product_banner.list13 }}</li>
      {% endif %}
      {% if product_banner.list14 != blank %}
        <li><img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/image.svg?v=1752225814"> {{ product_banner.list14 }}</li>
      {% endif %}
    </ul>

    {% if product_banner.button_link != blank or product_banner.button != blank %}
      <a class="cta-button" href="{{ product_banner.button_link }}">
        {{ product_banner.button_title }}
      </a>
    {% endif %}
  </div>

  <div class="hero-images">
    {% if product_banner.small_image_1 != blank %}
      <img src="{{ product_banner.small_image_1 }}" alt="" class="small-img top-img">
    {% endif %}
    {% if product_banner.small_image_2 != blank %}
      <img src="{{ product_banner.small_image_2 }}" alt="" class="small-img bottom-img">
    {% endif %}
  </div>
</section>
{% endif %}

<style>
  .hero-section {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  
  height: 500px;
  padding: 40px;
  color: white;
  font-family: sans-serif;
  overflow: hidden;
}

.hero-overlay {
  background: rgba(0, 0, 0, 0.45);
  border-radius: 20px;
  padding: 30px 40px;
  max-width: 600px;
  backdrop-filter: blur(5px);
}

.subtitle {
  font-size: 14px;
  opacity: 0.8;
  display: block;
  margin-bottom: 10px;
}

.hero-overlay h1 {
  font-size: 32px;
  margin-bottom: 20px;
}

.benefits-list {
  list-style: none;
  padding: 0;
  margin: 0 0 15px;
  display: flex;
  gap: 20px;
  flex-wrap: wrap;
}

.benefits-list li {
  flex: 1 1 200px;
  padding-left: 20px;
  position: relative;
}

.benefits-list li::before {
  content: "âœ”";
  position: absolute;
  left: 0;
  color: #00baff;
}

.cta-button {
  background: linear-gradient(to right, #009ecf, #0077a6);
  border: none;
  padding: 12px 24px;
  border-radius: 50px;
  color: white;
  font-size: 16px;
  cursor: pointer;
}

.hero-images {
  position: absolute;
  right: 40px;
  bottom: 40px;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.small-img {
  width: 120px;
  height: auto;
  border-radius: 15px;
}

</style>

