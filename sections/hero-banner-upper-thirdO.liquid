<!--hero-banner-upper-thirdO-->
{% assign product_banner1 = product.metafields.custom.product_3_0_banner_details.value %}
{% if product_banner1 != blank %}
  {% for product_banner in product_banner1 %}
<section class="hero-section" id="cstm--hero-bannerthird">
  <div class="position_set_group">
    
    <!-- Left Text Content -->
    <div class="hero-overlay">
      {% if product_banner.subtitle != blank %}
        <span class="subtitle">{{ product_banner.subtitle }}</span>
      {% endif %}
      
      {% if product_banner.title != blank %}
        <h2>{{ product_banner.title }}</h2>
      {% endif %}
      
      <div class="banifit_grid_meta">
        <ul class="benefits-list">
          {% if product_banner.list1 != blank %}
            <li><img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/image.svg?v=1752225814" alt=""> {{ product_banner.list1 }}</li>
          {% endif %}
          {% if product_banner.list2 != blank %}
            <li><img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/image.svg?v=1752225814" alt=""> {{ product_banner.list2 }}</li>
          {% endif %}
          {% if product_banner.list3 != blank %}
            <li><img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/image.svg?v=1752225814" alt=""> {{ product_banner.list3 }}</li>
          {% endif %}
          {% if product_banner.list4 != blank %}
            <li><img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/image.svg?v=1752225814" alt=""> {{ product_banner.list4 }}</li>
          {% endif %}
        </ul>

        <ul class="benefits-list">
          {% if product_banner.list11 != blank %}
            <li><img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/image.svg?v=1752225814" alt=""> {{ product_banner.list11 }}</li>
          {% endif %}
          {% if product_banner.list12 != blank %}
            <li><img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/image.svg?v=1752225814" alt=""> {{ product_banner.list12 }}</li>
          {% endif %}
          {% if product_banner.list13 != blank %}
            <li><img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/image.svg?v=1752225814" alt=""> {{ product_banner.list13 }}</li>
          {% endif %}
          {% if product_banner.list14 != blank %}
            <li><img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/image.svg?v=1752225814" alt=""> {{ product_banner.list14 }}</li>
          {% endif %}
        </ul>
      </div>

      {% if product_banner.button_link != blank or product_banner.button_title != blank %}
        <a class="cta-button" href="{{ product_banner.button_link }}">{{ product_banner.button_title }}</a>
      {% endif %}
    </div>

    <!-- Right Images -->
    <div class="hero-images">
      <div class="banner_grid_image">
      <div class="right__image">
     {% if product_banner.small_image_0 != blank %}
        <img src="{{ product_banner.small_image_0 }}" alt="" class="small-img top-img">
      {% endif %}
      </div>
       <!-- <div class="right__image">
      {% if product_banner.small_image_1 != blank %}
        <img src="{{ product_banner.small_image_1 }}" alt="" class="small-img top-img">
      {% endif %}
      {% if product_banner.small_image_2 != blank %}
        <img src="{{ product_banner.small_image_2 }}" alt="" class="small-img bottom-img">
      {% endif %}
       </div> -->
      </div>
    </div>

  </div>
</section>
  {% endfor %}
{% endif %}


<style>
.hero-section {
  padding: 40px 20px;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.position_set_group {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: flex-start;
  gap: 30px;
}

/* LEFT: Text Box */
.hero-overlay {
  /* flex: 1 1 48%; */
  background-color: rgba(0, 0, 0, 0.5);
  padding: 30px;
  border-radius: 20px;
  color: #fff;
}

.subtitle {
  font-size: 18px;
  font-weight: 400;
  margin-bottom: 10px;
  display: block;
  color: #fff;
}

.hero-overlay h2 {
  font-size: 28px;
  font-weight: 600;
  margin: 10px 0;
  line-height: 1.3;
  color: #fff;
}

.banifit_grid_meta {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  margin-top: 20px;
}

ul.benefits-list {
  list-style: none;
  padding: 0;
  margin: 0;
  flex: 1 1 45%;
}

ul.benefits-list li {
  display: flex;
  align-items: center;
  font-size: 16px;
  font-weight: 700;
  color: #fff;
  margin-bottom: 15px;
  gap: 10px;
}

ul.benefits-list li img {
  width: 18px;
  height: 18px;
}

/* Button */
.cta-button {
  display: inline-block;
  margin-top: 20px;
  background: linear-gradient(to right, #009ecf, #0077a6);
  padding: 10px 24px;
  border-radius: 50px;
  font-size: 16px;
  font-weight: 500;
  color: #fff;
  text-decoration: none;
  transition: 0.3s ease;
}

.cta-button:hover {
  background: #fff;
  color: #000;
}

/* Responsive layout */
@media (max-width: 768px) {
  .position_set_group {
    flex-direction: column;
  }

  .hero-overlay, .hero-images {
    flex: 1 1 100%;
  }

  .banifit_grid_meta {
    flex-direction: column;
  }

  ul.benefits-list {
    flex: 1 1 100%;
  }

  .hero-images .small-img {
    max-width: 100%;
  }
}
</style>



