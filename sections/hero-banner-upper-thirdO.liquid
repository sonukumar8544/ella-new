<!--hero-banner-upper-thirdO-->
{% assign product_banner1 = product.metafields.custom.product_3_0_banner_details.value %}
{% if product_banner1 != blank %}
  {% for product_banner in product_banner1 %}
<section class="hero-section" id="cstm--hero-bannerthird">
  <div class="position_set_group container">
    <div class="hero-overlay">
      {% if product_banner.subtitle != blank %}
        <span class="subtitle">{{ product_banner.subtitle }}</span>
      {% endif %}
      
      {% if product_banner.title != blank %}
        <h2>{{ product_banner.title }}</h2>
      {% endif %}
      
      <div class="banifit_grid_meta">
        <ul class="benefits-list first">
          {% if product_banner.list1 != blank %}
            <li><img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/image.svg?v=1752585103" alt=""> {{ product_banner.list1 }}</li>
          {% endif %}
          {% if product_banner.list2 != blank %}
            <li><img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/image.svg?v=1752585103" alt=""> {{ product_banner.list2 }}</li>
          {% endif %}
          {% if product_banner.list3 != blank %}
            <li><img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/image.svg?v=1752585103" alt=""> {{ product_banner.list3 }}</li>
          {% endif %}
          {% if product_banner.list4 != blank %}
            <li><img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/image.svg?v=1752585103" alt=""> {{ product_banner.list4 }}</li>
          {% endif %}
        </ul>

        <ul class="benefits-list second">
          {% if product_banner.list11 != blank %}
            <li><img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/image.svg?v=1752585103" alt=""> {{ product_banner.list11 }}</li>
          {% endif %}
          {% if product_banner.list12 != blank %}
            <li><img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/image.svg?v=1752585103" alt=""> {{ product_banner.list12 }}</li>
          {% endif %}
          {% if product_banner.list13 != blank %}
            <li><img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/image.svg?v=1752585103" alt=""> {{ product_banner.list13 }}</li>
          {% endif %}
          {% if product_banner.list14 != blank %}
            <li><img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/image.svg?v=1752585103" alt=""> {{ product_banner.list14 }}</li>
          {% endif %}
        </ul>
      </div>

      {% if product_banner.button_link != blank or product_banner.button_title != blank %}
        <a class="cta-button" href="{{ product_banner.button_link }}">{{ product_banner.button_title }}</a>
      {% endif %}
    </div>
    <div class="hero-images">
      <div class="banner_grid_image">
      <div class="right__image">
     {% if product_banner.small_image_0 != blank %}
        <img src="{{ product_banner.small_image_0 }}" alt="" class="small-img top-img">
      {% endif %}
      </div>
       <!-- <div class="right__image">
      {% if product_banner.small_image_1 != blank %}
        <img src="{{ product_banner.small_image_1 }}" alt="" class="small-img top-img">
      {% endif %}
      {% if product_banner.small_image_2 != blank %}
        <img src="{{ product_banner.small_image_2 }}" alt="" class="small-img bottom-img">
      {% endif %}
       </div> -->
      </div>
    </div>

  </div>
</section>
  {% endfor %}
{% endif %}


<style>
.hero-section {
  padding: 40px 20px;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.position_set_group {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 20px;
    /* width: 1100px; */
}
  .hero-overlay,
  .hero-images {
    width: 48%;
}

/* LEFT: Text Box */
.hero-overlay {
  padding: 0px 12px 0px;
}
.banner_grid_image img.small-img.top-img {
    width: 500px;
    margin-left: 0;
}
  
.subtitle {
    margin-bottom: 10px;
    display: block;
    color: #086B92;
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
}
.hero-overlay h2 {
 color: #374650;
font-family: Nunito;
font-size: 36px;
font-style: normal;
font-weight: 500;
line-height: 1.3;
letter-spacing: -0.32px;
  padding: 0px 132px 0px 0px;
  margin-top:20px;
}

.banifit_grid_meta {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  margin-top: 20px;
}

ul.benefits-list {
  list-style: none;
  padding: 0;
  margin: 0;
  flex: 1 1 45%;
}

ul.benefits-list li {
    display: flex;
    align-items: center;
    margin-bottom: 25px;
    gap: 10px;
    color: #5E5E5E;
    font-family: Nunito;
    font-size: 18px;
    font-style: normal;
    font-weight: 600;
    line-height: 1.4;
    text-transform: capitalize;
}

ul.benefits-list li img {
  width: 24px;
  height: 24px;
}

/* Button */
.cta-button {
    display: inline-block;
    margin-top: 15px;
    padding: 20px 24px;
    text-decoration: none;
    border-radius: 40px;
    background: #086B92;
    color: #FFF;
    font-family: Lato;
    font-size: 19px;
    font-style: normal;
    font-weight: 500;
    line-height: 7px;
    height: 50px;
}

.cta-button:hover {
  background: #fff;
  color: #000;
}
@media (max-width: 1024px) {
.hero-overlay h2{
  font-size: 28px;
      padding: 0px 0px 0px 0px;
  line-height: 110%;
}
  .position_set_group{
    gap: 0px;
  }
  .hero-section {
    padding: 40px 0px;
  }
  ul.benefits-list li {
    display: flex;
    align-items: center;
    margin-bottom: 25px;
  }
  .banner_grid_image img.small-img.top-img {
    width: auto;
    margin-left: 0;
}
}
/* Responsive layout */
@media (max-width: 800px) {
  .position_set_group {
    flex-direction: column;
  }
  .hero-overlay,
  .hero-images {
    width: 100%;
}
  .hero-overlay {
    margin-bottom: 30px;
}

  .hero-overlay, .hero-images {
    flex: 1 1 100%;
  }

  .banifit_grid_meta {
    flex-direction: column;
  }

  ul.benefits-list {
    flex: 1 1 100%;
  }

  .hero-images .small-img {
    max-width: 100%;
  }
}
  @media(max-width: 600px){
        .hero-section {
        padding: 10px 0px 40px 0px;
    }
        ul.benefits-list li {
        padding: 12px 0px;
        margin-bottom: auto;
        color: #5E5E5E;
        font-family: Nunito;
        font-size: 13.966px;
        font-style: normal;
        font-weight: 600;
        line-height: 120%;
        text-transform: capitalize;
          border-bottom: 0.776px solid rgba(45, 35, 26, 0.15);
    }
    ul.benefits-list.second li:first-child {
    padding-top: 0;
}
    ul.benefits-list.first li:last-child {
    padding-bottom: 0;
}
  }
</style>


