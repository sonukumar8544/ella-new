<!-- scientific-slider-thirdO -->
{% assign testimonial_slider_review = product.metafields.custom.product_3_0_testimonial_slider_review.value %}

{% if testimonial_slider_review  != blank %}
<section class="testimonial-third" id="testimonial-third-{{ section.id }}">
  <div class="container">
      <div class="faq__header">
        {% if section.settings.titlefaq != blank %}
          <h2 class="faq_title">{{ section.settings.titlefaq }}</h2>
        {% endif %}
      </div>
    <div class="testimonial_slider_third">
      {% for block in testimonial_slider_review  %}
        <div class="testimonial-card-third">
              <article class="review-card" aria-label="Amazon customer review">
                <div class="review-card__icon" aria-hidden="true">{{  }}</div>
            
                <header>
                  <div class="review-card__rating" aria-label="5 star rating"></div>
                  <h2 class="review-card__title">{{  }}</h2>
                </header>
                  <p class="review-card__text">
                  {{  }}
                </p>
                <footer>
                  <p class="review-card__author">{{  }}</p>
                </footer>
              </article>
        </div>
      {% endfor %}
    </div>
  </div>
 </section>

<style>
    #testimonial-third-{{ section.id }} {
    background: linear-gradient(180deg, #f8f8f8 0%, #FEF8E8 100%);
    padding: 50px 0px;
    text-align: center;
    }
    
    .faq__header {
    margin-bottom: 20px;
    }
    
    #testimonial-third-{{ section.id }} .faq_title {
    letter-spacing: 0.68px;
    text-transform: capitalize;
    color: #086B92;
    text-align: center;
    font-family: Nunito;
    font-size: 32px;
    font-style: normal;
    font-weight: 600;
    line-height: 48px;
    margin-top: 0;
    margin-bottom: 20px;
    }
    
    #testimonial-third-{{ section.id }} .testimonial_slider_third {
    margin: 0 auto;
    display: flex;
    overflow-x: auto;
    gap: 1rem;
    padding-bottom: 2.5rem;
    scroll-snap-type: x mandatory;
    -ms-overflow-style: none;
    scrollbar-width: none;
    }
    #testimonial-third-{{ section.id }} .slick-active button {
    border-radius: 30px;
    width: 22px;
    height: 8px;
    }
    #testimonial-third-{{ section.id }} .slick-dots li,
    #testimonial-third-{{ section.id }} .slider-dots li{
    margin: 0px 3px;
    }
    
  
  
    #testimonial-third-{{ section.id }} .slick-dots {
    margin-top: 30px;
    }
    
    .slick-dots li button:before {
    color: #00587A;
    }
    #testimonial-third-{{ section.id }}  .slick-dots, 
    #testimonial-third-{{ section.id }} .slider-dots{
    bottom: -5px;
    }

  
/* Tablet */
@media (max-width: 1025px) {
    #testimonial-third-{{ section.id }} h2.faq_title {
    margin-bottom: 20px;
    color: #374650;
    font-size: 28px;
    font-weight: 700;
    line-height: 1.2;
    letter-spacing: 0.68px;
    }

}

/* Mobile */
@media (max-width: 769px) {
    #testimonial-third-{{ section.id }} h2.faq_title {
    font-size: 28px;
    line-height: 48px;
    }
    
    #testimonial-third-{{ section.id }} .faq__header {
    margin-bottom: 20px;
    }
    
    #testimonial-third-{{ section.id }} .testimonial_slider_third {
    gap: 0;
    }
    
   
    #testimonial-third-{{ section.id }} {
    padding:10px 0px 25px;
    background:linear-gradient(223deg, #FFF 0%, #FEF8E8 100%);
    }
}
  @media(max-width: 550px){
   
  }
</style>
{% endif %}

<script>
  $(document).ready(function(){
    $('#testimonial-third{{ section.id }} .testimonial_slider_third').slick({
      dots: false,
      infinite: true,
      arrows: false,
      speed: 700,
      autoplay: true,
      autoplaySpeed: 3000,
      slidesToShow: 3,
      slidesToScroll: 1,
      responsive: [
        {
          breakpoint: 1024,
          settings: {
            slidesToShow: 2.2
          }
        },
        {
          breakpoint: 768,
          settings: {
            slidesToShow: 2,
            slidesToScroll: 1,
            autoplay: true,
            autoplaySpeed: 2000,
            infinite: true
          }
        },
        {
          breakpoint: 500,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1,
            autoplay: true,
            autoplaySpeed: 2000,
            infinite: true,
             dots: true,
          }
        }
      ]
    });
  });
</script>

{% schema %}
{
  "name": "Meta FAQ's 3.0",
  "settings": [
    {
      "type": "text",
      "id": "titlefaq",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    }
  ],
  "presets": [
    {
      "name": "Meta FAQ's 3.0"
    }
  ]
}
{% endschema %}
