<div class="two-column-section image-with-point">
  <div class="container">
    {% for block in section.blocks %}
      <div id="row-bullet-points" class="row{% if block.settings.bullet_points %} bullet-points{% endif %}">
        <div class="left-column{% if block.settings.bullet_points %} left-coloumn-bullet {% endif %}">
          <div class="title">{{ block.settings.pdp_two_heading }}</div>
          <div class="usebg-image{% if block.settings.bullet_points %} image-banner-bullet {% endif %}">
            <div class="subtitle">{{ block.settings.pdp_two_Subtitle }}</div>
            <div class="description {% if block.settings.bullet_points %} description-bullet {% endif %}">
              {% if block.settings.pdp_two_content != blank %}
                {{ block.settings.pdp_two_content }}
              {% endif %}
              {% if block.settings.pdp_two_bullet1h != blank %}
                <div class="wrapper">
                  <ul class="StepProgress">
                    <li class="StepProgress-item is-done">
                      <strong>{{ block.settings.pdp_two_bullet1h }}</strong>
                      <p>{{ block.settings.pdp_two_bullet1t }}</p>
                    </li>
                    <li class="StepProgress-item is-done">
                      <strong>{{ block.settings.pdp_two_bullet2h }}</strong>
                      <p>{{ block.settings.pdp_two_bullet2t }}</p>
                    </li>

                    <li class="StepProgress-item is-done">
                      <strong>{{ block.settings.pdp_two_bullet3h }}</strong>
                      <p>{{ block.settings.pdp_two_bullet3t }}</p>
                    </li>
                  </ul>
                </div>
              {% endif %}
            </div>
            {% if block.settings.button_text != blank %}
              <div class="button-wrapper">
                <a href="{{ block.settings.button_link }}" class="btn">{{ block.settings.button_text }}</a>sonu
              </div>
            {% endif %}
          </div>
        </div>
        <div class="right-column">
            {% comment %} <div class="title">{{ block.settings.pdp_two_heading }}</div> {% endcomment %}
          <img
            class="body-target-image"
            src="{{ block.settings.background_image |  image_url: width: master  }}"
            alt="{{ block.settings.background_image.alt }}"
            width="master"
            height="master">
        </div>
      </div>


      <div class="about-two-col-section-small">
        <div class="small-title-bottom">
          <div class="title">{{ block.settings.pdp_two_heading }}</div>
        </div>
        <div class="bottom-mob-imgae">
          <img
            class="body-target-image"
            src="{{ block.settings.background_image |  image_url: width: master  }}"
            alt="{{ block.settings.background_image.alt }}"
            width="master"
            height="master">
        </div>
        <div class="small-img-bg-mobile">
          {{ block.settings.pdp_two_content }}
        </div>
      </div>
    {% endfor %}
  </div>
</div>
{% if section.settings.background_image != blank %}
  {% style %}
    .usebg-image::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 12px;
    background-image: url('{{ section.settings.background_image | img_url: 'master' }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    opacity: 0.35;
    z-index: 0;
  }
{% endstyle %}
{% endif %}
{% schema %}
  {
    "name": "Two Column Sec",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link",
        "default": "/"
      }
    ],
    "blocks": [
      {
        "name": "pdp image section",
        "type": "padpImage",
        "settings": [
          {
            "type": "text",
            "id": "pdp_two_heading",
            "label": "Heading"
          },
          {
            "type": "textarea",
            "id": "handle",
            "label": "Enter product handle",
            "info": "shows only on selected product handles"
          },
          {
            "type": "text",
            "id": "pdp_two_Subtitle",
            "label": "Subtitle"
          },
          {
            "type": "textarea",
            "id": "pdp_two_content",
            "label": "Content"
          }, {
            "type": "text",
            "id": "pdp_two_bullet1h",
            "label": "Bullet 1 Heading"
          }, {
            "type": "text",
            "id": "pdp_two_bullet1t",
            "label": "Bullet 1 text"
          }, {
            "type": "text",
            "id": "pdp_two_bullet2h",
            "label": "Bullet 2 Heading"
          }, {
            "type": "text",
            "id": "pdp_two_bullet2t",
            "label": "Bullet 2 text"
          }, {
            "type": "text",
            "id": "pdp_two_bullet3h",
            "label": "Bullet 3 Heading"
          }, {
            "type": "text",
            "id": "pdp_two_bullet3t",
            "label": "Bullet 3 text"
          }, {
            "type": "image_picker",
            "id": "background_image",
            "label": "Background Image"
          }, {
            "type": "text",
            "id": "button_text",
            "label": "Button text"
          }, {
            "type": "url",
            "id": "button_link",
            "label": "Button Link",
            "default": "/"
          }, {
            "type": "checkbox",
            "id": "bullet_points",
            "label": "swap section"
          }
        ]
      }
    ],

    "presets": [
      {
        "name": "Two Column sec"
      }
    ]
  }
{% endschema %}

