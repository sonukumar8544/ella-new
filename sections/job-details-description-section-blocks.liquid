                      {%- assign items = block.settings.list_2 | newline_to_br | split: '<br />' -%}
                      {%- for item in items -%}
                        {%- if item != blank -%}
                          <li class="job-details-blocks__list-item">
                            <img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/svg_3.svg?v=1765964441" alt="" class="job-details-blocks__icon" loading="lazy" width="14" height="14">
                            <span>{{ item | strip }}</span>
                          </li>
                        {%- endif -%}
                      {%- endfor -%}
                    </ul>
                  {%- endif -%}
                </div>
              {%- endif -%}

              {%- if block.settings.subtitle_3 != blank -%}
                <div class="job-details-blocks__subsection">
                  <h3 class="job-details-blocks__subheading">{{ block.settings.subtitle_3 }}</h3>
                  {%- if block.settings.list_3 != blank -%}
                    <ul class="job-details-blocks__list">
                      {%- assign items = block.settings.list_3 | newline_to_br | split: '<br />' -%}
                      {%- for item in items -%}
                        {%- if item != blank -%}
                          <li class="job-details-blocks__list-item">
                            <img src="https://cdn.shopify.com/s/files/1/0735/8172/3944/files/svg_3.svg?v=1765964441" alt="" class="job-details-blocks__icon" loading="lazy" width="14" height="14">
