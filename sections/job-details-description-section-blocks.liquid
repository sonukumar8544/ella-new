            </div>

          {%- when 'ready_to_apply' -%}
            <div class="job-details-blocks__section job-details-blocks__section--apply" {{ block.shopify_attributes }}>
              {%- if block.settings.title != blank -%}
                <h2 class="job-details-blocks__heading">{{ block.settings.title }}</h2>
              {%- endif -%}
              {%- if block.settings.description != blank -%}
                <p class="job-details-blocks__apply-desc">{{ block.settings.description }}</p>
              {%- endif -%}
              <div class="job-details-blocks__apply-buttons">
                <a href="https://wellnessextract.com/pages/marketing-lead" class="job-details-blocks__apply-btn" aria-label="Apply now">{{ block.settings.apply_button_text }}</a>
                <button type="button" class="job-details-blocks__save-btn" data-share-btn aria-label="Save for later">{{ block.settings.save_button_text }}</button>
              </div>
              {%- if block.settings.footer_text != blank -%}
                <p class="job-details-blocks__apply-footer">{{ block.settings.footer_text }}</p>
              {%- endif -%}
              <span class="job-details-blocks__apply-footer-email">
                <a href="mailto:hr@wellnessextract.com">hr@wellnessextract.com</a>
              </span>
            </div>

          {%- when 'similar_positions' -%}
            <div class="job-details-blocks__section" {{ block.shopify_attributes }}>
              {%- if block.settings.title != blank -%}
                <h2 class="job-details-blocks__heading">{{ block.settings.title }}</h2>
              {%- endif -%}
              <div class="job-details-blocks__similar">
                {%- assign job_count = 0 -%}
                {%- for i in (1..6) -%}
                  {%- assign job_title_key = 'job_title_' | append: i -%}
                  {%- if block.settings[job_title_key] != blank -%}
                    {%- assign job_count = job_count | plus: 1 -%}
                  {%- endif -%}
                {%- endfor -%}
                {%- for i in (1..6) -%}
                  {%- assign job_title_key = 'job_title_' | append: i -%}
                  {%- assign job_details_key = 'job_details_' | append: i -%}
                  {%- assign job_link_key = 'job_link_' | append: i -%}
                  {%- assign job_tag_key = 'job_tag_' | append: i -%}
                  {%- if block.settings[job_title_key] != blank -%}
                    <a href="{{ block.settings[job_link_key] | default: '#' }}" class="job-details-blocks__similar-item {% if i > 3 %}job-details-blocks__similar-item--hidden{% endif %}">
                      <h3 class="job-details-blocks__similar-title">{{ block.settings[job_title_key] }}</h3>
                      {%- if block.settings[job_details_key] != blank -%}
                        <p class="job-details-blocks__similar-details">{{ block.settings[job_details_key] }}</p>
                      {%- endif -%}
                      <span class="job-details-blocks__similar-tag">{{ block.settings[job_tag_key] | default: 'Full-time' }}</span>
                    </a>
                  {%- endif -%}
                {%- endfor -%}
                {%- if block.settings.view_all_text != blank and job_count > 3 -%}
                  <button type="button" class="job-details-blocks__view-all-btn" data-view-all-btn>{{ block.settings.view_all_text }}</button>
                {%- endif -%}
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

<script>
  (function() {
    const shareButtons = document.querySelectorAll('[data-share-btn]');
    shareButtons.forEach(function(btn) {
      btn.addEventListener('click', function() {
        const url = window.location.href;
        const title = document.querySelector('h1')?.textContent || 'Job Listing';
        
        if (navigator.share) {
          navigator.share({
            title: title,
            text: 'Check out this job opportunity',
            url: url
          }).catch(function(err) {
            console.log('Error sharing:', err);
          });
        } else {
          navigator.clipboard.writeText(url).then(function() {
            alert('Job link copied to clipboard!');
          }).catch(function() {
            const emailSubject = encodeURIComponent(title);
            const emailBody = encodeURIComponent('Check out this job: ' + url);
            window.location.href = 'mailto:?subject=' + emailSubject + '&body=' + emailBody;
          });
        }
      });
    });

    // View All toggle functionality
    const viewAllButtons = document.querySelectorAll('[data-view-all-btn]');
    viewAllButtons.forEach(function(btn) {
      btn.addEventListener('click', function() {
        const similarSection = btn.closest('.job-details-blocks__similar');
        if (!similarSection) return;
        
        const hiddenItems = similarSection.querySelectorAll('.job-details-blocks__similar-item--hidden');
        hiddenItems.forEach(function(item) {
          item.classList.remove('job-details-blocks__similar-item--hidden');
        });
        
        btn.style.display = 'none';
      });
    });
  })();
</script>

