                  {%- assign value_key = 'value_' | append: i -%}
                  {%- if block.settings[label_key] != blank -%}
                    <div class="job-details-blocks__highlight-item">
                      <span class="job-details-blocks__highlight-label">{{ block.settings[label_key] }}</span>
                      <span class="job-details-blocks__highlight-value">{{ block.settings[value_key] }}</span>
                    </div>
                  {%- endif -%}
