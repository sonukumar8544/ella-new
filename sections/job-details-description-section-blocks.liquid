              {%- endif -%}
              <div class="job-details-blocks__grid">
                {%- for i in (1..4) -%}
                  {%- assign title_key = 'card_title_' | append: i -%}
                  {%- assign desc_key = 'card_desc_' | append: i -%}
                  {%- assign icon_key = 'card_icon_' | append: i -%}
                  {%- if block.settings[title_key] != blank -%}
                    <div class="job-details-blocks__card">
