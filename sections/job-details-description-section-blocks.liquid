                              </svg>
                          {%- endcase -%}
                        {%- endif -%}
                      </div>
                      <div class="what-we-offer-icons-container">
                      <h3 class="job-details-blocks__card-title">{{ block.settings[title_key] }}</h3>
                      {%- if block.settings[desc_key] != blank -%}
                        <p class="job-details-blocks__card-desc">{{ block.settings[desc_key] }}</p>
                      {%- endif -%}
                      </div>
                    </div>
                  {%- endif -%}
                {%- endfor -%}
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>

    <div class="job-details-blocks__sidebar">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'job_highlights' -%}
            <div class="job-details-blocks__section" {{ block.shopify_attributes }}>
              {%- if block.settings.title != blank -%}
                <h2 class="job-details-blocks__heading">{{ block.settings.title }}</h2>
              {%- endif -%}
              <div class="job-details-blocks__highlights">
                {%- for i in (1..6) -%}
