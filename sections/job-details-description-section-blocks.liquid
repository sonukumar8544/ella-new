<div class="job-details-blocks">
  <div class="job-details-blocks__container">
    <div class="job-details-blocks__main">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'about_role' -%}
            <div class="job-details-blocks__section job-details-blocks__section--about-role" {{ block.shopify_attributes }}>
              {%- if block.settings.title != blank -%}
                <h2 class="job-details-blocks__heading">{{ block.settings.title }}</h2>
              {%- endif -%}
              {%- if block.settings.description != blank -%}
                <div class="job-details-blocks__description">
                  {{ block.settings.description }}
                </div>
              {%- endif -%}
              {%- if block.settings.key_points != blank -%}
                <ul class="job-details-blocks__list">
                  {%- assign key_points = block.settings.key_points | newline_to_br | split: '<br />' -%}
                  {%- for point in key_points -%}
                    {%- if point != blank -%}
