{% schema %}
{
  "name": "bundle info img",
  "tag": "section",
  "settings": [],
  "presets": [
    {
      "name": "bundle information image",
      "category": "Image"
    }
  ]
}
{% endschema %}

{% if product.handle contains 'bundle' %}
  {% if product.metafields.Custom.we_product_info_image_desktop %}
    <section class="bundle-banner container">
      {% if product.handle contains 'bundle' %}
        {% if product.metafields.Custom.we_product_info_image_desktop %}
          <section class="bundle-banner container">
            {% assign bundle_product_meta_table = product.metafields.custom.bundle_product_meta_table.value %}
            {% render 'product-table-dynamic', bundle_product_meta_table: bundle_product_meta_table %}
          </section>
        {% endif %}
      {% endif %}
    </section>
  {% endif %}
{% endif %}

<style>
  .bundle-image-desktop-new {
      margin-top: 50px;
  }

    @media (min-width: 769px) {
      .nundle-image-bobile-new {
        display: none;
      }
    }

    @media (max-width: 768px) {
      .bundle-image-desktop-new {
        display: none;
      }
    }
</style>
